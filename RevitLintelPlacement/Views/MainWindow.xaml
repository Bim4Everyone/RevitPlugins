<Window x:Class="RevitLintelPlacement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitLintelPlacement.Views"
        xmlns:vm="clr-namespace:RevitLintelPlacement.ViewModels"
        mc:Ignorable="d"
        Title="Перемычки" Height="650" Width="1150"
        MinHeight="650" MinWidth="1150"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" >
            <Button>настройки</Button>
            <Separator></Separator>
            <Button Command="{Binding PlaceLintelCommand}"> расставить </Button>
            <Separator/>
            <Button > удалить</Button>
            <Separator/>
            <Button > обновить</Button>
        </ToolBar>
        <TabControl Grid.Row="1" Margin="0,5">
            <TabItem Header="Правила">
                <!--<local:RulesTabView DataContext="{Binding Rules}"/>-->
                <local:GroupedRulesView DataContext="{Binding GroupedRules}"/>
            </TabItem>
            <TabItem  Header="Перемычки">
                <local:LintelsTabView DataContext="{Binding Lintels}"/>
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="2" Height="30" HorizontalAlignment="Stretch">
            <ProgressBar Width="200" Height="25" Margin="5,0"></ProgressBar>
        </StatusBar>
    </Grid>
</Window>
