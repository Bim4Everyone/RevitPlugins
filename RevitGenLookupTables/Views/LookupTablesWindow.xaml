<Window x:Class="RevitGenLookupTables.Views.LookupTablesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitGenLookupTables.Views"
        mc:Ignorable="d"
        Title="LookupTablesWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ListView Grid.Column="0" ItemsSource="{Binding FamilyParams}">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Наименование"  DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Метаданные колонки" DisplayMemberBinding="{Binding ColumnMetaData}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <GridSplitter Grid.Column="1" ResizeDirection="Columns" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="3"/>
        <local:ParamValuesView Grid.Column="2" Margin="10"/>
    </Grid>
</Window>
