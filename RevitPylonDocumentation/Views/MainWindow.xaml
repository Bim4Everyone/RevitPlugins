<base:PlatformWindow
    x:Class="RevitPylonDocumentation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views"
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Title="MainWindow"
    
    AllowsTransparency="True"
    WindowStyle="None"
    Background="Transparent"    
    Height="550" MinHeight="550" MaxHeight="550"
    Width="700" MinWidth="700" MaxWidth="700"
    
    

    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}"
    x:Name="window"
    Loaded="window_Loaded">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml"/>
                <ResourceDictionary Source="TooltipsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>



    <Border CornerRadius="10" BorderBrush="Black" BorderThickness="1" Padding="6" Background="White">
        <Grid Background="White" MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Canvas 
                Grid.Column="1" 
                Width="{Binding ActualWidth, ElementName=expander}" 
                Panel.ZIndex="1"
                Margin="0 35 10 0">
                <Expander 
                    x:Name="expander"
                    ExpandDirection="Down"
                    FlowDirection="RightToLeft"
                    Background="White"
                    BorderThickness="1"
                    BorderBrush="Gray" 
                    Padding="3">

                    <Expander.Header>
                        <TextBlock 
                            Text="Настройки"
                            Style="{StaticResource TextBlockWithTooltipStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock 
                                        Text="Перечень настроек плагина. После внемения изменений нажмите кнопку &quot;Применить&quot; внизу." 
                                        TextWrapping="Wrap"
                                        Width="300"
                                        TextAlignment="Justify"
                                        FlowDirection="LeftToRight"/>
                                </ToolTip>
                            </TextBlock.ToolTip>
                    </TextBlock>
                    </Expander.Header>

                    
                    
                    <Grid FlowDirection="LeftToRight">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <GroupBox Margin="5 0 5 10">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Параметры пилона"
                                            ToolTip="Параметры, принадлежащие опалубочному элементу пилона"/>
                                    </GroupBox.Header>
                                    
                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр марки пилона">
                                            
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource MarkParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.MarkTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource MarkParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр комплекта документации пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PjSectionParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.ProjectSectionTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PjSectionParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>
                                            
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр фильтрации типовых пилонов">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TypicalPylonFilterParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.TypicalPylonFilterParameterTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TypicalPylonFilterParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Значение параметра фильтрации типовых пилонов">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TypicalPylonFilterValueStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.TypicalPylonFilterValueTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TypicalPylonFilterValueStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>

                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр длины сечения пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PylonLengthParamNameStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.PylonLengthParamNameTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PylonLengthParamNameStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>

                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр ширины сечения пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PylonWidthParamNameStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ProjectSettings.PylonWidthParamNameTemp, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource PylonWidthParamNameStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
                                    </StackPanel>
                                </GroupBox>


                                <GroupBox Margin="5 0 5 10">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Параметры проекта"
                                            ToolTip="Параметры, относящиеся к проекту, в котором вы работаете"/>
                                    </GroupBox.Header>
                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для группировки диспетчера 1">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource DispGroupingFirstParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.DispatcherGroupingFirstTemp,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource DispGroupingFirstParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для группировки диспетчера 2">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource DispGroupingSecondParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ProjectSettings.DispatcherGroupingSecondTemp,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource DispGroupingSecondParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
                                    </StackPanel>
                                </GroupBox>

                                
                                <GroupBox Margin="5 0 5 10">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила создания листов"
                                            ToolTip="Правила, по которым будут создаваться новые листы в проекте"/>
                                    </GroupBox.Header>
                                    
                                    <StackPanel>

                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска имени листа пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource SheetNameStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ProjectSettings.SheetPrefixTemp,
                                                    UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource SheetPrefixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockWithTooltipStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ProjectSettings.SheetSuffixTemp,
                                                    UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource SheetSuffixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите типоразмер рамки листа:">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TitleBlockTypeStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        
                                        <ComboBox 
                                            Style="{StaticResource ComboBoxWithTooltipStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=TitleBlocks}" 
                                            SelectedItem="{Binding Path=SelectedTitleBlock}">
                                            
                                            <ComboBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource TitleBlockTypeStyle}"/>
                                                </ToolTip>
                                            </ComboBox.ToolTip>
                                            
                                            <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0}: {1}">
                                                                    <Binding Path="FamilyName"/>
                                                                    <Binding Path="Name"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ComboBox>


                                        <TextBlock
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для формата рамки листа">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource SheetSizeParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.SheetSizeTemp,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource SheetSizeParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для множителя формата рамки листа">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource SheetCoefficientParamStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBox 
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ProjectSettings.SheetCoefficientTemp,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center">

                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource SheetCoefficientParamStyle}"/>
                                                </ToolTip>
                                            </TextBox.ToolTip>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
                                    </StackPanel>
                                </GroupBox>





                                <!-- Вертикальные виды -->
                                <GroupBox Margin="5 0 5 10">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила создания вертикальных видов"
                                            ToolTip="Правила, по которым будут создаваться вертикальные разрезы для пилонов в проекте"/>
                                    </GroupBox.Header>


                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска имени основного вида пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource GeneralViewNameStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.GeneralViewPrefixTemp,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource GeneralViewPrefixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.GeneralViewSuffixTemp,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource GeneralViewSuffixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска имени бокового вида пилона">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource GeneralViewPerpendicularNameStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.GeneralViewPerpendicularPrefixTemp,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource GeneralViewPerpendicularSuffixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxWithTooltipStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.GeneralViewPerpendicularSuffixTemp,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center">

                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock Style="{StaticResource GeneralViewPerpendicularSuffixStyle}"/>
                                                    </ToolTip>
                                                </TextBox.ToolTip>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.SettingsChangedCommand, 
                                                                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockWithTooltipStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите шаблон основного и бокового вида:">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Style="{StaticResource GeneralViewTemplateStyle}"/>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
