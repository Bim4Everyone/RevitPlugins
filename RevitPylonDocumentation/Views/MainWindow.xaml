<base:PlatformWindow
    x:Class="RevitPylonDocumentation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views"
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Title="MainWindow"
    
    AllowsTransparency="True"
    WindowStyle="None"
    Background="Transparent"    
    Height="510" MinHeight="510" MaxHeight="510"
    Width="700" MinWidth="700" MaxWidth="700"
    
    

    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}"
    x:Name="window"
    Loaded="window_Loaded">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Window.Resources>



    <Border CornerRadius="10" BorderBrush="Black" BorderThickness="1" Padding="6" Background="White">
        <Grid Background="White" MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Canvas 
                Grid.Column="1" 
                Width="{Binding ActualWidth, ElementName=expander}" 
                Panel.ZIndex="1"
                Margin="0 35 10 0">
                <Expander 
                    x:Name="expander"
                    ExpandDirection="Down"
                    FlowDirection="RightToLeft"
                    Background="White"
                    BorderThickness="1"
                    BorderBrush="Gray" 
                    Padding="3">

                    <Expander.Header>
                        <TextBlock 
                        Text="Настройки"
                        Style="{StaticResource TextBlockStyle}"
                        
                        ToolTipService.InitialShowDelay="1000"
                        ToolTipService.ShowDuration="20000"
                        ToolTipService.BetweenShowDelay="1">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock 
                                    Text="Перечень настроек плагина.&#10;В блоке &quot;Цвета для переопределения графики&quot; вы можете задать перечень и последовательность цветов, которые будут задаваться фильтрам, либо использоваться при переопределении графики элементов, если стоит галка &quot;Переопределять цвет&quot;.&#10;Например, если стоит галка &quot;Переопределять цвет&quot; и первый цвет в &quot;Цвета для переопределения графики&quot; красный, а второй синий, то первому созданному фильтру, который будет добавлен на вид будет задан красный цвет, а второму - синий.&#10;Аналогично в блоке &quot;Штриховки для переопределения графики&quot; вы можете задать перечень и последовательность штриховок, которые будут задаваться, если стоит галка &quot;Переопределять штриховку&quot;." 
                                    TextWrapping="Wrap"
                                    Width="300"
                                    TextAlignment="Justify"
                                    FlowDirection="LeftToRight"/>
                                </ToolTip>
                            </TextBlock.ToolTip>
                    </TextBlock>
                    </Expander.Header>

                    <Grid FlowDirection="LeftToRight">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <GroupBox Margin="5 0">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила поиска параметров"/>
                                    </GroupBox.Header>
                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр раздела проекта"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.PROJECT_SECTION_TEMP, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр фильтрации типовых пилонов"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.TYPICAL_PYLON_FILTER_PARAMETER_TEMP, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Значение параметра фильтрации типовых пилонов"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.TYPICAL_PYLON_FILTER_VALUE_TEMP, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр марки пилона"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.MARK_TEMP, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для группировки диспетчера 1"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.DISPATCHER_GROUPING_FIRST_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для группировки диспетчера 2"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.DISPATCHER_GROUPING_SECOND_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для формата рамки листа"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0"
                                            Text="{Binding Path=ProjectSettings.SHEET_SIZE_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Параметр для множителя формата рамки листа"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ProjectSettings.SHEET_COEFFICIENT_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>
                                    </StackPanel>
                                </GroupBox>


                                <GroupBox Margin="5 0">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила поиска листов"/>
                                    </GroupBox.Header>
                                    
                                    <StackPanel>
                                        
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска листа пилона"/>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ProjectSettings.SHEET_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ProjectSettings.SHEET_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите типоразмер рамки листа:"/>
                                        
                                        <ComboBox 
                                            Style="{StaticResource ComboBoxStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=TitleBlocks}" 
                                            SelectedItem="{Binding Path=SelectedTitleBlock}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0}: {1}">
                                                                    <Binding Path="FamilyName"/>
                                                                    <Binding Path="Name"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </GroupBox>


                                <GroupBox Margin="5 0">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила поиска видов"/>
                                    </GroupBox.Header>
                                    
                                    
                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите шаблон основного вида:"/>

                                        <ComboBox 
                                            Style="{StaticResource ComboBoxStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=ViewTemplatesInPj}" 
                                            SelectedItem="{Binding Path=SelectedGeneralViewTemplate}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <Binding Path="Name"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите шаблон поперечного вида:"/>

                                        <ComboBox 
                                            Style="{StaticResource ComboBoxStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=ViewTemplatesInPj}" 
                                            SelectedItem="{Binding Path=SelectedTransverseViewTemplate}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <Binding Path="Name"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите типоразмер для создаваемых видов:"/>

                                        <ComboBox 
                                            Style="{StaticResource ComboBoxStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=ViewFamilyTypes}" 
                                            SelectedItem="{Binding Path=SelectedViewFamilyType}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <Binding Path="Name"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Выберите легенду примечания:"/>

                                        <ComboBox 
                                            Style="{StaticResource ComboBoxStyle}"
                                            Margin="10 0 10 10"
                                            Width="460" Height="25"
                                            HorizontalAlignment="Left"
                                            ItemsSource="{Binding Path=Legends}" 
                                            SelectedItem="{Binding Path=SelectedLegend}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <Binding Path="Name"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Отступ по X у основного вида"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_X_OFFSET_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Отступ по Y сверху у основного вида"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_Y_TOP_OFFSET_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Отступ по Y снизу у основного вида"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_Y_BOTTOM_OFFSET_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Отступ по X у поперечного вида"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_X_OFFSET_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Отступ по Y у поперечного вида"/>

                                        <TextBox 
                                            Style="{StaticResource TextBoxStyle}"
                                            HorizontalAlignment="Left" 
                                            Margin="10 0 10 10"
                                            Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_Y_OFFSET_TEMP,
                                            UpdateSourceTrigger=PropertyChanged}" 
                                            Width="460" Height="25"
                                            VerticalContentAlignment="Center"/>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска основного вида пилона"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска основного перпендикулярного вида пилона"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_PERPENDICULAR_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.GENERAL_VIEW_PERPENDICULAR_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска первого поперечного вида пилона"/>


                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_FIRST_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_FIRST_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска второго поперечного вида пилона"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_SECOND_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_SECOND_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>



                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска третьего поперечного вида пилона"/>


                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_THIRD_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=ViewSectionSettings.TRANSVERSE_VIEW_THIRD_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>


                                <GroupBox Margin="5">
                                    <GroupBox.Header>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Grid.Row="0" 
                                            Margin="5 10 0 0"
                                            FontSize="14"
                                            Text="Правила поиска спецификаций"/>
                                    </GroupBox.Header>

                                    <StackPanel>
                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска спецификации армирования"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=SchedulesSettings.REBAR_SCHEDULE_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=SchedulesSettings.REBAR_SCHEDULE_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска спецификации материалов"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=SchedulesSettings.MATERIAL_SCHEDULE_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=SchedulesSettings.MATERIAL_SCHEDULE_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска ведомости системных деталей"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=SchedulesSettings.SYSTEM_PARTS_SCHEDULE_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=SchedulesSettings.SYSTEM_PARTS_SCHEDULE_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>


                                        <TextBlock 
                                            Style="{StaticResource TextBlockStyle}"
                                            Margin="10 10 0 5"
                                            Text="Маска поиска ведомости IFC деталей"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="10 0 5 0"
                                                Text="{Binding Path=SchedulesSettings.IFC_PARTS_SCHEDULE_PREFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>

                                            <TextBlock 
                                                Style="{StaticResource TextBlockStyle}"
                                                Text="Марка пилона"/>

                                            <TextBox 
                                                Style="{StaticResource TextBoxStyle}"
                                                HorizontalAlignment="Left" 
                                                Margin="5 0 10 0"
                                                Text="{Binding Path=SchedulesSettings.IFC_PARTS_SCHEDULE_SUFFIX_TEMP,
                                                UpdateSourceTrigger=PropertyChanged}" 
                                                Width="174" Height="25"
                                                VerticalContentAlignment="Center"/>
                                        </StackPanel>



                                        <TextBlock 
