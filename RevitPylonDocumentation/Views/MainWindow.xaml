                        <CheckBox  
                            Grid.Row="4"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithTransverseViewThird}"/>
                        <TextBlock 
                            Grid.Row="4"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Третий горизонтальный вид"/>

                        <CheckBox  
                            Grid.Row="5"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithRebarSchedule}"/>
                        <TextBlock 
                            Grid.Row="5"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Спецификацию армирования"/>

                        <CheckBox  
                            Grid.Row="6"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithMaterialSchedule}"/>
                        <TextBlock 
                            Grid.Row="6"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Спецификацию материалов"/>

                        <CheckBox  
                            Grid.Row="7"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithSystemPartsSchedule}"/>
                        <TextBlock 
                            Grid.Row="7"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Ведомость системных деталей"/>

                        <CheckBox  
                            Grid.Row="8"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithIFCPartsSchedule}"/>
                        <TextBlock 
                            Grid.Row="8"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Ведомость IFC деталей"/>

                        <CheckBox  
                            Grid.Row="9"
                            Grid.Column="0"
                            Style="{DynamicResource ToggleButtonStyle}"
                            IsChecked="{Binding Path=SelectionSettings.NeedWorkWithLegend}"/>
                        <TextBlock 
                            Grid.Row="9"
                            Grid.Column="1"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Легенда примечаний"/>
                    </Grid>
                </Border>


                <StackPanel
                    Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Height="45"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Style="{StaticResource TextBlockStyle}"
                        
                            Margin="10 14"
                            Foreground="Orange"
                            VerticalAlignment="Center"
                            Text="{Binding ErrorText}"/>
                    </StackPanel>

                    <Button
                        Style="{StaticResource SimpleButtonStyle}"
                        
                        Margin="5 10"
                        Width="80"
                        Content="ОК"
                        Click="ButtonOk_Click"
                        Command="{Binding AcceptViewCommand}"/>

                    <Button
                        Style="{StaticResource SimpleButtonStyle}"
                        
                        Margin="5 10 10 10"
                        Width="80"
                        Content="Отмена"
                        Click="ButtonCancel_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</base:PlatformWindow>