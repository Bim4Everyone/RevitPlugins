    </Style>

    <Style x:Key="GeneralViewTypeStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Типоразмер вида, который необходимо применить к основному и боковому виду при их создании." />
    </Style>

    <Style x:Key="LegendNameStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Выберите из представленного списка легенду, содержащую примечания листа пилона, которую необходимо разместить на листе." />
    </Style>

    <Style x:Key="LegendXOffsetStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Укажите смещение по горизонтали (по оси Х) от нижнего правого угла рамки листа до середины видового экрана легенды примечания" />
    </Style>

    <Style x:Key="LegendYOffsetStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Укажите смещение по вертикали (по оси Y) от нижнего правого угла рамки листа до середины видового экрана легенды примечания" />
    </Style>

    <Style x:Key="GeneralViewXOffsetStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Укажите отступ от пилона вправо и влево у основного вида" />
    </Style>

    <Style x:Key="GeneralViewYTopOffsetStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

