<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    
    <Style x:Key="SettingsTooltipStyle" TargetType="{x:Type TextBlock}">

        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Width" Value="300" />
        <Setter Property="TextAlignment" Value="Justify" />
        <Setter Property="FlowDirection" Value="LeftToRight" />
    </Style>



    <Style x:Key="MarkParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, в котором у пилона прописывается значение марки пилона" />
    </Style>

    <Style x:Key="PjSectionParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, в котором у пилона прописывается комплект документации" />
    </Style>

    <Style x:Key="TypicalPylonFilterParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, в котором у пилона прописывается отличительная черта типовых пилонов" />
    </Style>

    <Style x:Key="TypicalPylonFilterValueStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Значение параметра, в котором у пилона прописывается отличительная черта типовых пилонов" />
    </Style>


    <Style x:Key="PylonLengthParamNameStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, в котором у пилона на уровне типоразмера прописывается длина сечения" />
    </Style>

    <Style x:Key="PylonWidthParamNameStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, в котором у пилона на уровне типоразмера прописывается ширина сечения" />
    </Style>
    

    <Style x:Key="DispGroupingFirstParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, который используется в проекте для группировки диспетчера на первом уровне" />
    </Style>

    <Style x:Key="DispGroupingSecondParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра, который используется в проекте для группировки диспетчера на втором уровне" />
    </Style>

    <Style x:Key="SheetNameStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Префикс и суффикс имени листа, т.е. то, что должно идти в названии листа перед указанием марки пилона и после нее.&#10;Например, в имени листа:&#10;&quot;Пилон 12.30.25-12⌀20-П1_ЖБ&quot;,&#10;где &quot;12.30.25-12⌀20-П1&quot; - это марка пилона,&#10;&quot;Пилон &quot; - это префикс,&#10;&quot;_ЖБ&quot; - это суффикс." />
    </Style>

    <Style x:Key="SheetPrefixStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Префикс - часть имени листа, которая должна идти перед указанием марки пилона.&#10;Например, в имени листа:&#10;&quot;Пилон 12.30.25-12⌀20-П1_ЖБ&quot;,&#10;где &quot;12.30.25-12⌀20-П1&quot; - это марка пилона,&#10;&quot;Пилон &quot; - это префикс.&#10;Значит в этом окне вы должны записать: &quot;Пилон &quot;" />
    </Style>

    <Style x:Key="SheetSuffixStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Суффикс - часть имени листа, которая должна идти после указания марки пилона.&#10;Например, в имени листа:&#10;&quot;Пилон 12.30.25-12⌀20-П1_ЖБ&quot;,&#10;где &quot;12.30.25-12⌀20-П1&quot; - это марка пилона,&#10;&quot;_ЖБ&quot; - это суффикс.&#10;Значит в этом окне вы должны записать: &quot;_ЖБ&quot;" />
    </Style>

    <Style x:Key="TitleBlockTypeStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Типоразмер рамки (штампа), которая будет размещена на новых листах" />
    </Style>

    <Style x:Key="SheetSizeParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра рамки листа, в котором задается значение формата листа.&#10;Например, если вам необходимо задать рамке листа формат &quot;А3&quot;, то в данный параметр вы будете записывать &quot;3&quot;&#10;В этом поле нужно указать имя этого параметра." />
    </Style>

    <Style x:Key="SheetCoefficientParamStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Имя параметра рамки листа, в котором задается значение множителя формата листа.&#10;Например, если вам необходимо задать рамке листа формат &quot;А2х3&quot;, то в данный параметр вы будете записывать &quot;3&quot;, чтобы указать, что формат &quot;А2&quot; умножен на 3.&#10;В этом поле нужно указать имя этого параметра." />
    </Style>

    <Style x:Key="GeneralViewNameStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SettingsTooltipStyle}">

        <Setter Property="Text" Value="Префикс и суффикс имени основного вида пилона, т.е. то, что должно идти в названии вида перед указанием марки пилона и после нее.&#10;Например, в имени основного вида пилона:&#10;&quot;Пилон 12.30.25-12⌀20-П1_ЖБ&quot;,&#10;где &quot;12.30.25-12⌀20-П1&quot; - это марка пилона,&#10;&quot;Пилон &quot; - это префикс,&#10;&quot;_ЖБ&quot; - это суффикс." />
    </Style>

