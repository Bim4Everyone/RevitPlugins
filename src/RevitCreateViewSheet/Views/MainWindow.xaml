<core:WpfUIPlatformWindow
    x:Class="RevitCreateViewSheet.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:vms="clr-namespace:RevitCreateViewSheet.ViewModels"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    xmlns:res="clr-namespace:RevitCreateViewSheet.Resources"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Height="550"
    Width="900"
    MinHeight="450"
    MinWidth="800"
    d:Width="1500"
    d:Height="600"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <res:SheetViewModelComparer
            x:Key="SheetViewModelComparer" />
        <ui:TextBlock
            x:Key="AlbumHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Album}" />
        <ui:TextBlock
            x:Key="CustomNumberHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.CustomNumber}" />
        <ui:TextBlock
            x:Key="NumberHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Number}" />
        <ui:TextBlock
            x:Key="SheetNameHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Name}" />
        <ui:TextBlock
            x:Key="TitleBlockHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.TitleBlock}" />
        <ui:TextBlock
            x:Key="SheetStatusHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Status}" />
        <ui:TextBlock
            x:Key="DeleteSheetTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.DeleteSheetsButtonTooltip}" />

        <ui:TextBlock
            x:Key="ViewPortNameHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Name}" />
        <ui:TextBlock
            x:Key="ViewPortStatusHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Status}" />
        <ui:TextBlock
            x:Key="ViewPortTypeHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.ViewPortType}" />
        <ui:TextBlock
            x:Key="AddViewPortButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.AddViewPortTooltip}" />
        <ui:TextBlock
            x:Key="DeleteViewPortButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.DeleteViewPortTooltip}" />
        
        <ui:TextBlock
            x:Key="SchedulesCountHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.SchedulesCount}" />
        <ui:TextBlock
            x:Key="ScheduleNameHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Name}" />
        <ui:TextBlock
            x:Key="ScheduleStatusHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Status}" />
        <ui:TextBlock
            x:Key="AddScheduleButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.AddScheduleTooltip}" />
        <ui:TextBlock
            x:Key="DeleteScheduleButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.DeleteScheduleTooltip}" />

        <ui:TextBlock
            x:Key="AnnotationFamilyHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.AnnotationFamily}" />
        <ui:TextBlock
            x:Key="AnnotationStatusHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.Status}" />
        <ui:TextBlock
            x:Key="AnnotationTypeHeader"
            Text="{me:LocalizationSource MainWindow.AllSheets.AnnotationType}" />
        <ui:TextBlock
            x:Key="AddAnnotationButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.AddAnnotationTooltip}" />
        <ui:TextBlock
            x:Key="DeleteAnnotationButtonTooltip"
            Text="{me:LocalizationSource MainWindow.AllSheets.DeleteAnnotationTooltip}" />
    </Window.Resources>
    <b:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding ProgressDialogFactory}">
        </wpfbehaviors:WpfAttachServiceBehavior>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding OpenFileDialogService}">
        </wpfbehaviors:WpfAttachServiceBehavior>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}">
        </wpfbehaviors:WpfAttachServiceBehavior>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}">
        </wpfbehaviors:WpfAttachServiceBehavior>
    </b:Interaction.Behaviors>
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.Resources>
            <Style
                TargetType="ui:TextBlock"
                x:Key="HideableTextBlock">
                <Style.Triggers>
                    <Trigger
                        Property="Text"
                        Value="">
                        <Setter
                            Property="Visibility"
                            Value="Collapsed" />
                    </Trigger>
                    <Trigger
                        Property="Text"
                        Value="{x:Null}">
                        <Setter
                            Property="Visibility"
                            Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />
        <DockPanel
            Grid.Row="1">
            <Grid
                Margin="5 5 5 0">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="2*"
                        MinWidth="100" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="1*"
                        MinWidth="100" />
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="250" />
                        <ColumnDefinition
                            Width="250" />
                        <ColumnDefinition
                            Width="80" />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Text="{me:LocalizationSource MainWindow.AddSheets.Album}"></ui:TextBlock>
                    <ComboBox
                        Grid.Row="1"
                        IsTextSearchCaseSensitive="False"
                        Height="40"
                        MinHeight="40"
                        IsEditable="True"
                        ItemsSource="{Binding AllAlbumsBlueprints, UpdateSourceTrigger=PropertyChanged}"
                        Text="{Binding AddSheetsAlbumBlueprint, UpdateSourceTrigger=PropertyChanged}" />

                    <ui:TextBlock
                        Grid.Column="1"
                        Text="{me:LocalizationSource MainWindow.AddSheets.TitleBlock}">
                    </ui:TextBlock>
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsTextSearchCaseSensitive="False"
                        Height="40"
                        MinHeight="40"
                        IsEditable="True"
                        DisplayMemberPath="Name"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        ItemsSource="{Binding AllTitleBlocks, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding AddSheetsTitleBlock, UpdateSourceTrigger=PropertyChanged}" />

                    <ui:TextBlock
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Text="{me:LocalizationSource MainWindow.AddSheets.Count}">
                    </ui:TextBlock>
                    <ui:TextBox
                        Grid.Column="2"
                        Grid.Row="1"
                        Height="40"
                        Text="{Binding AddSheetsCount, UpdateSourceTrigger=PropertyChanged}" />

                    <ui:Button
                        Grid.Column="3"
                        Grid.Row="1"
                        Width="80"
                        Height="40"
                        Content="{me:LocalizationSource MainWindow.AddSheets.CreateButton}"
                        HorizontalAlignment="Left"
                        Appearance="Info"
                        Command="{Binding AddSheetsCommand}" />

                    <ui:Button
                        Grid.Column="5"
                        Grid.Row="1"
                        Height="40"
                        Appearance="Info"
                        ToolTip="{me:LocalizationSource MainWindow.AddSheets.SaveSheetsButtonTooltip}"
                        Content="{ui:SymbolIcon ArrowUpload24}"
                        Command="{Binding SaveSheetsCommand}" />

                    <ui:Button
                        Grid.Column="4"
                        Grid.Row="1"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Left"
                        Appearance="Info"
                        ToolTip="{me:LocalizationSource MainWindow.AddSheets.LoadSheetsButtonTooltip}"
                        Content="{ui:SymbolIcon ArrowDownload24}"
                        Command="{Binding LoadSheetsCommand}" />

                    <ui:TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        Foreground="Orange"
                        VerticalAlignment="Center"
                        Style="{StaticResource HideableTextBlock}"
                        Text="{Binding AddSheetsErrorText}">
                    </ui:TextBlock>

                    <DockPanel
                        Grid.Row="3"
                        Margin="0 10 0 0"
                        Grid.ColumnSpan="4">
                        <StackPanel>
                            <ui:TextBlock
                                Text="{me:LocalizationSource MainWindow.AllSheets.Filter}" />
                            <ui:TextBox
                                Text="{Binding SheetsFilter, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </DockPanel>
                </Grid>

                <GroupBox
                    Header="{me:LocalizationSource MainWindow.AllSheets.Sheets}"
                    Grid.Row="2"
                    Grid.Column="0">
                    <ui:DataGrid
                        SelectionMode="Extended"
                        AutoGenerateColumns="False"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        VirtualizingPanel.IsVirtualizing="True"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        CanUserResizeColumns="True"
                        res:DataGridSyncEditToSelectedItemProperty.SyncEditToSelectedItem="True"
                        res:CustomSortBehavior.AllowCustomSort="True"
                        res:DataGridSelectedItemsProperty.SelectedItems="{Binding SelectedSheets}"
                        ItemsSource="{Binding VisibleSheets.View}"
                        SelectedItem="{Binding SelectedSheet, UpdateSourceTrigger=PropertyChanged}">
                        <ui:DataGrid.Columns>
                            <DataGridTemplateColumn
                                SortMemberPath="AlbumBlueprint"
                                Header="{StaticResource AlbumHeader}"
                                Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox
                                            Text="{Binding AlbumBlueprint, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                SortMemberPath="SheetCustomNumber"
                                Header="{StaticResource CustomNumberHeader}"
                                res:CustomSortBehavior.CustomSorter="{StaticResource SheetViewModelComparer}"
                                Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox
                                            Text="{Binding SheetCustomNumber, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                SortMemberPath="SheetNumber"
                                Binding="{Binding SheetNumber}"
                                Header="{StaticResource NumberHeader}"
                                IsReadOnly="True"
                                res:CustomSortBehavior.CustomSorter="{StaticResource SheetViewModelComparer}"
                                Width="Auto">
                            </DataGridTextColumn>
                            <DataGridTemplateColumn
                                SortMemberPath="Name"
                                Header="{StaticResource SheetNameHeader}"
                                Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox
                                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                SortMemberPath="TitleBlock.Name"
                                Header="{StaticResource TitleBlockHeader}"
                                Width="350">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            IsTextSearchCaseSensitive="False"
                                            Height="40"
                                            MinHeight="40"
                                            DisplayMemberPath="Name"
                                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                                            ItemsSource="{Binding Path=DataContext.AllTitleBlocks, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                            SelectedItem="{Binding TitleBlock, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                SortMemberPath="IsPlaced"
                                Width="Auto"
                                Header="{StaticResource SheetStatusHeader}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBlock
                                            HorizontalAlignment="Center"
                                            Text="{Binding IsPlaced, Converter={StaticResource BoolToLocalizedStringConverter}}">
                                        </ui:TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:Button
                                            Appearance="Danger"
                                            ToolTip="{StaticResource DeleteSheetTooltip}"
                                            Command="{Binding Path=DataContext.RemoveSheetsCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                            CommandParameter="{Binding Path=DataContext.SelectedSheets, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                            Content="{ui:SymbolIcon Delete24}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </ui:DataGrid.Columns>
                    </ui:DataGrid>
                </GroupBox>

                <GridSplitter
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch" />

                <GroupBox
                    Grid.Row="2"
                    Grid.Column="2">
                    <GroupBox.Header>
                        <DockPanel>
                            <ui:TextBlock
                                Text="{me:LocalizationSource MainWindow.AllSheets.SheetContent}" />
                            <ui:TextBlock
                                Text="{Binding SelectedSheet.Name}" />
                        </DockPanel>
                    </GroupBox.Header>
                    <ScrollViewer
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    MinHeight="150" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    MinHeight="150" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    MinHeight="150" />
                            </Grid.RowDefinitions>
                            <GroupBox
                                Header="{me:LocalizationSource MainWindow.AllSheets.ViewPorts}">
                                <DockPanel
                                    LastChildFill="True">
                                    <ui:Button
                                        Height="Auto"
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Bottom"
                                        ToolTip="{StaticResource AddViewPortButtonTooltip}"
                                        Content="{ui:SymbolIcon Add24}"
                                        Command="{Binding SelectedSheet.AddViewPortCommand}" />
                                    <ui:DataGrid
                                        SelectionMode="Single"
                                        AutoGenerateColumns="False"
                                        VirtualizingPanel.VirtualizationMode="Recycling"
                                        VirtualizingPanel.IsVirtualizing="True"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        CanUserResizeColumns="True"
                                        ItemsSource="{Binding SelectedSheet.ViewPorts}"
                                        SelectedItem="{Binding SelectedSheet.SelectedViewPort}">
                                        <ui:DataGrid.Columns>
                                            <DataGridTextColumn
                                                Header="{StaticResource ViewPortNameHeader}"
                                                Width="200"
                                                IsReadOnly="True"
                                                Binding="{Binding ViewName}" />
                                            <DataGridTemplateColumn
                                                Header="{StaticResource ViewPortTypeHeader}"
                                                SortMemberPath="ViewPortType.Name"
                                                Width="200">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            IsTextSearchCaseSensitive="False"
                                                            Height="40"
                                                            MinHeight="40"
                                                            DisplayMemberPath="Name"
                                                            ItemsSource="{Binding Path=DataContext.AllViewPortTypes, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                            SelectedItem="{Binding ViewPortType, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn
                                                SortMemberPath="IsPlaced"
                                                Width="Auto"
                                                Header="{StaticResource ViewPortStatusHeader}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:TextBlock
                                                            HorizontalAlignment="Center"
                                                            Text="{Binding IsPlaced, Converter={StaticResource BoolToLocalizedStringConverter}}">
                                                        </ui:TextBlock>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:Button
                                                            Appearance="Danger"
                                                            ToolTip="{StaticResource DeleteViewPortButtonTooltip}"
                                                            Command="{Binding Path=DataContext.SelectedSheet.RemoveViewPortCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Content="{ui:SymbolIcon Delete24}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </ui:DataGrid.Columns>
                                    </ui:DataGrid>
                                </DockPanel>
                            </GroupBox>

                            <GridSplitter
                                Grid.Row="1"
                                Height="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />

                            <GroupBox
                                Grid.Row="2"
                                Header="{me:LocalizationSource MainWindow.AllSheets.Schedules}">
                                <DockPanel
                                    LastChildFill="True">
                                    <ui:Button
                                        Height="Auto"
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Bottom"
                                        ToolTip="{StaticResource AddScheduleButtonTooltip}"
                                        Content="{ui:SymbolIcon Add24}"
                                        Command="{Binding SelectedSheet.AddScheduleCommand}" />
                                    <ui:DataGrid
                                        DockPanel.Dock="Top"
                                        SelectionMode="Single"
                                        AutoGenerateColumns="False"
                                        VirtualizingPanel.VirtualizationMode="Recycling"
                                        VirtualizingPanel.IsVirtualizing="True"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        CanUserResizeColumns="True"
                                        ItemsSource="{Binding SelectedSheet.Schedules}"
                                        SelectedItem="{Binding SelectedSheet.SelectedSchedule}">
                                        <ui:DataGrid.Columns>
                                            <DataGridTextColumn
                                                Header="{StaticResource ScheduleNameHeader}"
                                                Width="350"
                                                IsReadOnly="True"
                                                Binding="{Binding Name}" />
                                            <DataGridTextColumn
                                                Header="{StaticResource SchedulesCountHeader}"
                                                Width="50"
                                                IsReadOnly="True"
                                                Binding="{Binding CountOnSheets}" />
                                            <DataGridTemplateColumn
                                                Width="Auto"
                                                SortMemberPath="IsPlaced"
                                                Header="{StaticResource ScheduleStatusHeader}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:TextBlock
                                                            HorizontalAlignment="Center"
                                                            Text="{Binding IsPlaced, Converter={StaticResource BoolToLocalizedStringConverter}}">
                                                        </ui:TextBlock>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:Button
                                                            Appearance="Danger"
                                                            ToolTip="{StaticResource DeleteScheduleButtonTooltip}"
                                                            Command="{Binding Path=DataContext.SelectedSheet.RemoveScheduleCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Content="{ui:SymbolIcon Delete24}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </ui:DataGrid.Columns>
                                    </ui:DataGrid>
                                </DockPanel>
                            </GroupBox>

                            <GridSplitter
                                Grid.Row="3"
                                Height="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />

                            <GroupBox
                                Grid.Row="4"
                                Header="{me:LocalizationSource MainWindow.AllSheets.Annotations}">
                                <DockPanel
                                    LastChildFill="True">
                                    <ui:Button
                                        Height="Auto"
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Bottom"
                                        ToolTip="{StaticResource AddAnnotationButtonTooltip}"
                                        Content="{ui:SymbolIcon Add24}"
                                        Command="{Binding SelectedSheet.AddAnnotationCommand}" />
                                    <ui:DataGrid
                                        DockPanel.Dock="Top"
                                        SelectionMode="Single"
                                        AutoGenerateColumns="False"
                                        VirtualizingPanel.VirtualizationMode="Recycling"
                                        VirtualizingPanel.IsVirtualizing="True"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        CanUserResizeColumns="True"
                                        ItemsSource="{Binding SelectedSheet.Annotations}"
                                        SelectedItem="{Binding SelectedSheet.SelectedAnnotation}">
                                        <ui:DataGrid.Columns>
                                            <DataGridTextColumn
                                                Header="{StaticResource AnnotationFamilyHeader}"
                                                Width="200"
                                                IsReadOnly="True"
                                                Binding="{Binding FamilyName}" />
                                            <DataGridTextColumn
                                                Header="{StaticResource AnnotationTypeHeader}"
                                                Width="200"
                                                IsReadOnly="True"
                                                Binding="{Binding SymbolName}" />
                                            <DataGridTemplateColumn
                                                Width="Auto"
                                                SortMemberPath="IsPlaced"
                                                Header="{StaticResource AnnotationStatusHeader}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:TextBlock
                                                            HorizontalAlignment="Center"
                                                            Text="{Binding IsPlaced, Converter={StaticResource BoolToLocalizedStringConverter}}">
                                                        </ui:TextBlock>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ui:Button
                                                            Appearance="Danger"
                                                            ToolTip="{StaticResource DeleteAnnotationButtonTooltip}"
                                                            Command="{Binding Path=DataContext.SelectedSheet.RemoveAnnotationCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Content="{ui:SymbolIcon Delete24}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </ui:DataGrid.Columns>
                                    </ui:DataGrid>
                                </DockPanel>
                            </GroupBox>
                        </Grid>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </DockPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />
            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource AllWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Appearance="Info"
                Command="{Binding AcceptViewCommand}" />
            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource AllWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>