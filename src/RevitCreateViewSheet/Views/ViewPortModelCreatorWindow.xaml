<core:WpfUIPlatformWindow
    x:Class="RevitCreateViewSheet.Views.ViewPortModelCreatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:vms="clr-namespace:RevitCreateViewSheet.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitCreateViewSheet.Views"
    mc:Ignorable="d"
    Height="400"
    Width="600"
    MinHeight="400"
    MinWidth="600"
    MaxHeight="400"
    MaxWidth="600"
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance vms:ViewPortModelCreatorViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource TODO}" />

        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center">
            <ui:TextBlock
                Margin="10"
                TextAlignment="Center"
                Text="{me:LocalizationSource TODO}">
            </ui:TextBlock>
            <ComboBox
                MinWidth="450"
                IsEditable="True"
                IsTextSearchEnabled="True"
                IsTextSearchCaseSensitive="False"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                DisplayMemberPath="Name"
                TextSearch.TextPath="Name"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ToolTip="{me:LocalizationSource TODO}"
                ItemsSource="{Binding ViewTypes}"
                SelectedItem="{Binding SelectedViewType}" />
            <ui:TextBlock
                Margin="10"
                TextAlignment="Center"
                Text="{me:LocalizationSource TODO}">
            </ui:TextBlock>
            <ComboBox
                MinWidth="450"
                IsEditable="True"
                IsTextSearchEnabled="True"
                IsTextSearchCaseSensitive="False"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                DisplayMemberPath="Name"
                TextSearch.TextPath="Name"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ToolTip="{me:LocalizationSource TODO}"
                ItemsSource="{Binding ViewsForSelection}"
                SelectedItem="{Binding SelectedView}" />
            <ui:TextBlock
                Margin="10"
                TextAlignment="Center"
                Text="{me:LocalizationSource TODO}">
            </ui:TextBlock>
            <ComboBox
                MinWidth="450"
                IsEditable="True"
                IsTextSearchEnabled="True"
                IsTextSearchCaseSensitive="False"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                DisplayMemberPath="Name"
                TextSearch.TextPath="Name"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ToolTip="{me:LocalizationSource TODO}"
                ItemsSource="{Binding ViewPortTypes}"
                SelectedItem="{Binding SelectedViewPortType}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Width="80"
                Margin="10"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                IsDefault="True"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Width="80"
                Margin="10"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
