<core:WpfUIPlatformWindow
    x:Class="RevitRoomAnnotations.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRoomAnnotations.Views"
    xmlns:vms="clr-namespace:RevitRoomAnnotations.ViewModels"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"
    xmlns:behaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d" 
    Height="500"
    Width="700"    
    MinHeight="500"
    MinWidth="700"
    Title="{me:LocalizationSource MainWindow.Title}"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:SymbolRegular
                x:Key="StatusLoaded">arrowDownload16</ui:SymbolRegular>
            <ui:SymbolRegular
                x:Key="StatusUnloaded">dismiss16</ui:SymbolRegular>
            <ui:TextBlock
                x:Key="LinkName"
                Text="{me:LocalizationSource MainWindow.LinkName}" />
            <ui:TextBlock
                x:Key="LinkStatus"
                Text="{me:LocalizationSource MainWindow.LinkStatus}" />
            <converters:BoolToObjectConverter
                x:Key="StatusIconConverter"
                TrueValue="{StaticResource StatusLoaded}"
                FalseValue="{StaticResource StatusUnloaded}" />
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Behaviors>
        <behaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
    </b:Interaction.Behaviors>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,0,5,0"
            Style="{StaticResource CustomBorder}">
            <ui:DataGrid                
                ItemsSource="{Binding Links}"
                Style="{StaticResource CustomResizableDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Width="60"
                        CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="420"
                        Header="{StaticResource LinkName}"
                        Binding="{Binding Name}" />
                    <DataGridTemplateColumn
                        Width="*"
                        Header="{StaticResource LinkStatus}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Orientation="Horizontal">
                                    <ui:SymbolIcon
                                        Width="20"
                                        Height="20"
                                        Symbol="{Binding IsLoaded, Converter={StaticResource StatusIconConverter}}" />
                                    <ui:TextBlock
                                        Margin="10,0,5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding StatusString, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </ui:DataGrid>
        </Border>        
        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Click="ButtonOk_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Command="{Binding AcceptViewCommand, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                IsCancel="True"
                Appearance="Transparent"
                Click="ButtonCancel_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>