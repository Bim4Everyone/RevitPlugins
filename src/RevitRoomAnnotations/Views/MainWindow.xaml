<core:WpfUIPlatformWindow
    x:Class="RevitRoomAnnotations.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRoomAnnotations.Views"
    xmlns:vms="clr-namespace:RevitRoomAnnotations.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    
    Height="500"
    Width="700"
    
    MinHeight="500"
    MinWidth="700"
    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />
        
        <Border
            Grid.Row="1"
            CornerRadius="8"
            Padding="5"
            Margin="10,0,10,0"
            Background="{DynamicResource CardBackground}">

            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="False"
                Grid.Row="1"
                Margin="16"
                HeadersVisibility="Column"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                GridLinesVisibility="All"
                ItemsSource="{Binding LinkedFiles}">
                
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Header="{me:LocalizationSource MainWindow.Select}"
                        Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid
                                    ToolTipService.ShowOnDisabled="True">
                                    <Grid.Style>
                                        <Style
                                            TargetType="Grid">
                                            <Setter
                                                Property="ToolTip"
                                                Value="{x:Null}" />
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Value="False"
                                                    Binding="{Binding IsLoaded}">
                                                    <Setter
                                                        Property="ToolTip"
                                                        Value="{DynamicResource MainWindow.ToolTipNoLoaded}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsLoaded}"/>
                                </Grid>
                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn
                        Header="{me:LocalizationSource MainWindow.Loaded}"
                        Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    IsEnabled="False"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsLoaded}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        IsReadOnly="True"
                        Width="*"
                        Header="{me:LocalizationSource MainWindow.ToolTipNoLoaded}"
                        Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                IsCancel="True"
                Margin="10"
                Width="80"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
            
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>