<core:WpfUIPlatformWindow
    x:Class="RevitFinishingWalls.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:local="clr-namespace:RevitFinishingWalls.Views"
    xmlns:vms="clr-namespace:RevitFinishingWalls.ViewModels"
    xmlns:converters="clr-namespace:dosymep.WPF.Converters"
    xmlns:enums="clr-namespace:RevitFinishingWalls.Models.Enums"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    MinHeight="275"
    MinWidth="600"
    MaxHeight="275"
    MaxWidth="600"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}"
    ResizeMode="NoResize">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/ComboBox/ComboBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/TextBox/TextBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/Button/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumConverter
                x:Key="EnumConverter" />
            <Style
                TargetType="ui:TextBox"
                BasedOn="{StaticResource DefaultUiTextBoxStyle}">
                <Setter
                    Property="Width"
                    Value="50" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Center" />
            </Style>
            <Style
                TargetType="ComboBox"
                x:Key="ComboBoxInput"
                BasedOn="{StaticResource DefaultComboBoxStyle}">
                <Setter
                    Property="Width"
                    Value="250" />
                <Setter
                    Property="Margin"
                    Value="0 0 5 0" />
            </Style>
            <Style
                TargetType="DockPanel"
                x:Key="DockPanelInput">
                <Setter
                    Property="Margin"
                    Value="5" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Left" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
            </Style>
            <Style
                TargetType="TextBlock"
                x:Key="InputDescription">
                <Setter
                    Property="Margin"
                    Value="5 0" />
                <Setter
                    Property="Width"
                    Value="200" />
                <Setter
                    Property="TextAlignment"
                    Value="Justify" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
            </Style>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadConfigCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <b:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding ProgressDialogFactory}">
        </wpfbehaviors:WpfAttachServiceBehavior>
    </b:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Отделка стен" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel.ToolTip>
                <TextBlock
                    Text="Отделочные стены создаются только для помещений из активного документа.&#10;У создаваемых отделочных стен будет отключена галочка 'Граница помещения'.&#10;Также созданные стены будут соединены с элементами из активного файла,&#10;которые образуют границу помещения: стены, колонны, несущие колонны.&#10;Важно: соединение с элементами из связанных файлов осуществлено не будет!"
                    FontSize="14" />
            </StackPanel.ToolTip>
            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <ui:TextBlock
                    Text="Создавать стены:"
                    Style="{StaticResource InputDescription}" />
                <ComboBox
                    ItemsSource="{Binding RoomGetterModes}"
                    SelectedItem="{Binding SelectedRoomGetterMode}"
                    Style="{StaticResource ComboBoxInput}"
                    IsEditable="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Converter={StaticResource EnumConverter}, ConverterParameter={x:Type enums:RoomGetterMode}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <TextBlock
                    Text="Тип отделочных стен:"
                    Style="{StaticResource InputDescription}" />
                <ComboBox
                    IsTextSearchCaseSensitive="False"
                    IsTextSearchEnabled="True"
                    IsEditable="True"
                    DisplayMemberPath="Name"
                    MaxDropDownHeight="250"
                    ItemsSource="{Binding WallTypes}"
                    SelectedItem="{Binding SelectedWallType}"
                    Style="{StaticResource ComboBoxInput}">
                </ComboBox>
            </DockPanel>
            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <TextBlock
                    Text="Отметка верха от уровня:"
                    Style="{StaticResource InputDescription}" />
                <ComboBox
                    IsEditable="False"
                    ItemsSource="{Binding WallElevationModes}"
                    SelectedItem="{Binding SelectedWallElevationMode}"
                    Style="{StaticResource ComboBoxInput}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Converter={StaticResource EnumConverter}, ConverterParameter={x:Type enums:WallElevationMode}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ui:TextBox
                    Text="{Binding WallElevationByUser, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    IsEnabled="{Binding IsWallHeightByUserEnabled}" />
                <TextBlock
                    Text="мм"
                    Width="Auto"
                    Style="{StaticResource InputDescription}" />
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <TextBlock
                    Text="Смещение снизу от уровня:"
                    Style="{StaticResource InputDescription}" />
                <ui:TextBox
                    Text="{Binding WallBaseOffset, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                <TextBlock
                    Text="мм"
                    Width="Auto"
                    Style="{StaticResource InputDescription}" />
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <TextBlock
                    Text="Смещение внутрь помещения:"
                    Style="{StaticResource InputDescription}" />
                <ui:TextBox
                    Text="{Binding WallSideOffset, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                <TextBlock
                    Text="мм"
                    Width="Auto"
                    Style="{StaticResource InputDescription}" />
            </DockPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="2"
            Height="45"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="ОК"
                IsDefault="True"
                Click="ButtonOk_Click"
                Appearance="Info"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="Отмена"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </DockPanel>
    </Grid>
</core:WpfUIPlatformWindow>
