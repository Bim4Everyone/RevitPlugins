<core:WpfUIPlatformWindow
    x:Class="RevitFinishingWalls.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:local="clr-namespace:RevitFinishingWalls.Views"
    xmlns:vms="clr-namespace:RevitFinishingWalls.ViewModels"
    xmlns:converters="clr-namespace:dosymep.WPF.Converters"
    xmlns:enums="clr-namespace:RevitFinishingWalls.Models.Enums"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    MinHeight="350"
    MinWidth="630"
    MaxHeight="350"
    MaxWidth="630"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}"
    ResizeMode="NoResize">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/ComboBox/ComboBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/TextBox/TextBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/Button/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumConverter
                x:Key="EnumConverter" />
            <Style
                TargetType="ui:TextBox"
                BasedOn="{StaticResource DefaultUiTextBoxStyle}">
                <Setter
                    Property="MinWidth"
                    Value="60" />
                <Setter
                    Property="MaxWidth"
                    Value="60" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Center" />
                <Setter
                    Property="ClearButtonEnabled"
                    Value="False" />
            </Style>
            <Style
                TargetType="ComboBox"
                x:Key="ComboBoxInput"
                BasedOn="{StaticResource DefaultComboBoxStyle}">
                <Setter
                    Property="Width"
                    Value="250" />
                <Setter
                    Property="Margin"
                    Value="0 0 5 0" />
                <Setter
                    Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Visible" />
            </Style>
            <Style
                TargetType="DockPanel"
                x:Key="DockPanelInput">
                <Setter
                    Property="Margin"
                    Value="5" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Left" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
            </Style>
            <Style
                TargetType="Label"
                x:Key="InputLabel">
                <Setter
                    Property="Margin"
                    Value="0 5" />
                <Setter
                    Property="Width"
                    Value="210" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
                <Setter
                    Property="Focusable"
                    Value="False" />
                <Setter
                    Property="Foreground"
                    Value="{DynamicResource LabelForeground}" />
                <Setter
                    Property="SnapsToDevicePixels"
                    Value="True" />
            </Style>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadConfigCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <b:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding ProgressDialogFactory}">
        </wpfbehaviors:WpfAttachServiceBehavior>
    </b:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Отделка стен" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ToolTip="Отделочные стены создаются только для помещений из активного документа. У создаваемых отделочных стен будет отключена галочка 'Граница помещения'. Базовый уровень отделочных стен будет соответствовать уровню помещения. Также созданные стены будут соединены с элементами из активного файла, которые образуют границу помещения: стены, колонны, несущие колонны.&#10;&#10;Важно: соединение с элементами из связанных файлов осуществлено не будет!">
            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <Label
                    Content="Создавать стены:"
                    Target="{Binding ElementName=InputRoomGetterMode}"
                    Style="{StaticResource InputLabel}" />
                <ComboBox
                    x:Name="InputRoomGetterMode"
                    IsEditable="False"
                    ToolTip="Способ выбора помещений для создания отделочных стен."
                    ItemsSource="{Binding RoomGetterModes}"
                    SelectedItem="{Binding SelectedRoomGetterMode}"
                    Style="{StaticResource ComboBoxInput}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Converter={StaticResource EnumConverter}, ConverterParameter={x:Type enums:RoomGetterMode}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <Label
                    Content="Тип отделочных стен:"
                    Target="{Binding ElementName=InputWallTypes}"
                    Style="{StaticResource InputLabel}" />
                <ComboBox
                    x:Name="InputWallTypes"
                    IsTextSearchCaseSensitive="False"
                    IsTextSearchEnabled="True"
                    IsEditable="True"
                    DisplayMemberPath="Name"
                    MaxDropDownHeight="250"
                    ToolTip="Типоразмер отделочных стен, которые будут создаваться."
                    ItemsSource="{Binding WallTypes}"
                    SelectedItem="{Binding SelectedWallType}"
                    Style="{StaticResource ComboBoxInput}">
                </ComboBox>
            </DockPanel>
            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <Label
                    Content="Отметка верха от уровня:"
                    Target="{Binding ElementName=InputWallElevationMode}"
                    Style="{StaticResource InputLabel}" />
                <ComboBox
                    x:Name="InputWallElevationMode"
                    IsEditable="False"
                    ToolTip="Способ задания отметки верха отделочной стены."
                    ItemsSource="{Binding WallElevationModes}"
                    SelectedItem="{Binding SelectedWallElevationMode}"
                    Style="{StaticResource ComboBoxInput}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Converter={StaticResource EnumConverter}, ConverterParameter={x:Type enums:WallElevationMode}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ui:TextBox
                    ToolTip="Стена будет создана таким способом, чтобы ее верх был на указанной отметке относительно базового уровня стены. Базовый уровень стены будет браться из уровня помещения."
                    Text="{Binding WallElevationByUser, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    IsEnabled="{Binding IsWallHeightByUserEnabled}" />
                <Label
                    Content="мм"
                    Width="Auto"
                    Style="{StaticResource InputLabel}" />
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <Label
                    Content="Смещение снизу от уровня:"
                    Target="{Binding ElementName=InputWallBaseOffset}"
                    Style="{StaticResource InputLabel}" />
                <ui:TextBox
                    x:Name="InputWallBaseOffset"
                    ToolTip="Смещение снизу в мм от базового уровня стены. Базовый уровень стены будет браться из уровня помещения."
                    Text="{Binding WallBaseOffset, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                <Label
                    Content="мм"
                    Width="Auto"
                    Style="{StaticResource InputLabel}" />
            </DockPanel>

            <DockPanel
                Style="{StaticResource DockPanelInput}">
                <Label
                    Content="Смещение внутрь помещения:"
                    Target="{Binding ElementName=InputWallSideOffset}"
                    Style="{StaticResource InputLabel}" />
                <ui:TextBox
                    x:Name="InputWallSideOffset"
                    ToolTip="Смещение в мм внутрь помещения, которое будет между границей помещения и гранью отделочной стены."
                    Text="{Binding WallSideOffset, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                <Label
                    Content="мм"
                    Width="Auto"
                    Style="{StaticResource InputLabel}" />
            </DockPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="2"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="ОК"
                IsDefault="True"
                Click="ButtonOk_Click"
                Appearance="Info"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="Отмена"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </DockPanel>
    </Grid>
</core:WpfUIPlatformWindow>
