<core:WpfUIPlatformWindow
    x:Class="RevitFinishingWalls.Views.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:local="clr-namespace:RevitFinishingWalls.Views"
    xmlns:vms="clr-namespace:RevitFinishingWalls.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    Height="500"
    Width="900"
    MinHeight="400"
    MinWidth="400"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance vms:ErrorWindowViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/DataGrid/DataGrid.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/Button/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource
                x:Key="groupedRooms"
                Source="{Binding Rooms}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="LavelName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            <CollectionViewSource
                x:Key="groupedErrors"
                Source="{Binding SelectedRoomErrors}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="Title" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <b:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}">
        </wpfbehaviors:WpfAttachServiceBehavior>
    </b:Interaction.Behaviors>
    <Grid
        Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Title="{Binding Title}" />

        <DockPanel
            Grid.Column="0"
            Grid.Row="1"
            LastChildFill="True">
            <Label
                Content="Помещения"
                DockPanel.Dock="Top"
                FontSize="14"
                Target="{Binding ElementName=roomsGrid}" />
            <ui:DataGrid
                x:Name="roomsGrid"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Source={StaticResource groupedRooms}}"
                SelectedItem="{Binding SelectedRoom}">
                <ui:DataGrid.Columns>
                    <DataGridTemplateColumn
                        Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:Button
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectErrorCommand}"
                                    CommandParameter="{Binding}"
                                    Height="16">
                                    <ui:Button.Content>
                                        <DockPanel>
                                            <ui:SymbolIcon
                                                Symbol="Search24" />
                                            <TextBlock
                                                Text="{Binding RoomId}" />
                                        </DockPanel>
                                    </ui:Button.Content>
                                </ui:Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Header="Уровень"
                        Binding="{Binding LevelName}" />
                    <DataGridTextColumn
                        Header="Имя"
                        Binding="{Binding Name}" />
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>
        <GridSplitter
            Grid.Column="1"
            Grid.Row="1"
            Width="5" />
        <DockPanel
            Grid.Column="2"
            Grid.Row="1"
            LastChildFill="True">
            <Label
                FontSize="14"
                DockPanel.Dock="Top"
                Target="{Binding ElementName=errorsGrid}">
                <Label.Content>
                    <DockPanel>
                        <TextBlock
                            Text="Ошибки в помещении: " />
                        <TextBlock
                            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectedRoom.Name}" />
                    </DockPanel>
                </Label.Content>
            </Label>
            <ui:DataGrid
                x:Name="errorsGrid"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Source={StaticResource groupedErrors}}">
                <ui:DataGrid.Columns>
                    <DataGridTemplateColumn
                        Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:Button
                                    Content="Выбрать"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectErrorCommand}"
                                    CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="1*"
                        Header="Заголовок"
                        Binding="{Binding Title}" />
                    <DataGridTextColumn
                        Width="1*"
                        Header="Описание"
                        Binding="{Binding Message}">
                    </DataGridTextColumn>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>
    </Grid>
</core:WpfUIPlatformWindow>
