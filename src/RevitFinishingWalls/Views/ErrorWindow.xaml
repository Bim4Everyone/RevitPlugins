<core:WpfUIPlatformWindow
    x:Class="RevitFinishingWalls.Views.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:local="clr-namespace:RevitFinishingWalls.Views"
    xmlns:vms="clr-namespace:RevitFinishingWalls.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    Height="500"
    Width="900"
    MinHeight="400"
    MinWidth="400"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance vms:ErrorWindowViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/DataGrid/DataGrid.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/Button/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource
                x:Key="groupedRooms"
                Source="{Binding Rooms}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="LevelName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            <CollectionViewSource
                x:Key="groupedErrors"
                Source="{Binding SelectedRoomErrors}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="Title" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            <Style
                x:Key="GroupHeaderStyle"
                TargetType="{x:Type GroupItem}">
                <Setter
                    Property="Template">
                    <Setter.Value>
                        <ControlTemplate
                            TargetType="{x:Type GroupItem}">
                            <ui:CardExpander
                                IsExpanded="True">
                                <ui:CardExpander.Header>
                                    <DockPanel
                                        Margin="0 0 14 0"
                                        HorizontalAlignment="Stretch">
                                        <TextBlock
                                            Text="{Binding Path=Name}" />
                                        <DockPanel
                                            HorizontalAlignment="Right">
                                            <TextBlock
                                                Text="Кол-во:"
                                                Margin="0 0 5 0" />
                                            <TextBlock
                                                Text="{Binding Path=ItemCount}" />
                                        </DockPanel>
                                    </DockPanel>
                                </ui:CardExpander.Header>
                                <ui:CardExpander.Content>
                                    <ItemsPresenter />
                                </ui:CardExpander.Content>
                            </ui:CardExpander>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
                x:Key="DataGridStyle"
                TargetType="ui:DataGrid"
                BasedOn="{StaticResource DefaultUiDataGridStyle}">
                <Setter
                    Property="AutoGenerateColumns"
                    Value="False" />
                <Setter
                    Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Auto" />
                <Setter
                    Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto" />
                <Setter
                    Property="CanUserResizeColumns"
                    Value="False" />
                <Setter
                    Property="CanUserReorderColumns"
                    Value="False" />
            </Style>
            <Style
                TargetType="DockPanel"
                x:Key="DockContainerStyle">
                <Setter
                    Property="LastChildFill"
                    Value="True" />
            </Style>
            <Style
                TargetType="Label"
                x:Key="HeaderLabel">
                <Setter
                    Property="FontSize"
                    Value="14" />
                <Setter
                    Property="FontWeight"
                    Value="SemiBold" />
                <Setter
                    Property="Padding"
                    Value="0,0,0,4" />
                <Setter
                    Property="Focusable"
                    Value="False" />
                <Setter
                    Property="Foreground"
                    Value="{DynamicResource LabelForeground}" />
                <Setter
                    Property="SnapsToDevicePixels"
                    Value="True" />
            </Style>
            <Style
                TargetType="Border"
                x:Key="BorderStyle">
                <Setter
                    Property="Padding"
                    Value="20" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Stretch" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Stretch" />
                <Setter
                    Property="SnapsToDevicePixels"
                    Value="True" />
                <Setter
                    Property="OverridesDefaultStyle"
                    Value="True" />
                <Setter
                    Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Auto" />
                <Setter
                    Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Disabled" />
                <Setter
                    Property="Background"
                    Value="{DynamicResource CardBackground}" />
                <Setter
                    Property="BorderBrush"
                    Value="{DynamicResource CardBorderBrush}" />
                <Setter
                    Property="BorderThickness"
                    Value="{DynamicResource CardControlBorderThemeThickness}" />
                <Setter
                    Property="FocusVisualStyle"
                    Value="{DynamicResource DefaultControlFocusVisualStyle}" />
                <Setter
                    Property="CornerRadius"
                    Value="{DynamicResource ControlCornerRadius}" />
            </Style>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <b:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}">
        </wpfbehaviors:WpfAttachServiceBehavior>
    </b:Interaction.Behaviors>
    <Grid
        Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                MinWidth="200" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                MinWidth="200" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Title="{Binding Title}" />

        <Border
            Grid.Column="0"
            Grid.Row="1"
            Style="{StaticResource BorderStyle}">
            <DockPanel
                Style="{StaticResource DockContainerStyle}">
                <Label
                    Content="Помещения"
                    DockPanel.Dock="Top"
                    Style="{StaticResource HeaderLabel}"
                    Target="{Binding ElementName=roomsGrid}" />
                <ui:DataGrid
                    x:Name="roomsGrid"
                    Style="{StaticResource DataGridStyle}"
                    ItemsSource="{Binding Source={StaticResource groupedRooms}}"
                    SelectedItem="{Binding SelectedRoom}">
                    <ui:DataGrid.GroupStyle>
                        <GroupStyle
                            ContainerStyle="{StaticResource GroupHeaderStyle}" />
                    </ui:DataGrid.GroupStyle>
                    <ui:DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectErrorCommand}"
                                        CommandParameter="{Binding}">
                                        <ui:Button.Content>
                                            <DockPanel>
                                                <ui:SymbolIcon
                                                    Symbol="Search24"
                                                    Margin="0 0 5 0" />
                                                <TextBlock
                                                    Text="{Binding RoomId}" />
                                            </DockPanel>
                                        </ui:Button.Content>
                                    </ui:Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Header="Уровень"
                            Binding="{Binding LevelName}" />
                        <DataGridTextColumn
                            Header="Имя"
                            Binding="{Binding Name}" />
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </DockPanel>
        </Border>

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource CardBorderBrush}"
            BorderThickness="{DynamicResource CardControlBorderThemeThickness}"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />

        <Border
            Grid.Column="2"
            Grid.Row="1"
            Style="{StaticResource BorderStyle}">
            <DockPanel
                Style="{StaticResource DockContainerStyle}">
                <Label
                    DockPanel.Dock="Top"
                    Style="{StaticResource HeaderLabel}"
                    Target="{Binding ElementName=errorsGrid}">
                    <Label.Content>
                        <DockPanel>
                            <TextBlock
                                Text="Ошибки в помещении: " />
                            <TextBlock
                                Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectedRoom.Name}" />
                        </DockPanel>
                    </Label.Content>
                </Label>
                <ui:DataGrid
                    x:Name="errorsGrid"
                    Style="{StaticResource DataGridStyle}"
                    ItemsSource="{Binding Source={StaticResource groupedErrors}}">
                    <ui:DataGrid.GroupStyle>
                        <GroupStyle
                            ContainerStyle="{StaticResource GroupHeaderStyle}" />
                    </ui:DataGrid.GroupStyle>
                    <ui:DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Content="Выбрать"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor},Path=DataContext.SelectErrorCommand}"
                                        CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Width="200"
                            Header="Заголовок"
                            Binding="{Binding Title}" />
                        <DataGridTextColumn
                            Width="Auto"
                            Header="Описание"
                            Binding="{Binding Message}">
                        </DataGridTextColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</core:WpfUIPlatformWindow>
