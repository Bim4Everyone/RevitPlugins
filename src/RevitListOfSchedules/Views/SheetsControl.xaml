<UserControl x:Class="RevitListOfSchedules.Views.SheetsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitListOfSchedules.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <CollectionViewSource
                x:Key="GroupedAlbums"
                Source="{Binding Sheets}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="AlbumName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            
            <ui:TextBlock
                x:Key="SheetNumber"
                Text="{me:LocalizationSource MainWindow.SheetNumber}" />
            <ui:TextBlock
                x:Key="SheetName"
                Text="{me:LocalizationSource MainWindow.SheetName}" />
            <ui:TextBlock
                x:Key="SheetRevisionNumber"
                Text="{me:LocalizationSource MainWindow.SheetRevisionNumber}" />
            
            <converters:BoolToVisibilityConverter
                x:Key="RevVisibilityConverter"
                TrueValue="Visible"
                FalseValue="Collapsed" />

        </ResourceDictionary>
    </UserControl.Resources>
    
    <ui:DataGrid
        x:Name="SecondDataGrid"
        Grid.Row="2"
        Grid.Column="2"
        ItemsSource="{Binding Source={StaticResource GroupedAlbums}}"
        Style="{StaticResource CustomResizableDataGridStyle}">
        <b:Interaction.Triggers>
            <b:EventTrigger
                EventName="SelectionChanged">
                <b:InvokeCommandAction
                    Command="{Binding UpdateSelectedSheetsCommand}"
                    CommandParameter="{Binding SelectedItems, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
        <DataGrid.Columns>
            <DataGridTextColumn
                Width="150"
                Header="{StaticResource SheetNumber}"
                Binding="{Binding Number}" />
            <DataGridTextColumn
                Width="600"
                Header="{StaticResource SheetName}"
                Binding="{Binding Name}" />
            <DataGridTextColumn
                Width="*"
                Header="{StaticResource SheetRevisionNumber}"
                Binding="{Binding RevisionNumber}"
                Visibility="{Binding IsRevisionVisible, Converter={StaticResource RevVisibilityConverter}}" />
        </DataGrid.Columns>
        <DataGrid.GroupStyle>
            <GroupStyle>
                <GroupStyle.ContainerStyle>
                    <Style
                        TargetType="{x:Type GroupItem}">
                        <Setter
                            Property="Template">
                            <Setter.Value>
                                <ControlTemplate
                                    TargetType="{x:Type GroupItem}">
                                    <Grid>
                                        <Expander
                                            IsExpanded="True">
                                            <Expander.Header>
                                                <StackPanel
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        Margin="10"
                                                        FontWeight="Bold"
                                                        Text="{Binding Name}" />
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupStyle.ContainerStyle>
            </GroupStyle>
        </DataGrid.GroupStyle>
    </ui:DataGrid>
</UserControl>
