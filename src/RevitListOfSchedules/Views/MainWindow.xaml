<base:PlatformWindow
    x:Class="RevitListOfSchedules.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitListOfSchedules.ViewModels"
    xmlns:local="clr-namespace:RevitListOfSchedules.Converters"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{DynamicResource MainWindow.Title}"
    Width="1500"
    Height="700"
    MinWidth="1500"
    MinHeight="700"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <local:StatusToImageConverter
            x:Key="StatusToImageConverter" />
        <CollectionViewSource
            x:Key="GroupedAlbums"
            Source="{Binding Sheets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription
                    PropertyName="AlbumName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <TextBlock
            x:Key="LinkName"
            Text="{DynamicResource MainWindow.LinkName}" />
        <TextBlock
            x:Key="LinkFullName"
            Text="{DynamicResource MainWindow.LinkFullName}" />
        <TextBlock
            x:Key="Reload"
            Text="{DynamicResource MainWindow.Reload}" />
        <TextBlock
            x:Key="SheetNumber"
            Text="{DynamicResource MainWindow.SheetNumber}" />
        <TextBlock
            x:Key="SheetName"
            Text="{DynamicResource MainWindow.SheetName}" />
        <TextBlock
            x:Key="SheetRevisionNumber"
            Text="{DynamicResource MainWindow.SheetRevisionNumber}" />        
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="70" />
            <RowDefinition />
            <RowDefinition
                Height="45" />
        </Grid.RowDefinitions>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="Auto"/>
            <ColumnDefinition 
                Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Column="1"
            Grid.RowSpan="3"
            Width="3"
            HorizontalAlignment="Center">            
        </GridSplitter>              
        <Button
            Width="200"
            Margin="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Content="{DynamicResource MainWindow.ReloadButton}"
            Command="{Binding ReloadLinksCommand, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Orientation="Horizontal">            
            <Label
                Margin="10,5,10,0"
                VerticalAlignment="Center"
                Content="{DynamicResource MainWindow.GroupParametersLabel}" />
            <ComboBox
                Width="250"
                Margin="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                DisplayMemberPath="Name"
                ItemsSource="{Binding GroupParameters}"                    
                SelectedItem="{Binding SelectedGroupParameter}"/>             
                                     
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Grid.Column="0"            
            Margin="10"  
            AutoGenerateColumns="False"
            GridLinesVisibility="All"
            Background="White"
            HorizontalGridLinesBrush="LightGray"
            VerticalGridLinesBrush="LightGray"
            RowHeaderWidth="0"
            ItemsSource="{Binding Links}" >
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"                                
                                IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="17"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="17"
                                Height="17"
                                Source="{Binding Status, Converter={StaticResource StatusToImageConverter}}">                                
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="200"
                    IsReadOnly="True"
                    Header="{StaticResource LinkName}"
                    Binding="{Binding Name}" />
                <DataGridTextColumn
                    Width="300"
                    IsReadOnly="True"
                    Header="{StaticResource LinkFullName}"
                    Binding="{Binding FullName}" />                 
                <DataGridTemplateColumn
                    Width="100"                    
                    Header="{StaticResource Reload}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  
                                Width="100"
                                HorizontalAlignment="Center"
                                Content="{DynamicResource MainWindow.Reload}"                                
                                Command="{Binding ReloadCommand, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid
            Grid.Row="1"
            Grid.Column="2"
            Margin="10"                       
            AutoGenerateColumns="False"
            GridLinesVisibility="All"
            Background="White"
            HorizontalGridLinesBrush="LightGray"
            VerticalGridLinesBrush="LightGray"
            RowHeaderWidth="0"
            IsReadOnly="True"
            ItemsSource="{Binding Source={StaticResource GroupedAlbums}}"
            SelectedItem="{Binding SelectedSheets, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="20"
                    Header=" "                    
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="100"
                    Header="{StaticResource SheetNumber}"                   
                    Binding="{Binding Number}" />
                <DataGridTextColumn
                    Width="400"
                    Header="{StaticResource SheetName}"
                    Binding="{Binding Name}" />
                <DataGridTextColumn
                    Width="*"
                    Header="{StaticResource SheetRevisionNumber}"
                    Binding="{Binding RevisionNumber}" />
            </DataGrid.Columns>
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border
                                BorderThickness="1"
                                BorderBrush="LightGray">
                                <TextBlock
                                    Margin="15,5,5,5"
                                    Text="{Binding Name}"
                                    FontSize="12"
                                    FontWeight="Bold" />
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">            
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="80"
                Margin="10"
                Content="{DynamicResource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="80"
                Margin="10"
                Content="{DynamicResource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</base:PlatformWindow>