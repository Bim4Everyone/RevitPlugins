<core:WpfUIPlatformWindow
    x:Class="RevitListOfSchedules.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"    
    xmlns:vms="clr-namespace:RevitListOfSchedules.ViewModels"
    xmlns:local="clr-namespace:RevitListOfSchedules.Converters"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    WindowStartupLocation="CenterOwner"    
    Width="1500"
    Height="700"
    MinWidth="1500"
    MinHeight="700"
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:StatusToImageConverter
                x:Key="StatusToImageConverter" />
            <CollectionViewSource
                x:Key="GroupedAlbums"
                Source="{Binding Sheets}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="AlbumName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>             
            <ui:TextBlock
                x:Key="LinkName"
                Text="{me:LocalizationSource MainWindow.LinkName}" />
            <ui:TextBlock
                x:Key="LinkFullName"
                Text="{me:LocalizationSource MainWindow.LinkFullName}" />
            <ui:TextBlock
                x:Key="Reload"
                Text="{me:LocalizationSource MainWindow.Reload}" />
            <ui:TextBlock
                x:Key="SheetNumber"
                Text="{me:LocalizationSource MainWindow.SheetNumber}" />
            <ui:TextBlock
                x:Key="SheetName"
                Text="{me:LocalizationSource MainWindow.SheetName}" />
            <ui:TextBlock
                x:Key="SheetRevisionNumber"
                Text="{me:LocalizationSource MainWindow.SheetRevisionNumber}" />
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers> 
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="70" />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="800" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Title="{me:LocalizationSource MainWindow.Title}" />
        
        <GridSplitter
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Width="2"
            BorderBrush="DarkGray"            
            HorizontalAlignment="Center">
        </GridSplitter>
        
        <ui:Button
            Grid.Row="1"
            Width="200"            
            Margin="20"
            Appearance="Info"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"            
            Content="{me:LocalizationSource MainWindow.ReloadButton}"
            Command="{Binding ReloadLinksCommand, UpdateSourceTrigger=PropertyChanged}" />        
        
        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Orientation="Horizontal">
            <Label
                Margin="15,5,10,0"
                VerticalAlignment="Center"
                Content="{me:LocalizationSource MainWindow.GroupParametersLabel}" />
            <ComboBox
                Margin="10"
                MinWidth="250"                
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                DisplayMemberPath="Name"
                ItemsSource="{Binding GroupParameters}"
                SelectedItem="{Binding SelectedGroupParameter}" />
        </StackPanel> 
        
        <ui:DataGrid
            x:Name="FirstDataGrid"
            Grid.Row="2"
            Grid.Column="0"            
            ItemsSource="{Binding Links}"                        
            Style="{StaticResource CustomResizableDataGridStyle}">            
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="60"
                    CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="30"                    
                    CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Status, Converter={StaticResource StatusToImageConverter}}">
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="200"                    
                    Header="{StaticResource LinkName}"
                    Binding="{Binding Name}" />
                <DataGridTextColumn
                    Width="300"                    
                    Header="{StaticResource LinkFullName}"
                    Binding="{Binding FullName}" />
                <DataGridTemplateColumn
                    Width="*"
                    Header="{StaticResource Reload}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button                                
                                HorizontalAlignment="Stretch"
                                Content="{DynamicResource MainWindow.Reload}"
                                Command="{Binding ReloadCommand, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </ui:DataGrid>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"            
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorLinkText, UpdateSourceTrigger=PropertyChanged}" />            
        </StackPanel>
        
        <ui:DataGrid
            x:Name="SecondDataGrid"
            Grid.Row="2"
            Grid.Column="2"            
            ItemsSource="{Binding Source={StaticResource GroupedAlbums}}"            
            Style="{StaticResource CustomResizableDataGridStyle}">            
            <b:Interaction.Triggers>
                <b:EventTrigger
                    EventName="SelectionChanged">
                    <b:InvokeCommandAction
                        Command="{Binding UpdateSelectedSheetsCommand}"
                        CommandParameter="{Binding SelectedItems, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>

            <DataGrid.Columns>                
                <DataGridTextColumn                    
                    Width="150"
                    Header="{StaticResource SheetNumber}"
                    Binding="{Binding Number}"/>
                <DataGridTextColumn                    
                    Width="400"
                    Header="{StaticResource SheetName}"
                    Binding="{Binding Name}"/>
                <DataGridTextColumn                    
                    Width="*"
                    Header="{StaticResource SheetRevisionNumber}"
                    Binding="{Binding RevisionNumber}" />
            </DataGrid.Columns>
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style
                            TargetType="{x:Type GroupItem}">
                            <Setter
                                Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                        TargetType="{x:Type GroupItem}">
                                        <Grid>
                                            <Expander
                                                IsExpanded="True">
                                                <Expander.Header>
                                                    <StackPanel
                                                        Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="10"
                                                            FontWeight="Bold"
                                                            Text="{Binding Name}" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </ui:DataGrid>
        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Width="80"
                Margin="10"
                Appearance="Info"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"                
                Command="{Binding AcceptViewCommand, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Width="80"
                Margin="10"                
                IsCancel="True"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>