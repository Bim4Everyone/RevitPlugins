<core:WpfUIPlatformWindow
    x:Class="RevitListOfSchedules.Views.MainWindow"
    xmlns:edits="clr-namespace:RevitListOfSchedules.Views.Edits"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitListOfSchedules.ViewModels"
    xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    WindowStartupLocation="CenterOwner"
    Width="1600"
    Height="700"
    MinWidth="1600"
    MinHeight="700"
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:SymbolRegular
                x:Key="StatusLoaded">arrowDownload16</ui:SymbolRegular>
            <ui:SymbolRegular
                x:Key="StatusUnloaded">dismiss16</ui:SymbolRegular>
            <converters:BoolToObjectConverter
                x:Key="StatusConverter"
                TrueValue="{StaticResource StatusLoaded}"
                FalseValue="{StaticResource StatusUnloaded}"
                DefaultValue="{StaticResource StatusUnloaded}" />
            <CollectionViewSource
                x:Key="GroupedAlbums"
                Source="{Binding Sheets}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="AlbumName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            <ui:TextBlock
                x:Key="LinkName"
                Text="{me:LocalizationSource MainWindow.LinkName}" />
            <ui:TextBlock
                x:Key="LinkFullName"
                Text="{me:LocalizationSource MainWindow.LinkFullName}" />
            <ui:TextBlock
                x:Key="Reload"
                Text="{me:LocalizationSource MainWindow.Reload}" />
            <ui:TextBlock
                x:Key="SheetNumber"
                Text="{me:LocalizationSource MainWindow.SheetNumber}" />
            <ui:TextBlock
                x:Key="SheetName"
                Text="{me:LocalizationSource MainWindow.SheetName}" />
            <ui:TextBlock
                x:Key="SheetRevisionNumber"
                Text="{me:LocalizationSource MainWindow.SheetRevisionNumber}" />
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="55" />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="800" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="3"
            FontWeight="Bold"
            FontSize="14"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <GridSplitter
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Width="2"
            Background="Transparent"
            HorizontalAlignment="Center">
        </GridSplitter>

        <ui:Button
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource CustomContentBigButton}"
            Content="{me:LocalizationSource MainWindow.ReloadButton}"
            Command="{Binding ReloadLinksCommand, UpdateSourceTrigger=PropertyChanged}" />

        <Canvas
            Margin="0,0,10,0"
            Grid.Row="1"
            Grid.Column="2"
            Panel.ZIndex="1"
            HorizontalAlignment="Right"
            Width="{Binding ActualWidth, ElementName=Expander}">
            <Expander
                x:Name="Expander"
                IsExpanded="False"
                HorizontalAlignment="Right">
                <Expander.Header>
                    <StackPanel
                        Margin="10,0,10,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <ui:TextBlock
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{me:LocalizationSource MainWindow.Settings}" />
                        <ui:SymbolIcon
                            Margin="5,0,10,0"
                            VerticalAlignment="Center"
                            Width="21"
                            Height="21"
                            Symbol="Settings20" />
                    </StackPanel>
                </Expander.Header>

                <StackPanel
                    FlowDirection="LeftToRight"
                    Background="{DynamicResource ComboBoxDropDownBackground}">
                    <Border
                        Style="{StaticResource CustomBorder}"
                        Height="65">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="350" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0">
                                <Label
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.GroupParameters}" />
                                <Label
                                    FontSize="10"
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.GroupParametersTooltip}" />
                            </StackPanel>
                            <ComboBox
                                Grid.Column="1"
                                MinWidth="250"
                                HorizontalAlignment="Left"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding GroupParameters}"
                                SelectedItem="{Binding SelectedGroupParameter}" />
                        </Grid>
                    </Border>
                    <Border
                        Style="{StaticResource CustomBorder}"
                        Height="65">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="350" />
                                <ColumnDefinition
                                    Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0">
                                <Label
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.CreateList}" />
                                <Label
                                    FontSize="10"
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.CreateListTooltip}" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                IsChecked="False"
                                OnContent="{me:LocalizationSource MainWindow.OnContent}"
                                OffContent="{me:LocalizationSource MainWindow.OffContent}"
                                Grid.Column="1"
                                HorizontalAlignment="Left" />
                        </Grid>
                    </Border>
                    <Border
                        Style="{StaticResource CustomBorder}"
                        Height="65">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="350" />
                                <ColumnDefinition
                                    Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0">
                                <Label
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.AddListToSheet}" />
                                <Label
                                    FontSize="10"
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.AddListToSheetTooltip}" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                IsChecked="True"
                                OnContent="{me:LocalizationSource MainWindow.OnContent}"
                                OffContent="{me:LocalizationSource MainWindow.OffContent}"
                                Grid.Column="1"
                                HorizontalAlignment="Left" />
                        </Grid>
                    </Border>
                    <Border
                        Style="{StaticResource CustomBorder}"
                        Height="65">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="350" />
                                <ColumnDefinition
                                    Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0">
                                <Label
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.ConsiderRevision}" />
                                <Label
                                    FontSize="10"
                                    VerticalAlignment="Center"
                                    Content="{me:LocalizationSource MainWindow.ConsiderRevisionTooltip}" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                IsChecked="True"
                                OnContent="{me:LocalizationSource MainWindow.OnContent}"
                                OffContent="{me:LocalizationSource MainWindow.OffContent}"
                                Grid.Column="1"
                                HorizontalAlignment="Left" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Expander>
        </Canvas>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,0,5,0"
            Style="{StaticResource CustomBorder}">
            <ui:DataGrid
                Margin="10"
                x:Name="FirstDataGrid"
                ItemsSource="{Binding Links}"
                Style="{StaticResource CustomResizableDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Width="60"
                        CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Width="30"
                        CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:SymbolIcon
                                    Width="20"
                                    Height="20"
                                    Symbol="{Binding IsLoaded, Converter={StaticResource StatusConverter}}">
                                </ui:SymbolIcon>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="200"
                        Header="{StaticResource LinkName}"
                        Binding="{Binding Name}" />
                    <DataGridTextColumn
                        Width="300"
                        Header="{StaticResource LinkFullName}"
                        Binding="{Binding FullName}" />
                    <DataGridTemplateColumn
                        Width="*"
                        Header="{StaticResource Reload}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    HorizontalAlignment="Stretch"
                                    Content="{DynamicResource MainWindow.Reload}"
                                    Command="{Binding ReloadCommand, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </ui:DataGrid>
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorLinkText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Border
            Margin="5,0,10,0"
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource CustomBorder}">
            <ui:DataGrid
                x:Name="SecondDataGrid"
                Grid.Row="2"
                Grid.Column="2"
                ItemsSource="{Binding Source={StaticResource GroupedAlbums}}"
                Style="{StaticResource CustomResizableDataGridStyle}">
                <b:Interaction.Triggers>
                    <b:EventTrigger
                        EventName="SelectionChanged">
                        <b:InvokeCommandAction
                            Command="{Binding UpdateSelectedSheetsCommand}"
                            CommandParameter="{Binding SelectedItems, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Header="{StaticResource SheetNumber}"
                        Binding="{Binding Number}" />
                    <DataGridTextColumn
                        Width="400"
                        Header="{StaticResource SheetName}"
                        Binding="{Binding Name}" />
                    <DataGridTextColumn
                        Width="*"
                        Header="{StaticResource SheetRevisionNumber}"
                        Binding="{Binding RevisionNumber}" />
                </DataGrid.Columns>
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style
                                TargetType="{x:Type GroupItem}">
                                <Setter
                                    Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate
                                            TargetType="{x:Type GroupItem}">
                                            <Grid>
                                                <Expander
                                                    IsExpanded="True">
                                                    <Expander.Header>
                                                        <StackPanel
                                                            Orientation="Horizontal">
                                                            <TextBlock
                                                                Margin="10"
                                                                FontWeight="Bold"
                                                                Text="{Binding Name}" />
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter />
                                                </Expander>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </DataGrid.GroupStyle>
            </ui:DataGrid>
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Click="ButtonOk_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Command="{Binding AcceptViewCommand, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                IsCancel="True"
                Click="ButtonCancel_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>