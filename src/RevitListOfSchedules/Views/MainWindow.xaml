<core:WpfUIPlatformWindow
    x:Class="RevitListOfSchedules.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitListOfSchedules.ViewModels"    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:controls="clr-namespace:RevitListOfSchedules.Views"
    WindowStartupLocation="CenterOwner"
    Width="1600"
    Height="700"
    MinWidth="1600"
    MinHeight="700"
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">    

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="55" />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="560" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="3"
            FontWeight="Bold"
            FontSize="14"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <GridSplitter
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Width="2"
            Background="Transparent"
            HorizontalAlignment="Center">
        </GridSplitter>

        <ui:Button
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource CustomContentBigButton}"
            Content="{me:LocalizationSource MainWindow.ReloadButton}"
            Command="{Binding ReloadLinksCommand, UpdateSourceTrigger=PropertyChanged}" />

        <Canvas
            Margin="0,0,10,0"
            Grid.Row="1"
            Grid.Column="2"
            Panel.ZIndex="1"
            HorizontalAlignment="Right"
            Width="{Binding ActualWidth, ElementName=Expander}">
            <Expander
                x:Name="Expander"
                IsExpanded="False"
                HorizontalAlignment="Right">
                <Expander.Header>
                    <StackPanel
                        Margin="10,0,10,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <ui:TextBlock
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{me:LocalizationSource MainWindow.Settings}" />
                        <ui:SymbolIcon
                            Margin="5,0,10,0"
                            VerticalAlignment="Center"
                            Width="21"
                            Height="21"
                            Symbol="Settings20" />
                    </StackPanel>
                </Expander.Header>
                <controls:SettingsControl
                    HorizontalAlignment="Left"                    
                    VerticalAlignment="Top" />
            </Expander>
        </Canvas>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,0,5,0"
            Style="{StaticResource CustomBorder}">
            <controls:LinksControl />
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorLinkText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Border
            Margin="5,0,10,0"
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource CustomBorder}">
            <controls:SheetsControl />
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Click="ButtonOk_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Command="{Binding AcceptViewCommand, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                IsCancel="True"
                Appearance="Transparent"
                Click="ButtonCancel_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>