<UserControl
    x:Class="RevitListOfSchedules.Views.LinksControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitListOfSchedules.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <CollectionViewSource
                x:Key="GroupedAlbums"
                Source="{Binding Sheets}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription
                        PropertyName="AlbumName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>

            <ui:SymbolRegular
                x:Key="StatusLoaded">arrowDownload16</ui:SymbolRegular>
            <ui:SymbolRegular
                x:Key="StatusUnloaded">dismiss16</ui:SymbolRegular>
            <ui:TextBlock
                x:Key="LinkName"
                Text="{me:LocalizationSource MainWindow.LinkName}" />
            <ui:TextBlock
                x:Key="LinkStatus"
                Text="{me:LocalizationSource MainWindow.LinkStatus}" />

            <converters:BoolToObjectConverter
                x:Key="StatusIconConverter"
                TrueValue="{StaticResource StatusLoaded}"
                FalseValue="{StaticResource StatusUnloaded}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ui:DataGrid
        ItemsSource="{Binding Links}"
        Style="{StaticResource CustomResizableDataGridStyle}">
        <DataGrid.Columns>
            <DataGridTemplateColumn
                Width="60"
                CanUserResize="False">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <CheckBox
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn
                Width="300"
                Header="{StaticResource LinkName}"
                Binding="{Binding Name}" />
            <DataGridTemplateColumn
                Width="*"
                Header="{StaticResource LinkStatus}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal">
                            <ui:SymbolIcon
                                Width="20"
                                Height="20"
                                Symbol="{Binding IsLoaded, Converter={StaticResource StatusIconConverter}}" />
                            <ui:TextBlock
                                Margin="10,0,5,0"
                                VerticalAlignment="Center"
                                Text="{Binding StatusString, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </ui:DataGrid>
</UserControl>