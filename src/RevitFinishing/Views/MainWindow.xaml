<core:WpfUIPlatformWindow
    x:Class="RevitFinishing.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitFinishing.Views"
    xmlns:vms="clr-namespace:RevitFinishing.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
   
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"

    Height="600"
    Width="900"
    
    MinHeight="600"
    MinWidth="900"
   
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10">
            <ui:TextBlock
                DockPanel.Dock="Left"
                Width="80"
                VerticalAlignment="Center"
                Text="{me:LocalizationSource MainWindow.Phases}"/>
            <ComboBox
                Height="Auto"
                ItemsSource="{Binding Phases}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedPhase}"/>
        </DockPanel>

        <ui:TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="10"
            Text="{me:LocalizationSource MainWindow.RoomNames}"/>

        <ui:TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            Text="{me:LocalizationSource MainWindow.RoomDepartments}"/>

        <ui:TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Margin="10"
            Text="{me:LocalizationSource MainWindow.RoomLevels}"/>

        <ListBox
            x:Name="RoomNames"
            Grid.Row="3"
            Grid.Column="0"
            Margin="10, 5"
            SelectionMode="Extended"
            ItemsSource="{Binding RoomNames}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding Name}"
                        IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            x:Name="RoomDepartments"
            Grid.Row="3"
            Grid.Column="1"
            Margin="10, 5"
            SelectionMode="Extended"
            ItemsSource="{Binding RoomDepartments}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding Name}"
                        IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            x:Name="RoomLevels"
            Grid.Row="3"
            Grid.Column="2"
            Margin="10, 5"
            SelectionMode="Extended"
            ItemsSource="{Binding RoomLevels}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding Name}"
                        IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding CalculateFinishingCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
