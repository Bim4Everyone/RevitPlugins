<core:WpfUIPlatformWindow
    x:Class="RevitFinishing.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitFinishing.Views"
    xmlns:vms="clr-namespace:RevitFinishing.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
   
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    
    Height="600"
    Width="500"
    
    MinHeight="600"
    MinWidth="500"
   
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <DockPanel
            Grid.Row="1"
            Margin="10">
            <ui:TextBlock
                DockPanel.Dock="Left"
                Width="80"
                Text="{me:LocalizationSource MainWindow.Phases}"/>
            <ComboBox
                Height="25"
                ItemsSource="{Binding Phases}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedPhase}"/>
        </DockPanel>

        <ui:TextBlock
            Grid.Row="2"
            Margin="10"
            Text="{me:LocalizationSource MainWindow.RoomNames}"/>

        <ListBox
            x:Name="RoomGroups"
            Grid.Row="3"
            Margin="10, 5"
            SelectionMode="Extended"
            ItemsSource="{Binding Rooms}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}"
                              Checked="CheckBox_Checked"
                              Unchecked="CheckBox_Unchecked"
                              IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <UniformGrid 
            Columns="3"
            Grid.Row="4"
            Margin="10,5">
            <ui:Button 
                Content="{me:LocalizationSource MainWindow.CheckAll}"
                Margin="0,0,5,0"
                Command="{Binding CheckAllCommand}"/>
            <ui:Button 
                Content="{me:LocalizationSource MainWindow.UnCheckAll}"
                Margin="5,0,5,0"
                Command="{Binding UnCheckAllCommand}"/>
            <ui:Button 
                Content="{me:LocalizationSource MainWindow.InvertAll}"
                Margin="5,0,0,0"
                Command="{Binding InvertAllCommand}"/>
        </UniformGrid>

        <StackPanel
            Grid.Row="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
