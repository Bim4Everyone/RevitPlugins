<UserControl
    x:Class="RevitPylonDocumentation.Views.Controls.TextBoxSettingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    
    x:Name="_this"
    HorizontalAlignment="Stretch"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="480"
    
    Validation.Error="This_Error"
    Validation.ErrorTemplate="{x:Null}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <StackPanel>
        <ui:TextBlock
            Margin="5"
            HorizontalAlignment="Stretch"
            Text="{Binding LabelText, ElementName=_this}"
            Style="{StaticResource TextBlockWithTooltipStyle}"
            ToolTip="{Binding ToolTipText, ElementName=_this}">
        </ui:TextBlock>

        <ui:TextBox
            x:Name="GeneralTextBox"
            Margin="5"
            HorizontalAlignment="Stretch"
            Text="{Binding TextBoxText, ElementName=_this, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ErrorTextBoxStyle}" 
            ToolTip="{Binding ToolTipText, ElementName=_this}">

            <i:Interaction.Triggers>
                <i:EventTrigger
                    EventName="TextChanged">
                    <i:InvokeCommandAction
                        Command="{Binding TextChangedCommand, ElementName=_this}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ui:TextBox>
    </StackPanel>
</UserControl>