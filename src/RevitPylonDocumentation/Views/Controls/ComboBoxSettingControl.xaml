<UserControl
    x:Class="RevitPylonDocumentation.Views.Controls.ComboBoxSettingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    
    x:Name="_this"
    HorizontalAlignment="Stretch"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="480"
    
    Validation.Error="Validation_Error"
    Validation.ErrorTemplate="{x:Null}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate
                x:Key="DefaultItemTemplate">
                <TextBlock
                    Text="{Binding}" />
            </DataTemplate>

            <DataTemplate
                x:Key="WithFamilyNameItemTemplate">
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding
                            StringFormat="{}{0}: {1}">
                            <Binding Path="FamilyName" />
                            <Binding Path="Name" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DataTemplate>

            <DataTemplate
                x:Key="WithoutFamilyNameItemTemplate">
                <TextBlock
                    Text="{Binding Name}" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <ui:TextBlock
            Margin="5"
            HorizontalAlignment="Stretch"
            Text="{Binding LabelText, ElementName=_this}"
            Style="{StaticResource TextBlockWithTooltipStyle}"
            ToolTip="{Binding ToolTipText, ElementName=_this}">
        </ui:TextBlock>

        <ComboBox
            x:Name="GeneralComboBox"
            Margin="5"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding ItemsSource, ElementName=_this}"
            SelectedItem="{Binding SelectedItem, ElementName=_this}"
            Style="{StaticResource ComboBoxWithTooltipStyle}"
            ToolTip="{Binding ToolTipText, ElementName=_this}"
            ItemTemplate="{Binding ItemTemplate, ElementName=_this}">

            <i:Interaction.Triggers>
                <i:EventTrigger
                    EventName="SelectionChanged">
                    <i:InvokeCommandAction
                        Command="{Binding SelectionChangedCommand, ElementName=_this}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>
    </StackPanel>
</UserControl>