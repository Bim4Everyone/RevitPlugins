<core:WpfUIPlatformPage
    x:Class="RevitPylonDocumentation.Views.Pages.ScheduleFiltersPage"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views.Pages"
    xmlns:views="clr-namespace:RevitPylonDocumentation.Views"
    xmlns:controls="clr-namespace:RevitPylonDocumentation.Views.Controls"
    mc:Ignorable="d"
    ScrollViewer.CanContentScroll="False"
    Title="ScheduleFiltersPage"
    d:DesignHeight="700"
    d:DesignWidth="600"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border
                    Name="ParamsForScheduleFilters"
                    Margin="15"
                    Style="{StaticResource CustomBorder}">
                    <StackPanel>
                        <controls:SettingsTitleControl
                            LabelText="{me:LocalizationSource Schedules.ScheduleFilterParametersList}"
                            ToolTipText="{me:LocalizationSource SchedulesPage.ScheduleFilterParametersListToolTip}"
                            ButtonCommand="{Binding ApplySettingsCommand}"
                            ButtonMouseLeaveCommand="{Binding CheckSettingsCommand}" />

                        <ui:ListView
                            Margin="0 5"
                            ItemsSource="{Binding 
                                Path=ScheduleFiltersSettings.ParamsForScheduleFiltersTemp, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            SelectionMode="Multiple">

                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <CheckBox
                                            Grid.Column="0"
                                            Padding="-1 0 0 0"
                                            IsChecked="{Binding Path=IsCheck, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            VerticalAlignment="Center" />

                                        <ui:TextBox
                                            Grid.Column="1"
                                            Margin="0 0 5 0"
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            Text="{Binding Path=ParamNameInSchedule, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            ToolTip="{me:LocalizationSource SchedulesPage.ParamNameInScheduleToolTip}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger
                                                    EventName="TextChanged">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding DataContext.SettingsChangedCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ui:TextBox>

                                        <ui:TextBox
                                            Grid.Column="2"
                                            Margin="5 0 0 0"
                                            Style="{StaticResource TextBoxWithTooltipStyle}"
                                            Text="{Binding Path=ParamNameInHost, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            ToolTip="{me:LocalizationSource SchedulesPage.ParamNameInHostToolTip}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger
                                                    EventName="TextChanged">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding DataContext.SettingsChangedCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ui:TextBox>
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>

                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                            <ui:Button
                                Margin="5 5"
                                MinWidth="150"
                                Content="{me:LocalizationSource Schedules.Add}"
                                Appearance="Info"
                                Command="{Binding AddScheduleFilterParamCommand}"
                                ToolTip="{me:LocalizationSource SchedulesPage.AddButtonToolTip}" />

                            <ui:Button
                                Margin="5 5"
                                MinWidth="150"
                                Content="{me:LocalizationSource Schedules.Delete}"
                                Command="{Binding DeleteScheduleFilterParamCommand}"
                                ToolTip="{me:LocalizationSource SchedulesPage.DeleteButtonToolTip}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <controls:AppFooterControl
            Grid.Row="1"
            HorizontalAlignment="Right"
            ErrorText="{Binding ErrorText}"
            ShowOkButton="False"
            CancelButtonText="{me:LocalizationSource GeneralPage.Cancel}" />
    </Grid>
</core:WpfUIPlatformPage>