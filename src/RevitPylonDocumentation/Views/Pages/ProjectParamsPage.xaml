<core:WpfUIPlatformPage
    x:Class="RevitPylonDocumentation.Views.Pages.ProjectParamsPage"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views.Pages"
    xmlns:views="clr-namespace:RevitPylonDocumentation.Views"
    xmlns:controls="clr-namespace:RevitPylonDocumentation.Views.Controls"
    
    mc:Ignorable="d"
    ScrollViewer.CanContentScroll="False"
    Title="ProjectParamsPage"
    d:DesignHeight="700"
    d:DesignWidth="600"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Border Name="ProjectProps"
                Margin="15"
                Style="{StaticResource CustomBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <controls:SettingsTitleControl
                        LabelText="{me:LocalizationSource ProjectParams.ProjectRelatedParameters}"
                        ToolTipText="{me:LocalizationSource ProjectParams.ProjectRelatedParametersToolTip}"
                        ButtonCommand="{Binding ApplySettingsCommand}"
                        ButtonMouseLeaveCommand="{Binding CheckSettingsCommand}" />

                    <UniformGrid
                        Grid.Row="1"
                        SizeChanged="UniformGrid_SizeChanged">

                        <controls:TextBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.DispatcherGroupingFirstParameter}"
                            TextBoxText="{Binding 
                                Path=ProjectSettings.DispatcherGroupingFirstTemp, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.DispatcherGroupingFirstParameterToolTip}"
                            TextChangedCommand="{Binding SettingsChangedCommand}" />

                        <controls:TextBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.DispatcherGroupingSecondParameter}"
                            TextBoxText="{Binding 
                                Path=ProjectSettings.DispatcherGroupingSecondTemp, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.DispatcherGroupingSecondParameterToolTip}"
                            TextChangedCommand="{Binding SettingsChangedCommand}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectDimensionTypeSize}"
                            ItemsSource="{Binding DimensionTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedDimensionType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectDimensionTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectSpotDimensionTypeSize}"
                            ItemsSource="{Binding SpotDimensionTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedSpotDimensionType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectSpotDimensionTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            Grid.Column="0"
                            LabelText="{me:LocalizationSource ProjectParams.SelectRebarProductMarkTypeSize}"
                            ItemsSource="{Binding RebarTagTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedSkeletonTagType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectRebarProductMarkTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithSerifTypeSize}"
                            ItemsSource="{Binding RebarTagTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedRebarTagTypeWithSerif, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithSerifTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithStepTypeSize}"
                            ItemsSource="{Binding RebarTagTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedRebarTagTypeWithStep, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithStepTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithCommentTypeSize}"
                            ItemsSource="{Binding RebarTagTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedRebarTagTypeWithComment, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectRebarMarkWithCommentTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectUniversalMarkWithTextTypeSize}"
                            ItemsSource="{Binding TypicalAnnotationsTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedUniversalTagType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectUniversalMarkWithTextTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectBreakLineTypeSize}"
                            ItemsSource="{Binding DetailComponentsTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedBreakLineType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectBreakLineTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />

                        <controls:ComboBoxSettingControl
                            LabelText="{me:LocalizationSource ProjectParams.SelectConcretingJointTypeSize}"
                            ItemsSource="{Binding DetailComponentsTypes}"
                            SelectedItem="{Binding 
                                Path=ProjectSettings.SelectedConcretingJointType, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,
                                ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                            ToolTipText="{me:LocalizationSource ProjectParams.SelectConcretingJointTypeSizeToolTip}"
                            SelectionChangedCommand="{Binding SettingsChangedCommand}"
                            ItemTemplate="{StaticResource WithoutFamilyNameItemTemplate}" />
                    </UniformGrid>
                </Grid>
            </Border>
        </ScrollViewer>

        <controls:AppFooterControl
            Grid.Row="1"
            HorizontalAlignment="Right"
            ErrorText="{Binding ErrorText}"
            ShowOkButton="False"
            CancelButtonText="{me:LocalizationSource GeneralPage.Cancel}" />
    </Grid>
</core:WpfUIPlatformPage>