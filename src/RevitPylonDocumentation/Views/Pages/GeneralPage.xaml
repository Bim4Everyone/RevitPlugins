<core:WpfUIPlatformPage 
    x:Class="RevitPylonDocumentation.Views.Pages.GeneralPage"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
      
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views.Pages"
    xmlns:views="clr-namespace:RevitPylonDocumentation.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Title="GeneralPage"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Name="Marks"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ui:TextBlock 
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    Text="Выбор пилонов"/>

                <ui:TextBlock 
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Text="Комплект документации:"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ui:TextBox 
                        Grid.Column="0"
                        />

                    <ui:Button
                        Grid.Column="1"
                        Content="Выбрать пилон"/>
                </Grid>

                <ListView
                    x:Name="hostMarks"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="False"
                    ItemsSource="{Binding Path=SelectedHostsInfoVM, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    SelectionMode="Multiple">

                    <ListView.Resources>
                        <Style
                            TargetType="Border">
                            <Setter
                                Property="CornerRadius"
                                Value="7" />
                        </Style>
                    </ListView.Resources>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal"
                                Margin="5">
                                <CheckBox
                                    x:Name="chk"
                                    IsChecked="{Binding Path=IsCheck, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10 0 0 0"
                                    Text="{Binding Path=PylonKeyName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style
                            TargetType="{x:Type ListBoxItem}">
                            <Setter
                                Property="Margin"
                                Value="3" />
                            <Setter
                                Property="IsSelected"
                                Value="{Binding Path=IsCheck, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <Setter
                                Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                        TargetType="{x:Type ListBoxItem}">
                                        <Border
                                            CornerRadius="5"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="1">

                                            <ContentPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>

        <Border Name="Toggles"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ui:TextBlock 
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Text="Sheet elements"/>

                <Grid Name="FormworkToggles"
                    Grid.Row="1" 
                    Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Text="Formwork views" />

                    <ui:ToggleSwitch
                        Grid.Row="1"
                        IsChecked="True"
                        Content="General"/>

                    <ui:ToggleSwitch
                        Grid.Row="2"
                        IsChecked="True"
                        Content="Side" />

                    <ui:ToggleSwitch
                        Grid.Row="3"
                        IsChecked="True"
                        Content="Hor1" />

                    <ui:ToggleSwitch
                        Grid.Row="4"
                        IsChecked="True"
                        Content="Hor2" />

                    <ui:ToggleSwitch
                        Grid.Row="5"
                        IsChecked="True"
                        Content="Hor3" />
                </Grid>
                
                <Grid Name="RebarToggles"
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Text="Rebar views" />

                    <ui:ToggleSwitch
                        Grid.Row="1"
                        IsChecked="True"
                        Content="General" />

                    <ui:ToggleSwitch
                        Grid.Row="2"
                        IsChecked="True"
                        Content="Side" />

                    <ui:ToggleSwitch
                        Grid.Row="3"
                        IsChecked="True"
                        Content="Hor1" />

                    <ui:ToggleSwitch
                        Grid.Row="4"
                        IsChecked="True"
                        Content="Hor2" />

                    <ui:ToggleSwitch
                        Grid.Row="5"
                        IsChecked="True"
                        Content="Hor3" />
                </Grid>
                
                <Grid Name="SpecToggles"
                    Grid.Row="2"
                    Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Text="Spec views" />

                    <ui:ToggleSwitch
                        Grid.Row="1"
                        IsChecked="True"
                        Content="Frame" />

                    <ui:ToggleSwitch
                        Grid.Row="2"
                        IsChecked="True"
                        Content="Elements of frame" />

                    <ui:ToggleSwitch
                        Grid.Row="3"
                        IsChecked="True"
                        Content="Materials" />

                    <ui:ToggleSwitch
                        Grid.Row="4"
                        IsChecked="True"
                        Content="System parts" />

                    <ui:ToggleSwitch
                        Grid.Row="5"
                        IsChecked="True"
                        Content="IFC parts" />
                </Grid>

                <Grid Name="OtherToggles"
                    Grid.Row="2"
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Text="Other views" />

                    <ui:ToggleSwitch
                        Grid.Row="1"
                        IsChecked="True"
                        Content="Legend" />
                </Grid>
            </Grid>
        </Border>

        <Border Name="SheetProps"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>

                </Grid>

                <TextBlock
                    Text="SOMEEEEEeee teeeeeeeeeeeeeeeext" />
            </Grid>
        </Border>

        <Border Name="ViewTemplates"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>

                </Grid>

                <TextBlock
                    Text="SOMEEEEEeee teeeeeeeeeeeeeeeext" />
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                MinWidth="150"
                Content="ButtonOk"
                Appearance="Info"
                Command="{Binding CreateCommand}"
                Click="ButtonOk_Click" />

            <ui:Button
                Margin="10"
                MinWidth="150"
                Content="ButtonCancel"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformPage>
