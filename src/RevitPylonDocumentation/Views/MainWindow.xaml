<core:WpfUIPlatformWindow
    x:Class="RevitPylonDocumentation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitPylonDocumentation.ViewModels"
    xmlns:local="clr-namespace:RevitPylonDocumentation.Views"
    xmlns:pages="clr-namespace:RevitPylonDocumentation.Views.Pages"
    xmlns:controls="clr-namespace:RevitPylonDocumentation.Views.Controls"
    
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Height="1020"    Width="1500"
    MinHeight="500" MinWidth="900"
    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <ui:NavigationView
            Grid.Row="1"
            x:Name="_rootNavigationView"
            FrameMargin="0"
            PaneDisplayMode="Left"
            PaneTitle="{me:LocalizationSource MainWindow.Settings}"
            OpenPaneLength="300"
            IsPaneOpen="True"
            IsBackButtonVisible="Collapsed"
            IsPaneVisible="True" 
            IsPaneToggleVisible="False">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="{me:LocalizationSource MainWindow.PluginRun}"
                    Icon="{ui:SymbolIcon Home24}"
                    TargetPageType="{x:Type pages:GeneralPage}" />

                <ui:NavigationViewItem
                    Content="{me:LocalizationSource MainWindow.SettingsMenu}"
                    Icon="{ui:SymbolIcon Settings24}"
                    IsExpanded="True">
                    <ui:NavigationViewItem.MenuItems >
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.VerticalViews}"
                            Icon="{ui:SymbolIcon CenterHorizontal24}"
                            TargetPageType="{x:Type pages:VerticalViewSettingsPage}"
                            ToolTip="{me:LocalizationSource MainWindow.VerticalViewsSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.HorizontalViews}"
                            Icon="{ui:SymbolIcon CenterVertical24}"
                            TargetPageType="{x:Type pages:HorizontalViewSettingsPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.HorizontalViewsSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.Schedules}"
                            Icon="{ui:SymbolIcon TableSettings24}"
                            TargetPageType="{x:Type pages:SchedulesPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.SchedulesSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.LegendsAndAnnotations}"
                            Icon="{ui:SymbolIcon BarcodeScanner24}"
                            TargetPageType="{x:Type pages:LegendViewsPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.LegendsAndAnnotationsSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.PylonParameters}"
                            Icon="{ui:SymbolIcon PauseSettings20}"
                            TargetPageType="{x:Type pages:PylonParamsPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.PylonParametersSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.ProjectParameters}"
                            Icon="{ui:SymbolIcon ArchiveSettings24}"
                            TargetPageType="{x:Type pages:ProjectParamsPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.ProjectParametersSettings}"/>
                        <ui:NavigationViewItem
                            Content="{me:LocalizationSource MainWindow.SheetParameters}"
                            Icon="{ui:SymbolIcon DocumentSettings20}"
                            TargetPageType="{x:Type pages:SheetParamsPage}" 
                            ToolTip="{me:LocalizationSource MainWindow.SheetParametersSettings}"/>
                    </ui:NavigationViewItem.MenuItems>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.PaneFooter>
                <Border
                    Margin="10 20"
                    Style="{StaticResource CustomBorder}">
                    <StackPanel>
                        <TextBlock
                            Margin="5"
                            FontWeight="Medium"
                            Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                            Text="{me:LocalizationSource MainWindow.BimTipTitle}" />

                        <TextBlock
                            Margin="5"
                            TextWrapping="WrapWithOverflow"
                            Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                            Text="{me:LocalizationSource MainWindow.BimTip1}" />

                        <TextBlock
                            Margin="5"
                            TextWrapping="WrapWithOverflow"
                            Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                            Text="{me:LocalizationSource MainWindow.BimTip2}" />
                    </StackPanel>
                </Border>
            </ui:NavigationView.PaneFooter>
        </ui:NavigationView>
    </Grid>
</core:WpfUIPlatformWindow>