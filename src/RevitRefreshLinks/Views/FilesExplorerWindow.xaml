<base:PlatformWindow
    x:Class="RevitRefreshLinks.Views.FilesExplorerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRefreshLinks.Views"
    xmlns:res="clr-namespace:RevitRefreshLinks.Resources"
    xmlns:vms="clr-namespace:RevitRefreshLinks.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{Binding Title}"
    Height="450"
    Width="800"
    MinHeight="300"
    MinWidth="500"
    d:DataContext="{d:DesignInstance vms:FilesExplorerViewModel, IsDesignTimeCreatable=False}">
    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <res:BoolToSelectionModeConverter
            x:Key="BoolToSelectionModeConverter" />
        <res:PathInfoImageConverter
            x:Key="PathInfoImageConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="45" />
        </Grid.RowDefinitions>

        <DockPanel
            Grid.Row="0"
            HorizontalAlignment="Left">
            <Button
                Content="Go to root TODO"
                Command="{Binding OpenRootFolderCommand}" />
            <Button
                Content="Go to parent TODO"
                Command="{Binding OpenParentFolderCommand}" />
            <TextBlock
                Text="{Binding ActiveDirectory.FullName}" />
        </DockPanel>
        <DockPanel
            Grid.Row="1"
            VerticalAlignment="Stretch">
            <ListView
                ItemsSource="{Binding ActiveDirectory.Content}"
                SelectionMode="{Binding MultiSelect, Converter={StaticResource BoolToSelectionModeConverter}}"
                res:ListViewBehavior.SelectedItems="{Binding SelectedItems}"
                SelectedItem="{Binding SelectedItem}"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                VerticalAlignment="Stretch">
                <i:Interaction.Triggers>
                    <i:EventTrigger
                        EventName="MouseDoubleClick">
                        <i:InvokeCommandAction
                            Command="{Binding OpenFolderCommand}"
                            CommandParameter="{Binding SelectedItem}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="32">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image
                                        Source="{Binding Converter={StaticResource PathInfoImageConverter}}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                            Header="Name TODO"
                            Width="600"
                            DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn
                            Header="Length TODO"
                            DisplayMemberBinding="{Binding Length}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <Button
                Width="80"
                Margin="10"
                Content="OK TODO"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <Button
                Width="80"
                Margin="10"
                Content="Ca TODO"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</base:PlatformWindow>
