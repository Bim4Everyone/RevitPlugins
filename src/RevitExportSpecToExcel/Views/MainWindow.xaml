<core:WpfUIPlatformWindow
    x:Class="RevitExportSpecToExcel.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitExportSpecToExcel.Views"
    xmlns:vms="clr-namespace:RevitExportSpecToExcel.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
   
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    
    Height="700"
    Width="800"
    
    MinHeight="700"
    MinWidth="800"
   
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="10,5"
            Style="{StaticResource CustomBorder}">
            <CheckBox
                Content="Create one file"
                IsChecked="{Binding SaveAsOneFile}"/>
        </Border>

        <Border
            Grid.Row="2"
            Margin="10,5"
            Style="{StaticResource CustomBorder}">
            <StackPanel
                Orientation="Vertical">
                <ui:AutoSuggestBox
                    Margin="0,0,0,5"
                    DockPanel.Dock="Top"
                    Icon="{ui:SymbolIcon Search24}"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    PlaceholderText="Search by name">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction
                                Command="{Binding SearchCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ui:AutoSuggestBox>
                <ui:DataGrid
                    ItemsSource="{Binding Path=FilteredSchedules}"
                    Style="{StaticResource  CustomResizableDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Binding="{Binding Path=IsChecked, Mode=TwoWay}"
                            Header="Check" />
                        <DataGridTextColumn
                            Binding="{Binding Path=Name}"
                            Header="Name"
                            Width="550"
                            IsReadOnly="True"/>
                        <DataGridTextColumn
                            Binding="{Binding Path=OpenStatus.Name}"
                            Header="Status"
                            IsReadOnly="True"/>
                    </DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding ExportSchedulesCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
