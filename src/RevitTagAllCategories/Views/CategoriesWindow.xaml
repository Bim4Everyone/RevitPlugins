<core:WpfUIPlatformWindow 
    x:Class="RevitTagAllCategories.Views.CategoriesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitTagAllCategories.Views"
    xmlns:vms="clr-namespace:RevitTagAllCategories.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:filtration="clr-namespace:Bim4Everyone.RevitFiltration.Controls.Views;assembly=Bim4Everyone.RevitFiltration.Controls"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    
    Height="600" Width="500"    
    MinHeight="600" MinWidth="500"
    
    d:DataContext="{d:DesignInstance vms:CategoriesWindowVM, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource CategoriesWindow.Title}" />

        <ui:TextBlock
            Grid.Row="1"
            Margin="10,10,10,3"
            Text="Выберите категорию для маркировки:" />

        <ui:TextBox
            Grid.Row="2"
            Margin="10,3"
            Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

        <ListBox
            Grid.Row="3"
            Margin="10,3"
            ItemsSource="{Binding Categories}"
            DisplayMemberPath="Name"
            SelectedItem="{Binding SelectedCategory}" />

        <CheckBox
            Grid.Row="4"
            Margin="10,5"
            Content="Маркировать типоразмеры"
            IsChecked="{Binding IsTypeMarking}" />

        <StackPanel
            Grid.Row="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />
            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />
            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
