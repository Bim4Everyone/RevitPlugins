<Window x:Class="RevitKrChecker.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        
        xmlns:vms="clr-namespace:RevitKrChecker.ViewModels"
        xmlns:local="clr-namespace:RevitKrChecker.Views"
        
        mc:Ignorable="d"
        Title="ReportWindow" 
        Height="600" Width="600" 
        d:DataContext="{d:DesignInstance vms:ReportVM, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Text="Группировка:"/>

        <ComboBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalContentAlignment="Center"
            Name="FirstLevelGrouping"
            SelectionChanged="FirstLevelGrouping_SelectionChanged" />

        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            VerticalContentAlignment="Center"
            Name="SecondLevelGrouping"
            SelectionChanged="SecondLevelGrouping_SelectionChanged" />

        <ComboBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            VerticalContentAlignment="Center"
            Name="ThirdLevelGrouping"
            SelectionChanged="ThirdLevelGrouping_SelectionChanged" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Content="Развернуть"
            Click="Button_Click_ListViewExpander_Expand"/>

        <Button
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            Content="Свернуть"
            Click="Button_Click_ListViewExpander_Collapse"/>
        
        <ListView 
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Margin="5" 
            Name="reportList" 
            ItemsSource="{Binding Path=ReportResult}"
            HorizontalContentAlignment="Stretch">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction
                        Command="{Binding Path=UpdateTooltipsCommand}"
                        CommandParameter="{Binding SelectedItems, ElementName=reportList}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock Margin="2" Foreground="Black" Text="{Binding Path=СheckName}"/>
                        <TextBlock Margin="2" Foreground="Black" Text=" ("/>
                        <TextBlock Margin="2" Foreground="Black" FontWeight="Bold" Text="{Binding Path=Elem.Id}"/>
                        <TextBlock Margin="2" Foreground="Black" Text=")"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander 
                                        IsExpanded="{Binding Tag, RelativeSource={RelativeSource AncestorType=GroupItem}, TargetNullValue=true, FallbackValue=true}"
                                        >
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter Margin="20,0,0,0"/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="5"
            Text="Объяснения ошибок:"/>

        <Border 
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="5"
            BorderBrush="Gainsboro" 
            BorderThickness="1">
            <ScrollViewer>
                <TextBlock
                    Margin="5"
                    TextWrapping="WrapWithOverflow"
                    Text="{Binding Path=SelectedErrorTooltips}"/>
            </ScrollViewer>
        </Border>
        

        <Button
            Grid.Row="6"
            Grid.Column="1"
            Margin="5"
            Padding="5"
            Content="Показать"
            Command="{Binding Path=ShowErrorElemsCommand}"
            CommandParameter="{Binding SelectedItems, ElementName=reportList}"/>

        <Button
            Grid.Row="6"
            Grid.Column="2"
            Margin="5"
            Padding="5"
            Content="Перепроверить"
            Command="{Binding Path=ReсheckCommand}"/>
    </Grid>
</Window>
