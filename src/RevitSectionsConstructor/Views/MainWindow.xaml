<core:WpfUIPlatformWindow
    x:Class="RevitSectionsConstructor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitSectionsConstructor.Views"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:vms="clr-namespace:RevitSectionsConstructor.ViewModels"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{me:LocalizationSource MainWindow.Title}"
    Height="700"
    Width="1100"
    MinHeight="200"
    MinWidth="300"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <ui:TextBlock
            x:Key="NameHeaderLeft"
            Text="{me:LocalizationSource MainWindow.NameHeader}" />
        <ui:TextBlock
            x:Key="CurrentLevelHeaderLeft"
            Text="{me:LocalizationSource MainWindow.CurrentLevelHeader}" />
        <ui:TextBlock
            x:Key="NameHeaderRight"
            Text="{me:LocalizationSource MainWindow.NameHeader}" />
        <ui:TextBlock
            x:Key="CurrentLevelHeaderRight"
            Text="{me:LocalizationSource MainWindow.CurrentLevelHeader}" />
        <ui:TextBlock
            x:Key="DeleteGroupHeader"
            Text="{me:LocalizationSource MainWindow.DeleteGroupHeader}" />
        <ui:TextBlock
            x:Key="StartLevelHeader"
            Text="{me:LocalizationSource MainWindow.StartLevelHeader}" />
        <ui:TextBlock
            x:Key="EndLevelHeader"
            Text="{me:LocalizationSource MainWindow.EndLevelHeader}" />
    </Window.Resources>
    <i:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Grid
            Grid.Row="1"
            Margin="10 10 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="50" />
                <ColumnDefinition
                    Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="45" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style
                    TargetType="TextBlock">
                    <Setter
                        Property="VerticalAlignment"
                        Value="Center" />
                    <Setter
                        Property="HorizontalAlignment"
                        Value="Left" />
                </Style>
            </Grid.Resources>

            <DockPanel
                Grid.Row="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Right">
                <DockPanel.Resources>
                    <Style
                        TargetType="TextBlock"
                        x:Key="Hint">
                        <Setter
                            Property="Visibility"
                            Value="Collapsed" />
                        <Setter
                            Property="VerticalAlignment"
                            Value="Center" />
                        <Setter
                            Property="HorizontalAlignment"
                            Value="Right" />
                        <Setter
                            Property="FontStyle"
                            Value="Italic" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding ElementName=SavePath, Path=Text}"
                                Value="{x:Static sys:String.Empty}">
                                <Setter
                                    Property="Visibility"
                                    Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Resources>
                <TextBlock
                    Text="{me:LocalizationSource MainWindow.PathHint}"
                    Style="{StaticResource Hint}" />
                <TextBlock
                    x:Name="SavePath"
                    Text="{Binding Path}"
                    HorizontalAlignment="Right" />
                <ui:Button
                    Width="80"
                    Height="25"
                    Margin="5 0 0 0"
                    HorizontalAlignment="Right"
                    Content="{me:LocalizationSource MainWindow.Browse}"
                    Command="{Binding SelectPathCommand}" />
            </DockPanel>

            <ui:DataGrid
                x:Name="LeftGrid"
                Grid.Row="1"
                Grid.Column="0"
                AutoGenerateColumns="False"
                ItemsSource="{Binding GroupsNotForCopy}"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                VirtualizingPanel.IsVirtualizing="True"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                SelectionMode="Extended">
                <ui:DataGrid.Columns>
                    <DataGridTextColumn
                        Header="{StaticResource NameHeaderLeft}"
                        Binding="{Binding Name}"
                        Width="1*"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Header="{StaticResource CurrentLevelHeaderLeft}"
                        Width="1*"
                        Binding="{Binding Level.Name}"
                        IsReadOnly="True" />
                    <DataGridCheckBoxColumn
                        Header="{StaticResource DeleteGroupHeader}"
                        Width="120"
                        IsReadOnly="False"
                        Binding="{Binding DeleteGroup}">
                    </DataGridCheckBoxColumn>
                </ui:DataGrid.Columns>
            </ui:DataGrid>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center">
                <ui:Button
                    Margin="1"
                    CommandParameter="{Binding ElementName=LeftGrid, Path=SelectedItems}"
                    Command="{Binding MoveGroupsToCopyCommand}"
                    Content="{ui:SymbolIcon Symbol=AlignRight20}" />
                <ui:Button
                    Margin="1"
                    CommandParameter="{Binding ElementName=RightGrid, Path=SelectedItems}"
                    Command="{Binding MoveGroupsFromCopyCommand}"
                    Content="{ui:SymbolIcon Symbol=AlignLeft20}" />
            </StackPanel>

            <ui:DataGrid
                x:Name="RightGrid"
                Grid.Row="1"
                Grid.Column="2"
                AutoGenerateColumns="False"
                ItemsSource="{Binding GroupsForCopy}"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                VirtualizingPanel.IsVirtualizing="True"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                SelectionMode="Extended">
                <ui:DataGrid.Columns>
                    <DataGridTextColumn
                        Header="{StaticResource NameHeaderRight}"
                        Binding="{Binding Name}"
                        Width="1*"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Header="{StaticResource CurrentLevelHeaderRight}"
                        Width="1*"
                        Binding="{Binding Level.Name}"
                        IsReadOnly="True" />
                    <DataGridComboBoxColumn
                        Header="{StaticResource StartLevelHeader}"
                        Width="1*"
                        IsReadOnly="False"
                        SelectedItemBinding="{Binding SelectedBottomLevel, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding EnabledBottomLevels}">
                    </DataGridComboBoxColumn>
                    <DataGridComboBoxColumn
                        Header="{StaticResource EndLevelHeader}"
                        Width="1*"
                        IsReadOnly="False"
                        SelectedItemBinding="{Binding SelectedTopLevel, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding EnabledTopLevels}">
                    </DataGridComboBoxColumn>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </Grid>

        <StackPanel
            Grid.Row="2"
            Height="45"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Height="25"
                IsDefault="True"
                Appearance="Info"
                Content="{me:LocalizationSource Ok}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Height="25"
                IsCancel="True"
                Content="{me:LocalizationSource Cancel}"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
