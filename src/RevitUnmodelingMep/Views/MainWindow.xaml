<core:WpfUIPlatformWindow
    x:Class="RevitUnmodelingMep.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitUnmodelingMep.Views"
    xmlns:vms="clr-namespace:RevitUnmodelingMep.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
   
    mc:Ignorable="d"
    Title="{me:LocalizationSource MainWindow.Title}"
    
    Height="720"
    Width="1100"
    
    MinHeight="640"
    MinWidth="960"
   
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <core:WpfUIPlatformWindow.Resources>
        <Style
            TargetType="Border"
            x:Key="CardBorder">
            <Setter Property="Background" Value="{DynamicResource CardBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="{DynamicResource CardControlBorderThemeThickness}" />
            <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <Style
            TargetType="TextBlock"
            x:Key="FieldLabel">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="Margin" Value="0 6 0 2" />
        </Style>

        <Style
            TargetType="ListBoxItem"
            x:Key="NavItemStyle">
            <Setter Property="MinHeight" Value="48" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0 4 0 0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="NavBorder"
                            Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="{DynamicResource CardControlBorderThemeThickness}"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                Margin="6 0"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="NavBorder" Property="Background" Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                                <Setter TargetName="NavBorder" Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </core:WpfUIPlatformWindow.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Title="Настройка расходников" />

        <Grid
            Grid.Row="1"
            Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Style="{StaticResource CardBorder}"
                Padding="12">
                <StackPanel>
                    <ui:TextBlock
                        Margin="4 0 0 12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{me:LocalizationSource MainWindow.Title}" />

                    <ListBox
                        x:Name="NavigationList"
                        BorderThickness="0"
                        Background="Transparent"
                        SelectedIndex="{Binding SelectedIndex, ElementName=ContentTabs, Mode=TwoWay}"
                        ItemContainerStyle="{StaticResource NavItemStyle}">
                        <ListBoxItem Content="Типы расходников" />
                        <ListBoxItem Content="Назначение расходников" />
                    </ListBox>
                </StackPanel>
            </Border>

            <Border
                Grid.Column="2"
                Style="{StaticResource CardBorder}">
                <TabControl
                    x:Name="ContentTabs"
                    Background="Transparent"
                    BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="Типы расходников">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0 0 0 12">
                                <Border Style="{StaticResource CardBorder}">
                                <StackPanel>
                                        <ItemsControl
                                            ItemsSource="{Binding ConsumableTypes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Expander
                                                        Margin="0 0 0 8"
                                                        IsExpanded="False">
                                                        <Expander.Header>
                                                            <Grid
                                                                Height="44"
                                                                MinHeight="44"
                                                                VerticalAlignment="Center">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock
                                                                    Margin="0 0 8 0"
                                                                    VerticalAlignment="Center"
                                                                    Text="{Binding ConsumableTypeName}" />

                                                                <ui:Button
                                                                    Grid.Column="1"
                                                                    Width="36"
                                                                    Height="36"
                                                                    Padding="0"
                                                                    VerticalAlignment="Center"
                                                                    HorizontalAlignment="Center"
                                                                    Appearance="Transparent"
                                                                    Content="{ui:SymbolIcon Symbol=Delete24}"
                                                                    Command="{Binding DataContext.RemoveConsumableTypeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}" />
                                                            </Grid>
                                                        </Expander.Header>

                                                        <StackPanel>
                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Название расходника" />
                                                                <ui:TextBox
                                                                    Text="{Binding ConsumableTypeName, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Категория" />
                                                            <ComboBox
                                                                MinHeight="32"
                                                                ItemsSource="{Binding DataContext.CategoryOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                DisplayMemberPath="Name"
                                                                SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Группирование" />
                                                            <ui:TextBox
                                                                MinHeight="32"
                                                                Text="{Binding Grouping, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Полное наименование" />
                                                                <ui:TextBox
                                                                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Марка" />
                                                                <ui:TextBox
                                                                    Text="{Binding Mark, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Код" />
                                                            <ui:TextBox
                                                                Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Ед. изм." />
                                                            <ui:TextBox
                                                                Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Производитель" />
                                                                <ui:TextBox
                                                                    Text="{Binding Maker, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Формула количества (Double, без префикса Value = )" />
                                                                <ui:TextBox
                                                                    AcceptsReturn="True"
                                                                    Height="90"
                                                                    TextWrapping="Wrap"
                                                                    Text="{Binding Formula, UpdateSourceTrigger=PropertyChanged}" />

                                                            <TextBlock
                                                                Style="{StaticResource FieldLabel}"
                                                                Text="Формат примечания (Str)" />
                                                                <ui:TextBox
                                                                    AcceptsReturn="True"
                                                                    Height="60"
                                                                    TextWrapping="Wrap"
                                                                    Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}" />

                                                            <!-- Р­РјР°Р»СЊ Рё Р“СЂСѓРЅС‚РѕРІРєР° СѓР±СЂР°РЅС‹ РїРѕ Р·Р°РїСЂРѕСЃСѓ -->
                                                        </StackPanel>
                                                    </Expander>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <StackPanel
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0 12 0 0">
                                            <ui:Button
                                                Width="36"
                                                Height="36"
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{ui:SymbolIcon Symbol=Add24}"
                                                Command="{Binding AddConsumableTypeCommand}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Назначение расходников">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <ItemsControl ItemsSource="{Binding CategoryAssignments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Margin="0 0 0 8" IsExpanded="False">
                                            <Expander.Header>
                                                <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0 8 0 0">
                                                <ItemsControl ItemsSource="{Binding SystemTypes}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Expander Margin="0 0 0 8" IsExpanded="False">
                                                                <Expander.Header>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                                                        <CheckBox Grid.Column="1" VerticalAlignment="Center" Content="Выбрать все" IsChecked="{Binding IsAllSelected, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </Expander.Header>
                                                                <ItemsControl ItemsSource="{Binding Configs}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <CheckBox Margin="0 4 0 0" Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </Expander>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <Grid
            Grid.Row="2"
            Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left">
                <ui:Button
                    Margin="0 0 8 0"
                    Width="100"
                    Content="Импорт" />
                <ui:Button
                    Width="100"
                    Content="Экспорт" />
            </StackPanel>

            <ui:TextBlock
                Grid.Column="1"
                Margin="12 0"
                VerticalAlignment="Center"
                Foreground="Orange"
                Text="{Binding ErrorText}" />

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <ui:Button
                    Margin="0 0 8 0"
                    Width="90"
                    Appearance="Info"
                    Content="{me:LocalizationSource MainWindow.ButtonOk}"
                    Click="ButtonOk_Click"
                    Command="{Binding AcceptViewCommand}" />

                <ui:Button
                    Width="90"
                    Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                    IsCancel="True"
                    Click="ButtonCancel_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</core:WpfUIPlatformWindow>

