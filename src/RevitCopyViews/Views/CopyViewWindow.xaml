<core:WpfUIPlatformWindow
    x:Class="RevitCopyViews.Views.CopyViewWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitCopyViews.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Title="{me:LocalizationSource CopyViewWindow.Title}"

    Width="600"
    Height="550"

    MinWidth="600"
    MinHeight="550"

    d:DataContext="{d:DesignInstance vms:CopyViewViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ViewsStyles/LabelStyles.xaml" />
                <ResourceDictionary Source="../ViewsStyles/BorderStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource CopyViewWindow.Title}" />

        <Border
            Grid.Row="1"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <ui:TextBlock
                    Style="{StaticResource LabelStyle}"
                    Text="{me:LocalizationSource CopyViewWindow.Options}" />
                
                <CheckBox
                    Content="{me:LocalizationSource CopyViewWindow.AddElevationMark}"
                    IsChecked="{Binding WithElevation, UpdateSourceTrigger=PropertyChanged}" />
                
                <CheckBox
                    Content="{me:LocalizationSource CopyViewWindow.CopyViewWithDetails}"
                    IsChecked="{Binding CopyWithDetail, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="2"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <ui:TextBlock
                    Style="{StaticResource LabelStyle}"
                    Text="{me:LocalizationSource CopyViewWindow.GroupView}" />

                <ComboBox
                    IsEditable="True"
                    ItemsSource="{Binding GroupViews}"
                    Text="{Binding GroupView, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="3"
            Style="{StaticResource BorderStyle}">

            <StackPanel>
                <ui:TextBlock
                    Style="{StaticResource LabelStyle}"
                    Text="{me:LocalizationSource CopyViewWindow.Prefix}" />

                <CheckBox
                    Content="{me:LocalizationSource CopyViewWindow.Replace}"
                    IsChecked="{Binding ReplacePrefix, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsAllowReplacePrefix, UpdateSourceTrigger=PropertyChanged}" />

                <ComboBox
                    IsEditable="True"
                    ItemsSource="{Binding Prefixes}"
                    Text="{Binding Prefix, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

        </Border>

        <Border
            Grid.Row="4"
            Style="{StaticResource BorderStyle}">

            <StackPanel>
                <ui:TextBlock
                    Style="{StaticResource LabelStyle}"
                    Text="{me:LocalizationSource CopyViewWindow.Suffix}" />

                <CheckBox
                    Content="{me:LocalizationSource CopyViewWindow.Replace}"
                    IsChecked="{Binding ReplaceSuffix, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsAllowReplaceSuffix, UpdateSourceTrigger=PropertyChanged}" />

                <ComboBox
                    IsEditable="True"
                    ItemsSource="{Binding Suffixes}"
                    Text="{Binding Suffix, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="6"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>