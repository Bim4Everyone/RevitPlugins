<core:WpfUIPlatformWindow
    x:Class="RevitCopyViews.Views.CopyUserWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitCopyViews.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Title="{me:LocalizationSource CopyUserWindow.Title}"

    Width="500"
    Height="250"

    MinWidth="500"
    MinHeight="250"

    d:DataContext="{d:DesignInstance vms:CopyUserViewModel, IsDesignTimeCreatable=False}">
    
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource CopyUserWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="0 8"
            Padding="14 8"
            Background="{DynamicResource CardBackground}"
            CornerRadius="{DynamicResource ControlCornerRadius}">

            <DockPanel
                LastChildFill="True">
                <ui:TextBlock
                    Width="100"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center"
                    Text="{me:LocalizationSource CopyUserWindow.LastName}" />

                <ui:TextBox
                    Margin="14 0 0 0"
                    Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>

        <Border
            Grid.Row="2"
            Padding="14 8"
            Background="{DynamicResource CardBackground}"
            CornerRadius="{DynamicResource ControlCornerRadius}">

            <DockPanel
                LastChildFill="True">
                <ui:TextBlock
                    Width="100"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center"
                    Text="{me:LocalizationSource CopyUserWindow.Prefix}" />

                <ui:TextBox
                    Margin="14 0 0 0"
                    Text="{Binding Prefix, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>

        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>