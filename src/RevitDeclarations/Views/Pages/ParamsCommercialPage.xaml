<core:WpfUIPlatformPage 
    x:Class="RevitDeclarations.Views.ParamsCommercialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:RevitDeclarations.Views"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vms="clr-namespace:RevitDeclarations.ViewModels"    
    d:DataContext="{d:DesignInstance vms:CommercialParamsVM, IsDesignTimeCreatable=False}"
    x:ClassModifier="internal"
    mc:Ignorable="d" 
    Background="White"
    MinHeight="770" MinWidth="630"
    Height="Auto" Width="Auto">

    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="../Styles/StyleResources.xaml"/>
                <ResourceDictionary  Source="../ToolTips/ParameterToolTips.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Style="{StaticResource HeaderName}"
            Text="Конфигурации"/>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ParamDocumentToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="Файл-основа для поиска параметров::"/>
            <ComboBox
                Grid.Row="0"
                Grid.Column="2"
                Margin="10, 0"
                ItemsSource="{Binding RevitDocuments}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedDocument}"/>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource LastConfigToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="Конфигурация последнего запуска:"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Margin="10, 0"
                Content="Загрузить"
                Command="{Binding SetLastConfigCommand}"/>

            <Button
                Grid.Column="0"
                Grid.Row="2"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource CompanyConfigToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="Корпоративная конфигурация:"/>
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="10, 0"
                Content="Загрузить"
                Command="{Binding SetCompanyConfigCommand}"/>
        </Grid>

        <TextBlock 
            Grid.Row="2"
            Style="{StaticResource HeaderName}"
            Text="Параметры для фильтрации и группировки помещений"/>

        <Grid
            Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Grid.Row="0"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource FilterRoomsParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="0"
                Style="{StaticResource ParameterName}"
                Text="Параметр для фильтрации нежилых помещений:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="0"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedFilterRoomsParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="1"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource FilterRoomsValuesToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="1"
                Style="{StaticResource ParameterName}"
                Text="Значения параметра фильтрации:"/>
            <Grid
                Grid.Column="2"
                Grid.Row="1"
                Margin="10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Text="{Binding FilterRoomsValue}"/>
                <Button
                    Grid.Column="1"                    
                    Content="Добавить"
                    Command="{Binding AddFilterCommand}"/>
            </Grid>

            <ItemsControl
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Margin="10, 0"
                MinHeight="30"
                Height="Auto"                
                ItemsSource="{Binding FilterRoomsValues}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel                            
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button 
                            Width="Auto"
                            Margin="4"
                            Padding="3"
                            Background="#e9f0f0"
                            BorderThickness="0"
                            Command="{Binding RemoveFilterCommand}">
                            <DockPanel>
                                <TextBlock
                                    DockPanel.Dock="Left"
                                    Text="{Binding Value}"/>
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    FontWeight="Bold"
                                    FontSize="10"                                
                                    Text="  x"/>
                            </DockPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Column="0"
                Grid.Row="3"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource GroupBySectionParamCommerToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="3"
                Style="{StaticResource ParameterName}"
                Text="Параметр группировки нежилых групп:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="3"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedGroupingBySectionParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="4"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource GroupByGroupCommerParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="4"
                Style="{StaticResource ParameterName}"
                Text="Параметр группировки внутри нежилых групп:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="4"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedGroupingByGroupParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="5"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource MultiStoreyCommerParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="5"
                Style="{StaticResource ParameterName}"
                Text="Параметр группировки многоуровневых групп:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="5"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedMultiStoreyParam}"/>
        </Grid>

        <TextBlock 
            Grid.Row="4"
            Style="{StaticResource HeaderName}"
            Text="Параметры для заполнения декларации"/>

        <Grid
            Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Grid.Row="0"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ConditionalNumberParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="0"
                Style="{StaticResource ParameterName}"
                Text="1.1 Номер помещения:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="0"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedRoomNumberParam}"/>

            <TextBlock
                Grid.Column="1"
                Grid.Row="1"
                Text="1.2 Добавить префикс в номер:"/>
            <CheckBox
                Grid.Column="2"
                Grid.Row="1"
                Margin="10, 0"
                Height="20"
                IsChecked="{Binding AddPrefixToNumber}"/>

            <TextBlock
                Grid.Column="1"
                Grid.Row="2"
                Text="1.3 Параметр для префикса:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="2"
                Margin="10, 0"
                IsEnabled="{Binding AddPrefixToNumber}"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedApartNumParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="3"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource DepartmentParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="3"
                Style="{StaticResource ParameterName}"
                Text="2. Назначение:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="3"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedDepartmentParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="4"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource LevelParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="4"
                Style="{StaticResource ParameterName}"
                Text="3. Этаж расположения:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="4"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedLevelParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="5"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource SectionParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="5"
                Style="{StaticResource ParameterName}"
                Text="4. Номер подъезда:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="5"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedSectionParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="6"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource BuildingParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="6"
                Style="{StaticResource ParameterName}"
                Text="5. Номер корпуса:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="6"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedBuildingParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="7"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource BuildingNumberParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="7"
                Style="{StaticResource ParameterName}"
                Text="6. Номер здания:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="7"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedBuildingNumberParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="8"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ConstrWorkNumberParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="8"
                Style="{StaticResource ParameterName}"
                Text="7. Номер ОКС:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="8"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedConstrWorksNumberParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="9"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource CommercialAreaParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="9"
                Style="{StaticResource ParameterName}"
                Text="8. Общая площадь"/>
            
            <TextBlock
                Grid.Column="1"
                Grid.Row="10"
                Style="{StaticResource ParameterName}"
                Text="8.1 Для группы из нескольких помещений:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="10"
                Margin="10, 0"
                ItemsSource="{Binding DoubleParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedApartAreaParam}"/>

            <TextBlock
                Grid.Column="1"
                Grid.Row="11"
                Style="{StaticResource ParameterName}"
                Text="8.2 Для одного помещения:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="11"
                Margin="10, 0"
                ItemsSource="{Binding DoubleParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedRoomAreaParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="12"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource RoomsHeightParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="12"
                Style="{StaticResource ParameterName}"
                Text="9. Высота потолков:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="12"
                Margin="10, 0"
                ItemsSource="{Binding DoubleParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedRoomsHeightParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="13"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ParkingSpaceClassParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="13"
                Style="{StaticResource ParameterName}"
                Text="10. Класс машино-места:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="13"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedParkingSpaceClass}"/>

            <Button
                Grid.Column="0"
                Grid.Row="14"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ParkingInfoParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="14"
                Style="{StaticResource ParameterName}"
                Text="11. Применимость:"/>
            <ComboBox
                Grid.Column="2"
                Grid.Row="14"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedParkingInfo}"/>

            <Button
                Grid.Row="15"
                Grid.Column="0"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource CommercialNameClassParamToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Row="15"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="12. Наименование помещения"/>

            <TextBlock
                Grid.Row="16"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="12.1 Для группы из нескольких помещений:"/>
            <ComboBox
                Grid.Row="16"
                Grid.Column="2"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedGroupNameParam}"/>

            <TextBlock
                Grid.Row="17"
                Grid.Column="1"
                Style="{StaticResource ParameterName}"
                Text="12.2 Для одного помещения:"/>
            <ComboBox
                Grid.Row="17"
                Grid.Column="2"
                Margin="10, 0"
                ItemsSource="{Binding TextParameters}"
                DisplayMemberPath="Definition.Name"
                SelectedItem="{Binding SelectedRoomNameParam}"/>

            <Button
                Grid.Column="0"
                Grid.Row="18"
                Style="{StaticResource RoundButton}">
                <Button.ToolTip>
                    <ToolTip
                        Content="{StaticResource ProjectNameToolTip}"
                        Style="{StaticResource ParamToolTip}"/>
                </Button.ToolTip>
            </Button>
            <TextBlock
                Grid.Column="1"
                Grid.Row="18"
                Style="{StaticResource ParameterName}"
                Text="13. ИД Объекта:"/>
            <TextBox
                Grid.Column="2"
                Grid.Row="18"
                Margin="10, 0"
                Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</core:WpfUIPlatformPage>
