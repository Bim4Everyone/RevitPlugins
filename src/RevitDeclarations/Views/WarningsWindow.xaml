<core:WpfUIPlatformWindow
    x:Class="RevitDeclarations.Views.WarningsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitDeclarations.Views"
    xmlns:edits="clr-namespace:RevitDeclarations.Views.Controls"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    
    Title="Ошибки выгрузки декларации"
    
    Height="600" Width="1000"
    MinHeight="600" MinWidth="1000">

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl
                Padding="10"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                ScrollViewer.CanContentScroll="True"
                ItemsSource="{Binding ErrorLists}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <edits:CustomGroupEditControl
                            Header="{Binding FullErrorName}"
                            Description="{Binding Description}"
                            ExtraTextVisible="True"
                            IsChecked="True"
                            Icon="{ui:SymbolIcon Warning24}">
                            <edits:CustomGroupEditControl.EditControl>
                                <ui:DataGrid
                                    Style="{StaticResource CustomResizableDataGridStyle}"
                                    ItemsSource="{Binding Errors}">
                                    <ui:DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="400"
                                            Binding="{Binding ElementInfo}">
                                            <DataGridTextColumn.Header>
                                                <TextBlock
                                                    Text="{DynamicResource WarningsWindow.HeaderName}" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn
                                            Width="500"
                                            Binding="{Binding ErrorInfo}">
                                            <DataGridTextColumn.Header>
                                                <TextBlock
                                                    Text="{DynamicResource WarningsWindow.HeaderDescription}" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                    </ui:DataGrid.Columns>
                                </ui:DataGrid>
                            </edits:CustomGroupEditControl.EditControl>
                        </edits:CustomGroupEditControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel
                            IsVirtualizing="True"
                            VirtualizationMode="Recycling" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}"/>
            <ui:Button
                Margin="10"
                Content="Выгрузить декларацию"
                IsDefault="True"
                IsEnabled="{Binding IsWarning}"
                Click="ButtonOk_Click"/>
            <ui:Button
                Margin="10"
                Content="Отменить выгрузку"
                IsCancel="True"
                IsEnabled="{Binding IsWarning}"
                Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
