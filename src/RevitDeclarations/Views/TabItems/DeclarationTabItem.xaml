<core:WpfUIPlatformPage 
    x:Class="RevitDeclarations.Views.DeclarationTabItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vms="clr-namespace:RevitDeclarations.ViewModels"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    
    Background="White"
    x:ClassModifier="internal"
    >

    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="../Styles/StyleResources.xaml"/>
                <ResourceDictionary  Source="../Styles.xaml"/>
                <ResourceDictionary  Source="../ToolTips/ParameterToolTips.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="14,0,14,4"
                Style="{StaticResource CustomBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                <TextBlock 
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Style="{StaticResource HeaderName}"
                    Text="Формат выгрузки"/>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10, 0"
                    Style="{StaticResource ParameterName}"
                    Text="Название файла:"/>
                <ui:TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"/>
                <ui:Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0, 0, 10, 0"
                    Content = "Выбрать папку"
                    Command="{Binding SelectFolderCommand}"/>

                <TextBlock
                    Grid.Row="2"  
                    Grid.Column="0"
                    Margin="10,0"
                    Style="{StaticResource ParameterName}"
                    Text="Папка выгрузки:"/>
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0, 5, 10, 5"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Text="{Binding FilePath}"/>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10, 0"
                    Style="{StaticResource ParameterName}"
                    Text="Формат файла:"/>
                <ComboBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0, 0, 10, 0"
                    ItemsSource="{Binding ExportFormats}"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding SelectedFormat}"/>
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Margin="14,0,14,4"
                Style="{StaticResource CustomBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HeaderName}"
                        Text="Настройки выгрузки декларации"/>

                    <TextBlock 
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 0"
                        Style="{StaticResource ParameterName}"
                        Text="Стадия:"/>
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0, 0, 10, 0"
                        ItemsSource="{Binding Phases}"
                        DisplayMemberPath="Name"
                        SelectedItem="{Binding SelectedPhase}"/>

                    <TextBlock 
                        Grid.Row="2"
                        Grid.Column="0"                    
                        Margin="10, 0"
                        Style="{StaticResource ParameterName}"
                        Text="Количество знаков после запятой:"/>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0, 0, 10, 0"
                        PreviewTextInput="IndentValidation"
                        PreviewKeyDown="TextBox_PreviewKeyDown"
                        Text="{Binding Accuracy}"/>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10, 0"
                        Style="{StaticResource ParameterName}"
                        Text="Рассчитывать УТП:"/>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <CheckBox
                            VerticalAlignment="Center"
                            IsEnabled="{Binding CanLoadUtp}"
                            IsChecked="{Binding LoadUtp}"/>
                        <TextBlock
                            Margin="5,0,0,0"
                            Foreground="Orange"
                            Padding="0,2"
                            VerticalAlignment="Center"
                            Text="{Binding CanLoadUtpText}"/>
                    </StackPanel>
                </Grid>
            </Border>
                    
            <Border
                Grid.Row="2"
                Margin="14,0,14,4"
                Style="{StaticResource CustomBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock 
                        Grid.Row="0"
                        Style="{StaticResource HeaderName}"
                        Text="Проекты с помещениями, доступные для выгрузки:"/>
                    <Border
                        Grid.Row="1"
                        Style="{StaticResource CustomBorder}">
                        <ListBox                    
                            Margin="10, 0, 10, 10"
                            ItemsSource="{Binding RevitDocuments}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox 
                                        Content="{Binding Name}" 
                                        IsChecked="{Binding IsChecked}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox> 
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</core:WpfUIPlatformPage>
