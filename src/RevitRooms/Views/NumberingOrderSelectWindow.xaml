<core:WpfUIPlatformWindow
    x:Class="RevitRooms.Views.NumberingOrderSelectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRooms.Views"
    xmlns:vms="clr-namespace:RevitRooms.Views"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:RevitRooms.Behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    
    Height="600"
    Width="700"
    
    MinHeight="600"
    MinWidth="700"
    
    d:DataContext="{d:DesignInstance vms:NumberingOrderSelectViewModel, IsDesignTimeCreatable=False}">

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Title="{me:LocalizationSource NumberingOrderWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="10,5"
            Style="{StaticResource CustomBorder}">
            <ListBox
                SelectionMode="Extended"
                ItemsSource="{Binding NumberingOrders}"
                DisplayMemberPath="Name">
                <i:Interaction.Behaviors>
                    <behaviors:SelectedItemsBehavior
                        SelectedItems="{Binding DataContext.SelectedNumberingOrders, 
                                                RelativeSource={RelativeSource AncestorType=Window},
                                                Mode=TwoWay}" />
                </i:Interaction.Behaviors>
            </ListBox>
        </Border>

        <StackPanel 
            Grid.Row="2" 
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:Button
                Content="{me:LocalizationSource Button.Ok}"
                Height="35"
                Width="80"
                Margin="10"
                IsDefault="True"
                Click="ButtonOK_Click"
                Command="{Binding SelectCommand}" />

            <ui:Button
                Content="{me:LocalizationSource Button.Cancel}"
                Height="35"
                Width="80"
                Margin="10"
                IsCancel="true"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>