<core:WpfUIPlatformWindow
    x:Class="RevitRooms.Views.RoomsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRooms.Views"
    xmlns:vms="clr-namespace:RevitRooms.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Height="800" 
    Width="1000"
    
    MinHeight="800"
    MinWidth="1000"
    
    d:DataContext="{d:DesignInstance vms:RoomsViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter
                x:Key="BoolToVis" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}"/>
        
        <Border
            Grid.Row="1"
            Margin="14,0,14,4"
            Style="{StaticResource CustomBorder}">
            <ComboBox
                ItemsSource="{Binding RevitViewModels}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding RevitViewModel}" />
        </Border>

        <Border
            Grid.Row="2"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <StackPanel>
                <CheckBox
                    Margin="0,4"
                    IsChecked="{Binding RevitViewModel.IsFillLevel}">
                    <TextBlock
                        Text="{Binding LevelParamName, Mode=OneWay, StringFormat='Заполнить {0}'}" />
                </CheckBox>

                <CheckBox
                    Margin="0,4"
                    Content="Рассчитать площадь по пятну"
                    IsChecked="{Binding RevitViewModel.IsSpotCalcArea}" />

                <CheckBox
                    Margin="0,4"
                    Content="Рассчитать количество комнат"
                    IsChecked="{Binding RevitViewModel.IsCountRooms}" />

                <CheckBox
                    x:Name="_checkArea"
                    Margin="0,4"
                    Content="Проверить площадь помещений на изменения"
                    IsChecked="{Binding RevitViewModel.IsCheckRoomsChanges}" />

                <StackPanel
                    Grid.Row="6"
                    Margin="0,4"
                    Orientation="Horizontal"
                    Visibility="{Binding ElementName=_checkArea,Path=IsChecked, Converter={StaticResource BoolToVis}}">
                    <TextBlock
                        Margin="70,0,10,0"
                        VerticalAlignment="Center"
                        Text="Точность проверки:" />
                    <ui:TextBox
                        Width="80"
                        Text="{Binding RevitViewModel.RoomAccuracy, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="%" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="3"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <StackPanel>
            <DockPanel
                    Grid.Row="7"
                    Margin="10,4,0,4">
                    <TextBlock
                        Width="200"
                        VerticalAlignment="Center"
                        Text="Стадия:" />
                    <ComboBox
                        Margin="10,0,0,0"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding RevitViewModel.Phases}"
                        SelectedValue="{Binding RevitViewModel.Phase}" />
                </DockPanel>

                <DockPanel
                    Grid.Row="8"
                    Margin="10,4,0,4">
                    <TextBlock
                        x:Name="_text"
                        Width="200"
                        VerticalAlignment="Center"
                        Text="Число знаков после запятой:" />
                    <ComboBox
                        Margin="10,0,0,0"
                        ItemsSource="{Binding RevitViewModel.RoundAccuracyValues}"
                        SelectedValue="{Binding RevitViewModel.RoundAccuracy}" />
                </DockPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="4"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <ui:DataGrid
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                Style="{StaticResource CustomResizableDataGridStyle}"
                IsEnabled="{Binding RevitViewModel.IsAllowSelectLevels}"
                ItemsSource="{Binding RevitViewModel.Levels}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <DataGridCheckBoxColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderCheck}" />
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        Binding="{Binding Path=Name}"
                        Width="500"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Binding="{Binding Path=LevelNames}"
                        Width="300"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderFloors}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>

            </ui:DataGrid>
        </Border>

        <CheckBox
            Grid.Row="5"
            Margin="14,4,0,14"
            Content="Не показывать предупреждения"
            IsChecked="{Binding RevitViewModel.NotShowWarnings}" />

        <StackPanel 
            Grid.Row="5" 
            Orientation="Horizontal"
            Margin="0,4,14,14"
            HorizontalAlignment="Right">
            <TextBlock 
                Margin="8" 
                VerticalAlignment="Center"
                Text="{Binding RevitViewModel.ErrorText}" 
                Foreground="Orange" />

            <ui:Button
                Content="Рассчитать зоны"
                Margin="4,0" 
                Click="ButtonOK_Click"
                Command="{Binding RevitViewModel.CalculateAreasCommand}" />

            <ui:Button
                Content="Рассчитать помещения"
                Margin="4,0" 
                IsDefault="True"
                Click="ButtonOK_Click" 
                Command="{Binding RevitViewModel.CalculateCommand}" />

            <ui:Button
                Content="Отмена" 
                Width="80"
                Margin="4,0,0,0"
                IsCancel="true" 
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>