<UserControl 
    x:Class="RevitRooms.Views.Controls.CustomGroupEditControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitRooms.Views.Controls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"
    x:Name="_this"
    mc:Ignorable="d"
    Margin="5"
    d:DesignHeight="300"
    d:DesignWidth="300">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="ExtraContentVisible"
            TrueValue="Visible"
            FalseValue="Collapsed" />
        <converters:BoolToVisibilityConverter
            x:Key="ExtraTextVisible"
            TrueValue="Visible"
            FalseValue="Collapsed" />
    </UserControl.Resources>

    <ui:CardExpander
        IsExpanded="False"
        Icon="{Binding Icon, ElementName=_this}">

        <ui:CardExpander.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    FontTypography="BodyStrong"
                    TextWrapping="WrapWithOverflow"
                    Text="{Binding Header, ElementName=_this}" />

                <ui:TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Appearance="Secondary"
                    TextWrapping="WrapWithOverflow"
                    Text="{Binding Description, ElementName=_this}" />

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.RowSpan="2"
                    Grid.Column="1">

                    <ui:ToggleSwitch
                        Margin="10,0,10,0"
                        OnContent="{Binding SwitchOnContent, ElementName=_this}"
                        OffContent="{Binding SwitchOffContent, ElementName=_this}"
                        IsChecked="{Binding IsChecked, ElementName=_this, Mode=TwoWay}"
                        Visibility="{Binding ToggleSwitchVisible, 
                            ElementName=_this, Converter={StaticResource ExtraContentVisible}}" />

                    <ui:TextBlock
                        Margin="10,0,10,0"
                        FontTypography="BodyStrong"
                        Text="{Binding ExtraText, ElementName=_this}"
                        Visibility="{Binding ExtraTextVisible, ElementName=_this,
                            Converter={StaticResource ExtraTextVisible}}" />

                    <ContentControl
                        Margin="10,0,10,0"
                        Content="{Binding ExtraIcon, ElementName=_this}"
                        Visibility="{Binding ExtraIconVisible, ElementName=_this,
                            Converter={StaticResource ExtraContentVisible}}" />
                </StackPanel>

            </Grid>
        </ui:CardExpander.Header>

        <ContentControl
            VerticalAlignment="Center"
            IsEnabled="{Binding IsChecked, ElementName=_this}"
            Content="{Binding EditControl, ElementName=_this}" />
    </ui:CardExpander>
</UserControl>
