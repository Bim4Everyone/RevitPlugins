<core:WpfUIPlatformWindow
    x:Class="RevitRooms.Views.RoomsNumsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRooms.Views"
    xmlns:vms="clr-namespace:RevitRooms.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Height="650" 
    Width="850"
    
    MinHeight="650"
    MinWidth="850"
    
    x:Name="_this"

    d:DataContext="{d:DesignInstance vms:RoomNumsViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding RoomsNums.LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter
                x:Key="BoolToVis" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <ComboBox
            Grid.Row="1" Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10"
            DisplayMemberPath="Name"
            ItemsSource="{Binding RoomsNumsViewModels}"
            SelectedItem="{Binding RoomsNums}" />

        <DockPanel
            Grid.Row="2" Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10">
            <TextBlock
                Margin="0,0,10,0"
                Text="Стадия:" />
            <ComboBox
                DisplayMemberPath="Name"
                ItemsSource="{Binding RoomsNums.Phases}"
                SelectedItem="{Binding RoomsNums.Phase}" />
        </DockPanel>

        <DockPanel
            Grid.Row="2" Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="10">
            <TextBlock
                Margin="0,0,10,0"
                Text="Префикс:" />
            <TextBox
                Text="{Binding RoomsNums.Prefix, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>

        <DockPanel
            Grid.Row="3" Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="10">
            <TextBlock
                Margin="0,0,10,0"
                Text="Суффикс:" />
            <TextBox
                Text="{Binding RoomsNums.Suffix, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>

        <DockPanel
            Grid.Row="3" Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10">

            <TextBlock
                Margin="0,0,10,0"
                Text="Начальный номер:" />

            <TextBox
                Text="{Binding RoomsNums.StartNumber, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        
        <RadioButton
            Grid.Row="4" 
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10"
            GroupName="nums"
            IsChecked="{Binding RoomsNums.IsNumFlats}">
            <TextBlock Text="{Binding ApartmentNumberParamName, 
                Mode=OneWay, StringFormat='Нумерация квартир ({0})'}" />
        </RadioButton>
        
        <RadioButton
            x:Name="_roomsNums"
            Grid.Row="6" 
            Grid.Column="0"
            Grid.ColumnSpan="4" 
            Margin="10"
            GroupName="nums"
            IsChecked="{Binding RoomsNums.IsNumRooms}">
            <TextBlock Text="{Binding NumberParamName, 
                Mode=OneWay, StringFormat='Нумерация, помещений ({0})'}" />
        </RadioButton>
        
        <RadioButton 
            Grid.Row="6"
            Grid.Column="0" 
            Grid.ColumnSpan="4" 
            Margin="20,10,10,10" 
            GroupName="rooms_nums"
            Content="Нумерация помещений в пределах секции, этажа и группы"
            Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, 
                Converter={StaticResource BoolToVis}}"
            IsChecked="{Binding RoomsNums.IsNumRoomsGroup}" />
        
        <RadioButton 
            Grid.Row="7" 
            Grid.Column="0" 
            Grid.ColumnSpan="4" 
            Margin="20,10,10,10"
            GroupName="rooms_nums"
            Content="Нумерация помещений в пределах секции и этажа"
            Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, 
                Converter={StaticResource BoolToVis}}"
            IsChecked="{Binding RoomsNums.IsNumRoomsSectionLevels}" />
        
        <RadioButton 
            Grid.Row="8" 
            Grid.Column="0" 
            Grid.ColumnSpan="4" 
            Margin="20,10,10,10" GroupName="rooms_nums"
            Content="Нумерация помещений в пределах секции"
            Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, 
                Converter={StaticResource BoolToVis}}"
            IsChecked="{Binding RoomsNums.IsNumRoomsSection}" />
        
        <DockPanel 
            Grid.Row="9" 
            Grid.Column="0" 
            Margin="10" 
            LastChildFill="True">
            <TextBlock 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10" 
                Text="Секции для нумерации" />

            <ui:DataGrid
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                Style="{StaticResource CustomResizableDataGridStyle}"
                ItemsSource="{Binding RoomsNums.Sections}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <DataGridCheckBoxColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderCheck}" />
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        IsReadOnly="True"
                        Binding="{Binding Path=Name}">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>

        <DockPanel 
            Grid.Row="9" 
            Grid.Column="1" 
            Margin="10" 
            LastChildFill="True">
            <TextBlock 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10" 
                Text="Группы для нумерации" />
            <ui:DataGrid
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                Style="{StaticResource CustomResizableDataGridStyle}"
                ItemsSource="{Binding RoomsNums.Groups}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <DataGridCheckBoxColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderCheck}" />
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        IsReadOnly="True"
                        Binding="{Binding Path=Name}">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>

        <DockPanel 
            Grid.Row="9" 
            Grid.Column="2" 
            Margin="10" 
            LastChildFill="True">
            <TextBlock 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10" 
                Text="Уровни для нумерации" />
            <ui:DataGrid
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                Style="{StaticResource CustomResizableDataGridStyle}"
                ItemsSource="{Binding RoomsNums.Levels}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <DataGridCheckBoxColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderCheck}" />
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        IsReadOnly="True"
                        Binding="{Binding Path=Name}">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        IsReadOnly="True"
                        Binding="{Binding Path=LevelNames}">
                        <DataGridTextColumn.Header>
                            <TextBlock
                                Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>

        <DockPanel 
            Grid.Row="9" Grid.Column="3" 
            Margin="10" 
            LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Margin="0,0,0,10" Text="Приоритеты помещений" />
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                <ui:Button
                    ToolTip="Вверх"
                    Width="25" Margin=" 5"
                    Command="{Binding RoomsNums.UpOrderCommand}"
                    CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                    Icon="SvgImages/Arrows/MoveUp.svg" />
                <ui:Button
                    ToolTip="Вниз"
                    Width="25" Margin="5"
                    Command="{Binding RoomsNums.DownOrderCommand}"
                    CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                    Icon="SvgImages/Arrows/MoveDown.svg"/>
                <ui:Button
                    ToolTip="Добавить"
                    Width="25" Margin="5"
                    Command="{Binding RoomsNums.AddOrderCommand}"
                    Icon="Office2013/Actions/Add_16x16.png"/>
                <ui:Button
                    ToolTip="Удалить"
                    Width="25" Margin="5"
                    Command="{Binding RoomsNums.RemoveOrderCommand}"
                    CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                    Icon="Office2013/Actions/Cancel_16x16.png"/>
                <ui:Button
                    ToolTip="Сохранить"
                    Width="25" Margin="5"
                    Command="{Binding RoomsNums.SaveOrderCommand}"
                    Icon="SvgImages/Save/Save.svg"/>
            </StackPanel>

            <ui:DataGrid
                x:Name="listbox"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                Style="{StaticResource CustomResizableDataGridStyle}"
                ItemsSource="{Binding RoomsNums.SelectedNumberingOrders}">

                <DataGridTextColumn
                    IsReadOnly="True"
                    Binding="{Binding Path=LevelNames}">
                    <DataGridTextColumn.Header>
                        <TextBlock
                            Text="{me:LocalizationSource MainWindow.HeaderLevels}" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </ui:DataGrid>
        </DockPanel>

        <StackPanel
            Grid.Row="10" Grid.Column="0"
            Grid.ColumnSpan="4"
            Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock 
                Margin="10" 
                Text="{Binding RoomsNums.ErrorText}" 
                Foreground="Orange" />
            <ui:Button 
                Content="Запуск" 
                Height="35" Width="80" Margin="10" 
                IsDefault="True"
                Command="{Binding RoomsNums.NumerateRoomsCommand}" />
            <ui:Button 
                Content="Отмена" 
                Height="35" Width="80" 
                Margin="10" 
                IsCancel="true"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>