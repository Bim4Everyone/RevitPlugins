<core:WpfUIPlatformWindow
    x:Class="RevitRooms.Views.RoomsNumsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRooms.Views"
    xmlns:vms="clr-namespace:RevitRooms.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Height="800" 
    Width="1300"
    
    MinHeight="800"
    MinWidth="1300"
    
    x:Name="_this"

    d:DataContext="{d:DesignInstance vms:RoomNumsViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter
                x:Key="BoolToVis" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="14,0,14,4"
            Style="{StaticResource CustomBorder}">
            <ComboBox
                ItemsSource="{Binding RoomsNumsViewModels}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding RoomsNums}" />
        </Border>

        <Border
            Grid.Row="2"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <UniformGrid
                Rows="2"
                Columns="2">
                <DockPanel
                    Margin="10,4">
                    <TextBlock
                        Width="140"
                        VerticalAlignment="Center"
                        Text="Стадия:" />
                    <ComboBox
                        ItemsSource="{Binding RoomsNums.Phases}"
                        DisplayMemberPath="Name"
                        SelectedItem="{Binding RoomsNums.Phase}" />
                </DockPanel>
                <DockPanel
                    Margin="20,4,0,4">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="Суффикс:" />
                    <TextBox
                        Text="{Binding RoomsNums.Suffix, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel
                    Margin="10,4">
                    <TextBlock
                        Width="140"
                        VerticalAlignment="Center"
                        Text="Начальный номер:" />
                    <TextBox
                        Text="{Binding RoomsNums.StartNumber, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel
                    Margin="20,4,0,4">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="Префикс:" />
                    <TextBox
                        Text="{Binding RoomsNums.Prefix, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </UniformGrid>
        </Border>

        <Border
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <StackPanel>
                <RadioButton
                    Margin="10,4"
                    GroupName="nums"
                    IsChecked="{Binding RoomsNums.IsNumFlats}">
                    <TextBlock
                        Text="{Binding ApartmentNumberParamName, Mode=OneWay, StringFormat='Нумерация квартир ({0})'}" />
                </RadioButton>
                <RadioButton
                    x:Name="_roomsNums"
                    Margin="10,4"
                    GroupName="nums"
                    IsChecked="{Binding RoomsNums.IsNumRooms}">
                    <TextBlock
                        Text="{Binding NumberParamName, Mode=OneWay, StringFormat='Нумерация, помещений ({0})'}" />
                </RadioButton>

                <RadioButton
                    Margin="25,4"
                    GroupName="rooms_nums"
                    Content="Нумерация помещений в пределах секции, этажа и группы"
                    Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, Converter={StaticResource BoolToVis}}"
                    IsChecked="{Binding RoomsNums.IsNumRoomsGroup}" />
                <RadioButton
                    Margin="25,4"
                    GroupName="rooms_nums"
                    Content="Нумерация помещений в пределах секции и этажа"
                    Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, Converter={StaticResource BoolToVis}}"
                    IsChecked="{Binding RoomsNums.IsNumRoomsSectionLevels}" />
                <RadioButton
                    Margin="25,4"
                    GroupName="rooms_nums"
                    Content="Нумерация помещений в пределах секции"
                    Visibility="{Binding ElementName=_roomsNums,Path=IsChecked, Converter={StaticResource BoolToVis}}"
                    IsChecked="{Binding RoomsNums.IsNumRoomsSection}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="4"
            Margin="14,4"
            Style="{StaticResource CustomBorder}">
            <Grid
                Margin="10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Text="Секции для нумерации" />
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,5,4,0"
                    Style="{StaticResource CustomBorder}">
                    <ui:DataGrid
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="None"
                        Style="{StaticResource CustomResizableDataGridStyle}"
                        ItemsSource="{Binding RoomsNums.Sections}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn
                                Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn
                                IsReadOnly="True"
                                Binding="{Binding Path=Name}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </ui:DataGrid>
                </Border>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Text="Группы для нумерации" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="4,5,4,0"
                    Style="{StaticResource CustomBorder}">
                    <ui:DataGrid
                        Grid.Row="1"
                        Grid.Column="0"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="None"
                        Style="{StaticResource CustomResizableDataGridStyle}"
                        ItemsSource="{Binding RoomsNums.Groups}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn
                                Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn
                                IsReadOnly="True"
                                Binding="{Binding Path=Name}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </ui:DataGrid>
                </Border>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    Text="Уровни для нумерации" />
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="4,5,4,0"
                    Style="{StaticResource CustomBorder}">
                    <ui:DataGrid
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="None"
                        Style="{StaticResource CustomResizableDataGridStyle}"
                        ItemsSource="{Binding RoomsNums.Levels}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn
                                Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn
                                IsReadOnly="True"
                                Binding="{Binding Path=Name}">
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                IsReadOnly="True"
                                Binding="{Binding Path=LevelNames}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </ui:DataGrid>
                </Border>
                
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Text="Приоритеты помещений" />
                <Border
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="4,5,0,0"
                    Style="{StaticResource CustomBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition  Height="50"/>
                        </Grid.RowDefinitions>
                        <ListBox
                            Grid.Row="0"
                            x:Name="listbox"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding RoomsNums.SelectedNumberingOrders}">
                        </ListBox>

                        <StackPanel
                            Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                            <ui:Button
                                ToolTip="Вверх"
                                Margin="5"
                                Command="{Binding RoomsNums.UpOrderCommand}"
                                CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                                Icon="{ui:SymbolIcon ArrowCircleUp12, FontSize=20}" />
                            <ui:Button
                                ToolTip="Вниз"
                                Margin="5"
                                Command="{Binding RoomsNums.DownOrderCommand}"
                                CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                                Icon="{ui:SymbolIcon ArrowCircleDown12, FontSize=20}" />
                            <ui:Button
                                ToolTip="Добавить"
                                Margin="5"
                                Command="{Binding RoomsNums.AddOrderCommand}"
                                Icon="{ui:SymbolIcon AddCircle12, FontSize=20}" />
                            <ui:Button
                                ToolTip="Удалить"
                                Margin="5"
                                Command="{Binding RoomsNums.RemoveOrderCommand}"
                                CommandParameter="{Binding SelectedItems, ElementName=listbox}"
                                Icon="{ui:SymbolIcon Delete12, FontSize=20}" />
                            <ui:Button
                                ToolTip="Сохранить"
                                Margin="5"
                                Command="{Binding RoomsNums.SaveOrderCommand}"
                                Icon="{ui:SymbolIcon Save20, FontSize=20}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="5"
            Orientation="Horizontal" 
            HorizontalAlignment="Right">
            <TextBlock 
                Margin="10" 
                Text="{Binding RoomsNums.ErrorText}" 
                Foreground="Orange" />
            <ui:Button 
                Content="Запуск" 
                Height="35" Width="80" Margin="10" 
                IsDefault="True"
                Command="{Binding RoomsNums.NumerateRoomsCommand}" />
            <ui:Button 
                Content="Отмена" 
                Height="35" Width="80" 
                Margin="10" 
                IsCancel="true"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>