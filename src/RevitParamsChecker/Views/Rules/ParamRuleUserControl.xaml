<core:WpfUIPlatformUserControl
    x:Class="RevitParamsChecker.Views.Rules.ParamRuleUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:local="clr-namespace:RevitParamsChecker.Views.Rules"
    xmlns:vms="clr-namespace:RevitParamsChecker.ViewModels.Rules"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    x:ClassModifier="internal"
    d:DataContext="{d:DesignInstance vms:ParamRuleViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="100" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>

        <ui:TextBox
            Grid.Column="0"
            Margin="3"
            Text="{Binding ParamName, UpdateSourceTrigger=PropertyChanged}" />

        <ComboBox
            Grid.Column="1"
            Margin="3"
            Width="100"
            IsEditable="False"
            DisplayMemberPath="Name"
            ItemsSource="{Binding AvailableOperators}"
            SelectedIndex="{Binding SelectedOperator, UpdateSourceTrigger=PropertyChanged}" />

        <ui:TextBox
            Grid.Column="2"
            Margin="3"
            Text="{Binding ExpectedValue, UpdateSourceTrigger=PropertyChanged}" />

        <ui:Button
            Grid.Column="3"
            Margin="3"
            Appearance="Danger"
            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBox}, Mode=FindAncestor}, Path=DataContext.RemoveInnerParamRuleCommand}"
            CommandParameter="{Binding}"
            Content="{ui:SymbolIcon Symbol=Dismiss20}" />
    </Grid>
</core:WpfUIPlatformUserControl>