<core:WpfUIPlatformPage
    x:Class="RevitParamsChecker.Views.Rules.RulesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitParamsChecker.Views.Rules"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:custom="clr-namespace:RevitParamsChecker.Views.Controls"
    xmlns:vms="clr-namespace:RevitParamsChecker.ViewModels.Rules"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:RulesPageViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>
    <core:WpfUIPlatformPage.InputBindings>
        <KeyBinding
            Key="S"
            Modifiers="Control"
            Command="{Binding SaveCommand}" />
    </core:WpfUIPlatformPage.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1.5*"
                MinWidth="200" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="6*"
                MinWidth="200" />
        </Grid.ColumnDefinitions>

        <custom:PageMenuControl
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Margin="0 0 0 8"
            PageWarningMessage="{Binding ErrorText}"
            LoadButtonCommand="{Binding LoadCommand}"
            SaveButtonCommand="{Binding SaveCommand}"
            ExportButtonCommand="{Binding ExportCommand}"
            ShowSaveChangesPrompt="{Binding RulesModified}" />

        <custom:EditableListControl
            Grid.Row="1"
            Grid.Column="0"
            ListItemsSource="{Binding Rules}"
            ListSelectedItem="{Binding SelectedRule}"
            AddItemCommand="{Binding AddRuleCommand}"
            RenameItemCommand="{Binding RenameRuleCommand}"
            CopyItemCommand="{Binding CopyRuleCommand}"
            RemoveItemsCommand="{Binding RemoveRulesCommand}" />

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource CustomGridSplitter}" />

        <local:RuleUserControl
            Grid.Row="1"
            Grid.Column="2"
            DataContext="{Binding SelectedRule}" />
    </Grid>
</core:WpfUIPlatformPage>