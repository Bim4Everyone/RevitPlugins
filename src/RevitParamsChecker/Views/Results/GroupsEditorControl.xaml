<core:WpfUIPlatformUserControl
    x:Class="RevitParamsChecker.Views.Results.GroupsEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitParamsChecker.Views.Results"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:vms="clr-namespace:RevitParamsChecker.ViewModels.Results"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    x:ClassModifier="internal"
    x:Name="_this"
    d:DataContext="{d:DesignInstance vms:GroupDescriptionsViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformUserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformUserControl.Resources>
    <!-- Редактор группировки (для DataGrid) -->
    <Border
        Padding="8 0"
        Style="{StaticResource CustomBorder}">
        <DockPanel>
            <ui:ToggleSwitch
                Margin="0 0 8 0"
                IsChecked="{Binding IsGroupingEnabled}"
                Content="{ui:SymbolIcon GroupList20}"
                ToolTip="{me:LocalizationSource GroupsEditor.Label}"
                FontSize="{DynamicResource ControlContentThemeFontSize}" />
            <ui:Button
                ToolTip="{me:LocalizationSource GroupsEditor.UpdateButtonTooltip}"
                Content="{ui:SymbolIcon Symbol=ArrowSync20}"
                Command="{Binding UpdateCommand, ElementName=_this}" />
            <ui:Button
                Margin="8 0"
                IsEnabled="{Binding IsGroupingEnabled}"
                ToolTip="{me:LocalizationSource GroupsEditor.AddButtonTooltip}"
                Content="{ui:SymbolIcon Symbol=Add20}"
                Command="{Binding AddGroupCommand}" />
            <ui:Button
                Appearance="Danger"
                IsEnabled="{Binding IsGroupingEnabled}"
                ToolTip="{me:LocalizationSource GroupsEditor.RemoveButtonTooltip}"
                Content="{ui:SymbolIcon Symbol=Delete20}"
                Command="{Binding RemoveGroupCommand}"
                CommandParameter="{Binding SelectedGroupDescription}" />
            <ui:ListView
                Margin="8 0 0 0"
                x:Name="_groups"
                SelectionMode="Single"
                IsEnabled="{Binding IsGroupingEnabled}"
                SelectedItem="{Binding SelectedGroupDescription}"
                ItemsSource="{Binding GroupDescriptions}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Style="{StaticResource CustomBorder}"
                            Padding="4">
                            <ComboBox
                                MaxWidth="120"
                                IsEditable="False"
                                DisplayMemberPath="DisplayName"
                                SelectedItem="{Binding SelectedProperty, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding DataContext.AvailableProperties, ElementName=_this}" />
                        </Border>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </DockPanel>
    </Border>
</core:WpfUIPlatformUserControl>