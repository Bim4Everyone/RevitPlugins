<core:WpfUIPlatformPage
    x:Class="RevitParamsChecker.Views.Checks.ChecksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitParamsChecker.Views.Checks"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:custom="clr-namespace:RevitParamsChecker.Views.Controls"
    xmlns:vms="clr-namespace:RevitParamsChecker.ViewModels.Checks"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:ChecksPageViewModel, IsDesignTimeCreatable=False}">
    <!-- Страница редактора проверок -->
    <core:WpfUIPlatformPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformPage.Resources>
    <core:WpfUIPlatformPage.InputBindings>
        <KeyBinding
            Key="S"
            Modifiers="Control"
            Command="{Binding SaveCommand}" />
    </core:WpfUIPlatformPage.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <custom:PageMenuControl
            Grid.Row="0"
            Margin="0 0 0 8"
            LoadButtonCommand="{Binding LoadCommand}"
            SaveButtonCommand="{Binding SaveCommand}"
            ExportButtonCommand="{Binding ExportCommand}"
            ShowSaveChangesPrompt="{Binding ChecksModified}" />

        <local:ChecksControl
            Grid.Row="1"
            DataContext="{Binding}" />
    </Grid>
</core:WpfUIPlatformPage>