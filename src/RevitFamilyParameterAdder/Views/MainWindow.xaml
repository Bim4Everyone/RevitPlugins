<core:WpfUIPlatformWindow
    x:Class="RevitFamilyParameterAdder.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitFamilyParameterAdder.Views"
    xmlns:vms="clr-namespace:RevitFamilyParameterAdder.ViewModels"
    xmlns:models="clr-namespace:RevitFamilyParameterAdder.Models"
    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Height="550" 
    Width="930"
    MinHeight="550"
    MinWidth="930"    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10 5 5 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <ui:TextBlock
                    Grid.Row="0"
                    Margin="10 0"
                    VerticalAlignment="Center"
                    Text="{me:LocalizationSource MainWindow.SelectParam}" />

                <CheckBox
                    Grid.Row="1"
                    Content="{me:LocalizationSource MainWindow.AddingParametersForFamilies}"
                    IsChecked="{Binding Path=IsParamsForKR}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger
                            EventName="Checked">
                            <i:InvokeCommandAction
                                Command="{Binding Path=GetParamsNSetParamFilterCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger
                            EventName="Unchecked">
                            <i:InvokeCommandAction
                                Command="{Binding Path=GetParamsNSetParamFilterCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </CheckBox>

                <CheckBox
                    Grid.Row="2"
                    Content="{me:LocalizationSource MainWindow.AddingFormulasForParametersForFamilies}"
                    IsChecked="{Binding Path=WriteFormulasInParamsForKR}"
                    IsEnabled="{Binding Path=IsParamsForKR}" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5 5 10 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <ui:TextBlock
                    Grid.Column="0"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{me:LocalizationSource MainWindow.GroupFilter}" />

                <ComboBox
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    ItemsSource="{Binding Path=ParamGroupNames}"
                    SelectedItem="{Binding Path=SelectedParamGroupName}">

                    <i:Interaction.Triggers>
                        <i:EventTrigger
                            EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding Path=GetParamsNSetParamFilterCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
            </Grid>
        </Border>

        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Content="{me:LocalizationSource MainWindow.SelectAll}"
                        Margin="5"
                        Click="SelectAllParams" />

                    <Button
                        Content="{me:LocalizationSource MainWindow.UnselectAll}"
                        Margin="5"
                        Click="UnselectAllParams" />
                </StackPanel>

                <ui:ListView
                    Grid.Row="1"
                    Name="parameters"
                    ItemsSource="{Binding Path=Params}"
                    SelectionMode="Extended"
                    Style="{StaticResource ListViewStyle}"
                    BorderThickness="0">
                    <ui:ListView.View>
                        <GridView
                            ColumnHeaderContainerStyle="{StaticResource UiGridViewColumnHeaderStyle}">
                            <GridViewColumn
                                Header="{me:LocalizationSource MainWindow.ParamName}"
                                Width="250"
                                DisplayMemberBinding="{Binding Path=ParamName}" />
                            <GridViewColumn
                                Header="{me:LocalizationSource MainWindow.SPFGroupParam}"
                                Width="200"
                                DisplayMemberBinding="{Binding Path=ParamGroupInShPF}" />

                            <GridViewColumn
                                Header="{me:LocalizationSource MainWindow.FamilyGroupParam}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Name="parameters_ParamGroup"
                                            Width="250"
                                            DisplayMemberPath="GroupName"
                                            SelectedItem="{Binding Path=SelectedParamGroupInFM}"
                                            ItemsSource="{Binding Path=ParamGroupsInFM}">
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="{me:LocalizationSource MainWindow.ParamLevel}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Width="150"
                                            ItemsSource="{Binding Path=LevelOfParam}"
                                            DisplayMemberPath="Key"
                                            SelectedValuePath="Value"
                                            SelectedValue="{Binding IsInstanceParam}">
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ui:ListView.View>

                    <i:Interaction.Triggers>
                        <i:EventTrigger
                            EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding SelectionParamsCommand}"
                                CommandParameter="{Binding SelectedItems, ElementName=parameters}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ui:ListView>
            </Grid>
        </Border>
        
        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding Path=ErrorText}" />

            <ui:Button
                Margin="10"
                MinWidth="150"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding Path=AcceptViewCommand}"/>

            <ui:Button
                Margin="10"
                MinWidth="150"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>