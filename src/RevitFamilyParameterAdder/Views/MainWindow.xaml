<core:WpfUIPlatformWindow
    x:Class="RevitFamilyParameterAdder.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitFamilyParameterAdder.Views"
    xmlns:vms="clr-namespace:RevitFamilyParameterAdder.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Height="550" Width="930"    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <ui:TextBlock 
            Grid.Row="1" 
            Margin="10 0"
            VerticalAlignment="Center"
            Text="Выберите параметры:"/>

        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Orientation="Vertical"
            Margin="10 0" >

            <CheckBox
                Content="Загрузка параметров для семейств КР"
                IsChecked="{Binding Path=IsParamsForKR}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Checked">
                        <i:InvokeCommandAction
                            Command="{Binding Path=GetParamsNSetParamFilterCommand}"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="Unchecked">
                        <i:InvokeCommandAction
                            Command="{Binding Path=GetParamsNSetParamFilterCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </CheckBox>

            <CheckBox
                Content="Загрузка формул для параметров для семейств КР"
                IsChecked="{Binding Path=WriteFormulasInParamsForKR}"
                IsEnabled="{Binding Path=IsParamsForKR}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <ui:TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Фильтр по группе в ФОП:" />

            <ComboBox
                Grid.Row="1"
                Margin="10 5"
                Width="200"
                VerticalContentAlignment="Center"
                ItemsSource="{Binding Path=ParamGroupNames}"
                SelectedItem="{Binding Path=SelectedParamGroupName}">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction
                            Command="{Binding Path=GetParamsNSetParamFilterCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                Content="Выбрать все"
                Margin="10 5"
                Click="SelectAllParams" />

            <Button
                Content="Отменить выбор"
                Margin="10 5"
                Click="UnselectAllParams" />
        </StackPanel>

        <ui:ListView
            Grid.Row="4"
            ItemsSource="{Binding Path=Params}"
            Name="parameters"
            SelectionMode="Extended">
            <ui:ListView.View>
                <GridView>
                    <GridViewColumn
                        Header="Имя параметра"
                        Width="250"
                        DisplayMemberBinding="{Binding Path=ParamName}" />
                    <GridViewColumn
                        Header="Группа параметров в ФОП"
                        Width="200"
                        DisplayMemberBinding="{Binding Path=ParamGroupInShPF}" />

                    <GridViewColumn
                        Header="Группа параметров в семействе">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
                                    Name="parameters_ParamGroup"
                                    Width="250"
                                    ItemsSource="{Binding Path=ParamGroupsInFM}"
                                    DisplayMemberPath="GroupName"
                                    SelectedItem="{Binding SelectedParamGroupInFM}"
                                    SelectedValuePath="GroupName"
                                    SelectedValue="{Binding SelectedParamGroupInFM.GroupName}">
                                </ComboBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn
                        Header="Уровень параметра">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
                                    Width="150"
                                    ItemsSource="{Binding Path=LevelOfParam}"
                                    DisplayMemberPath="Key"
                                    SelectedValuePath="Value"
                                    SelectedValue="{Binding IsInstanceParam}">
                                </ComboBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ui:ListView.View>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction 
                        Command="{Binding SelectionParamsCommand}"
                        CommandParameter="{Binding SelectedItems, ElementName=parameters}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ui:ListView>
        
        <StackPanel
            Grid.Row="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding Path=ErrorText}" />

            <ui:Button
                Margin="10"
                MinWidth="150"
                Appearance="Info"
                Content="ОК"
                Click="ButtonOk_Click"
                Command="{Binding Path=AcceptViewCommand}"/>

            <ui:Button
                Margin="10"
                MinWidth="150"
                Content="Отмена"
                Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>