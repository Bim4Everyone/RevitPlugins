<core:WpfUIPlatformWindow
    x:Class="RevitArchitecturalDocumentation.Views.CopySpecSheetInstanceV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitArchitecturalDocumentation.Views"
    xmlns:vms="clr-namespace:RevitArchitecturalDocumentation.ViewModels"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="CopySpecSheetInstanceV"
    Height="340"
    Width="540"
    MinHeight="340"
    MinWidth="540"
    d:DataContext="{d:DesignInstance vms:CopySpecSheetInstanceVM, IsDesignTimeCreatable=False}"
    KeyDown="Window_KeyDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource CreatingARDocsV.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10 0 10 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">

                    <ui:TextBlock
                        Margin="10 3"
                        VerticalAlignment="Center"
                        Text="Выбрано листов:" />

                    <ui:TextBlock
                        Margin="5 3"
                        VerticalAlignment="Center"
                        Text="{Binding Path=SelectedSheets.Count}" />
                </StackPanel>

                <ui:Button
                    Grid.Row="1"
                    Margin="10 5"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Content="Выбрать спецификации"
                    Command="{Binding Path=SelectSpecsCommand}" />

                <StackPanel
                    Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">

                    <ui:TextBlock
                        Margin="10 3"
                        VerticalAlignment="Center"
                        Text="Выбрано спецификаций:" />

                    <ui:TextBlock
                        Margin="5 3"
                        VerticalAlignment="Center"
                        Text="{Binding Path=ScheduleSheetInstances.Count}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10 5 10 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ui:TextBlock
                    Grid.Row="0"
                    Margin="10 5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Text="Выберите поле фильтрации этажа:" />

                <ComboBox
                    Grid.Row="1"
                    Margin="10 5 10 10"
                    ItemsSource="{Binding Path=FilterNamesFromSpecs, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Path=SelectedFilterNameForSpecs}">
                </ComboBox>
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10 3"
                Foreground="Orange"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="ОК"
                Appearance="Info"
                Click="ButtonOk_Click"
                Command="{Binding Path=AcceptViewCommand}"/>

            <ui:Button
                Margin="10"
                Width="80"
                Content="Отмена"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>