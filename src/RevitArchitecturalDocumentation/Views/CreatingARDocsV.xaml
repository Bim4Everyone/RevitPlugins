<core:WpfUIPlatformWindow
    x:Class="RevitArchitecturalDocumentation.Views.CreatingARDocsV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitArchitecturalDocumentation.Views"
    xmlns:vms="clr-namespace:RevitArchitecturalDocumentation.ViewModels"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Height="600" Width="1200"
    MinHeight="600" MinWidth="1200"

    d:DataContext="{d:DesignInstance vms:CreatingARDocsVM, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:TextBlock
                x:Key="Number"
                Text="{me:LocalizationSource CreatingARDocsV.Number}" />
            <ui:TextBlock
                x:Key="StartLevel"
                Text="{me:LocalizationSource CreatingARDocsV.StartLevel}" />
            <ui:TextBlock
                x:Key="EndLevel"
                Text="{me:LocalizationSource CreatingARDocsV.EndLevel}" />
            <ui:TextBlock
                x:Key="ViewScope"
                Text="{me:LocalizationSource CreatingARDocsV.ViewScope}" />
            <ui:TextBlock
                x:Key="ViewNameSuffix"
                Text="{me:LocalizationSource CreatingARDocsV.ViewNameSuffix}" />
            <ui:TextBlock
                x:Key="SpecificationsSelection"
                Text="{me:LocalizationSource CreatingARDocsV.SpecificationsSelection}" />
            <ui:TextBlock
                x:Key="SpecificationsSelected"
                Text="{me:LocalizationSource CreatingARDocsV.SpecificationsSelected}" />
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Title="{me:LocalizationSource CreatingARDocsV.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10 10 10 5"
            Style="{StaticResource CustomBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ui:DataGrid
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="False"
                    ItemsSource="{Binding Path=TaskInformationVM.TasksForWork, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    SelectionMode="Single"
                    AutoGenerateColumns="False"
                    Style="{StaticResource CustomResizableDataGridStyle}"
                    RowStyle="{x:Null}"
                    GridLinesVisibility="All">

                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="Auto"
                            Header="{StaticResource Number}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBlock
                                        Width="Auto"
                                        Margin="3"
                                        HorizontalAlignment="Center"
                                        Text="{Binding Path=TaskNumber, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource StartLevel}"
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBox
                                        Width="Auto"
                                        Margin="3"
                                        Text="{Binding Path=StartLevelNumber, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource EndLevel}"
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBox
                                        Width="Auto"
                                        Margin="3"
                                        Text="{Binding Path=EndLevelNumber, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource ViewScope}"
                            Width="*"
                            IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox
                                        HorizontalAlignment="Stretch"
                                        Margin="3"
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding Path=DataContext.TaskInformationVM.VisibilityScopes, 
                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                        SelectedItem="{Binding Path=SelectedVisibilityScope, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource CustomComboBox}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource ViewNameSuffix}"
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBox
                                        Width="Auto"
                                        Margin="3"
                                        Text="{Binding Path=ViewNameSuffix, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource SpecificationsSelection}"
                            Width="Auto"
                            IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Margin="3"
                                        HorizontalAlignment="Stretch"
                                        FontSize="20"
                                        Icon="{ui:SymbolIcon OpenFolder16}"
                                        Command="{Binding Path=DataContext.TaskInformationVM.SelectSpecsCommand, 
                            RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                        CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Header="{StaticResource SpecificationsSelected}"
                            Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBlock
                                        Width="Auto"
                                        HorizontalAlignment="Center"
                                        Margin="3"
                                        Text="{Binding Path=ListSpecHelpers.Count, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </ui:DataGrid>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="45"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <ui:Button
                        Margin="10 5 10 10"
                        MinWidth="150"
                        Content="{me:LocalizationSource CreatingARDocsV.AddLine}"
                        FontSize="14"
                        Command="{Binding Path=TaskInformationVM.AddTaskCommand}" />

                    <ui:Button
                        Margin="10 5 10 10"
                        MinWidth="150"
                        Content="{me:LocalizationSource CreatingARDocsV.DeleteLine}"
                        FontSize="14"
                        Command="{Binding Path=TaskInformationVM.DeleteTaskCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Row="2"
            Margin="10 5 5 5"
            Style="{StaticResource CustomBorder}">

            <DockPanel>
                <ComboBox
                     DockPanel.Dock="Bottom" 
                     Margin="5 3"
                     VerticalContentAlignment="Center"
                     IsEnabled="{Binding Path=SheetOptsVM.WorkWithSheets}"
                     ItemsSource="{Binding Path=SheetOptsVM.TitleBlocksInProject}" 
                     SelectedItem="{Binding Path=SheetOptsVM.SelectedTitleBlock}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}: {1}">
                                        <Binding Path="FamilyName"/>
                                        <Binding Path="Name"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ui:TextBlock
                    DockPanel.Dock="Bottom"                        
                    Margin="5 3"
                    Text="{me:LocalizationSource CreatingARDocsV.SelectTitleBlock}"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>

                <CheckBox 
                    DockPanel.Dock="Left"
                    Margin="-5 3 5 3"
                    Content="{me:LocalizationSource CreatingARDocsV.CreateSheets}"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=SheetOptsVM.WorkWithSheets}"/>

                <ui:TextBox 
                    DockPanel.Dock="Right"
                    Width="150"
                    Margin="5 3"
                    VerticalContentAlignment="Center"
                    Text="{Binding Path=SheetOptsVM.SheetNamePrefix}"
                    IsEnabled="{Binding Path=SheetOptsVM.WorkWithSheets}"/>

                <ui:TextBlock
                    DockPanel.Dock="Right"
                    Margin="3"
                    Text="{me:LocalizationSource CreatingARDocsV.SheetPrefix}"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5 5 10 5"
            Style="{StaticResource CustomBorder}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <ComboBox
                        DockPanel.Dock="Bottom"
                        Margin="5 3"
                        VerticalContentAlignment="Center"
                        IsEnabled="{Binding Path=ViewOptsVM.WorkWithViews}"
                        ItemsSource="{Binding Path=ViewOptsVM.ViewFamilyTypes}" 
                        SelectedItem="{Binding Path=ViewOptsVM.SelectedViewFamilyType}"
                        DisplayMemberPath="Name">
                    </ComboBox>

                    <ui:TextBlock
                        DockPanel.Dock="Bottom"
                        Margin="5 3"
                        Text="{me:LocalizationSource CreatingARDocsV.ViewType}"
                        FontSize="14"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"/>
                    
                    <CheckBox 
                        DockPanel.Dock="Left"
                        Margin="-5 3 5 3"
                        Content="{me:LocalizationSource CreatingARDocsV.CreatePlaceViews}"
                        FontSize="14"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        IsChecked="{Binding Path=ViewOptsVM.WorkWithViews}"/>

                    <ui:TextBox 
                        DockPanel.Dock="Right"
                        Width="150"
                        Margin="5 3"
                        VerticalContentAlignment="Center"
                        IsEnabled="{Binding Path=ViewOptsVM.WorkWithViews}"
                        Text="{Binding Path=ViewOptsVM.ViewNamePrefix}"/>

                    <ui:TextBlock
                        DockPanel.Dock="Right"
                        Margin="3 0"
                        Text="{me:LocalizationSource CreatingARDocsV.ViewPrefix}"
                        FontSize="14"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"/>
                </DockPanel>

                <StackPanel 
                    Grid.Row="1">
                    <ui:TextBlock
                        Margin="5 3"
                        Text="{me:LocalizationSource CreatingARDocsV.ViewportType}"
                        FontSize="14"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"/>

                    <ComboBox
                        Margin="5 3"
                        VerticalContentAlignment="Center"
                        IsEnabled="{Binding Path=ViewOptsVM.WorkWithViews}"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Path=ViewOptsVM.ViewportTypes}" 
                        SelectedItem="{Binding Path=ViewOptsVM.SelectedViewportType}">
                    </ComboBox>
                </StackPanel>

                <CheckBox
                    Grid.Row="2"
                    Margin="-5 5 0 0"
                    Content="{me:LocalizationSource CreatingARDocsV.CreateBasedSelectedViews}"
                    FontSize="14"
                    IsChecked="{Binding Path=CreateViewsFromSelected}"
                    IsEnabled="{Binding Path=ViewOptsVM.WorkWithViews}" />

                <StackPanel
                    Grid.Row="3"
                    Orientation="Horizontal">
                    <ui:TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{me:LocalizationSource CreatingARDocsV.SelectedViewCount}" />

                    <ui:TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding Path=SelectedViews.Count}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Row="3"
            Margin="10 5 5 5"
            Style="{StaticResource CustomBorder}">

            <DockPanel>
                <CheckBox 
                    DockPanel.Dock="Top"
                    Margin="-5 3 5 3"
                    Content="{me:LocalizationSource CreatingARDocsV.CreatePlaceSpecs}"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=SpecOptsVM.WorkWithSpecs}"/>

                <ComboBox
                    DockPanel.Dock="Bottom"
                    Margin="5 3"
                    VerticalContentAlignment="Center"
                    IsEnabled="{Binding Path=SpecOptsVM.WorkWithSpecs}"
                    ItemsSource="{Binding Path=SpecOptsVM.FilterNamesFromSpecs, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Path=SpecOptsVM.SelectedFilterNameForSpecs}">
                </ComboBox>

                <ui:TextBlock
                    DockPanel.Dock="Bottom"
                    Margin="5 3"
                    Text="{me:LocalizationSource CreatingARDocsV.LevelFieldFilter}"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </DockPanel>
        </Border>

        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                MinWidth="80"
                Appearance="Info"
                FontSize="14"
                Content="{me:LocalizationSource Window.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding Path=AcceptViewCommand}"/>

            <ui:Button
                Margin="10"
                MinWidth="80"
                FontSize="14"
                Content="{me:LocalizationSource Window.ButtonCancel}"
                Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>