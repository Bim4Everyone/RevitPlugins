<core:WpfUIPlatformWindow
    x:Class="RevitArchitecturalDocumentation.Views.CreatingARDocsV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitArchitecturalDocumentation.Views"
    xmlns:vms="clr-namespace:RevitArchitecturalDocumentation.ViewModels"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Height="600" Width="1080"
    MinHeight="600" MinWidth="1080"

    d:DataContext="{d:DesignInstance vms:CreatingARDocsVM, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:TextBlock
                x:Key="Number"
                Text="{me:LocalizationSource CreatingARDocsV.Number}" />
            <ui:TextBlock
                x:Key="StartLevel"
                Text="{me:LocalizationSource CreatingARDocsV.StartLevel}" />
            <ui:TextBlock
                x:Key="EndLevel"
                Text="{me:LocalizationSource CreatingARDocsV.EndLevel}" />
            <ui:TextBlock
                x:Key="ViewScope"
                Text="{me:LocalizationSource CreatingARDocsV.ViewScope}" />
            <ui:TextBlock
                x:Key="ViewNameSuffix"
                Text="{me:LocalizationSource CreatingARDocsV.ViewNameSuffix}" />
            <ui:TextBlock
                x:Key="SpecificationsSelection"
                Text="{me:LocalizationSource CreatingARDocsV.SpecificationsSelection}" />
            <ui:TextBlock
                x:Key="SpecificationsSelected"
                Text="{me:LocalizationSource CreatingARDocsV.SpecificationsSelected}" />
            <ui:TextBlock
                x:Key="Select"
                Text="{me:LocalizationSource CreatingARDocsV.Select}" />
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Title="{me:LocalizationSource CreatingARDocsV.Title}" />

        <StackPanel
            Grid.Row="1"
            Height="45"
            Orientation="Horizontal"
            HorizontalAlignment="Left">

            <ui:TextBlock
                Margin="10"
                VerticalAlignment="Center"
                FontSize="14"
                Text="Выбрано видов: "/>

            <ui:TextBlock
                Margin="10"
                VerticalAlignment="Center"
                FontSize="14"
                Text="{Binding Path=SelectedViews.Count}"/>
        </StackPanel>

        <CheckBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Content="Создавать на основе выбранных видов"
            FontSize="14"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            IsChecked="{Binding Path=CreateViewsFromSelected}"/>

        <ui:DataGrid 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.CanContentScroll="False"
            ItemsSource="{Binding Path=TaskInformationVM.TasksForWork, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectionMode="Single"
            AutoGenerateColumns="False"
            RowStyle="{x:Null}"
            GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Header="{StaticResource Number}"
                    Binding="{Binding Path=TaskNumber}"
                    IsReadOnly="True"
                    CanUserResize="False" />

                <DataGridTextColumn
                    Width="Auto"
                    Header="{StaticResource StartLevel}"
                    Binding="{Binding Path=StartLevelNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Width="Auto"
                    Header="{StaticResource EndLevel}"
                    Binding="{Binding Path=EndLevelNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTemplateColumn
                    Header="{StaticResource ViewScope}"
                    Width="Auto"
                    IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                Width="Auto"
                                Margin="3"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding Path=DataContext.TaskInformationVM.VisibilityScopes, 
                                    RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                SelectedItem="{Binding Path=SelectedVisibilityScope}"
                                Style="{StaticResource CustomComboBox}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="Auto"
                    Header="{StaticResource ViewNameSuffix}"
                    Binding="{Binding Path=ViewNameSuffix, UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTemplateColumn
                    Header="{StaticResource SpecificationsSelection}"
                    Width="Auto"
                    IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button
                                Margin="3"
                                HorizontalAlignment="Center"
                                Content="{StaticResource Select}"
                                Command="{Binding Path=DataContext.TaskInformationVM.SelectSpecsCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                CommandParameter="{Binding Path=DataContext, 
                                    RelativeSource={RelativeSource AncestorType=ListViewItem}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="Auto"
                    Header="{StaticResource SpecificationsSelected}"
                    Binding="{Binding Path=ListSpecHelpers.Count, UpdateSourceTrigger=PropertyChanged}"
                    CanUserResize="False" />
            </DataGrid.Columns>

            <!--<ui:DataGrid.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ui:DataGrid.ItemContainerStyle>
            
            <ui:DataGrid.View>
                <GridView>
                    <GridViewColumn 
                        Header="№"
                        Width="30"
                        DisplayMemberBinding="{Binding Path=TaskNumber}">
                    </GridViewColumn>                    
                    
                    <GridViewColumn 
                        Header="Начальный уровень"
                        Width="180">
