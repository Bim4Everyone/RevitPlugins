<core:WpfUIPlatformWindow
    x:Class="RevitMarkingElements.Views.MainWindow"
    x:Name="mainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitMarkingElements.Views"
    xmlns:vms="clr-namespace:RevitMarkingElements.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Title="{me:LocalizationSource MainWindow.Title}"
    
    Width="600"
    Height="500"
    
    MinWidth="600"
    MinHeight="500"
    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">

            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />

        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="2"
            CornerRadius="8"
            Padding="10"
            Margin="10"
            Background="{DynamicResource CardBackground}">

            <StackPanel>
                <StackPanel
                    Margin="10,0,10,0"
                    Grid.Row="1"
                    Orientation="Vertical">

                    <Border
                        CornerRadius="8"
                        Padding="10"
                        Margin="5"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">

                        <StackPanel>
                            <RadioButton
                                Margin="0,0,0,5"
                                GroupName="NumberingMode"
                                Content="{DynamicResource MainWindow.ArrayNumberingLabel}"
                                IsChecked="{Binding IsArrayNumberingSelected}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="*" />
                                    <ColumnDefinition
                                        Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <RadioButton
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    GroupName="NumberingMode"
                                    Content="{Binding LineNumberingContent}"
                                    IsChecked="{Binding IsLineNumberingSelected}" />

                                <ui:Button
                                    Width="140"
                                    Grid.Column="1"
                                    Padding="10"
                                    HorizontalAlignment="Right"
                                    Content="{DynamicResource MainWindow.SelectLinesButton}"
                                    Command="{Binding SelectLinesCommand}"
                                    CommandParameter="{Binding ElementName=mainWindow}"
                                    IsEnabled="{Binding IsLineNumberingSelected}"
                                    Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}">

                                    <ui:Button.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    TextWrapping="Wrap"
                                                    Text="{DynamicResource MainWindow.MainInstruction}" />

                                                <TextBlock
                                                    TextWrapping="Wrap"
                                                    Text="{DynamicResource MainWindow.ContentAbout}" />

                                                <TextBlock
                                                    TextWrapping="Wrap"
                                                    Text="{DynamicResource MainWindow.MainContent}" />

                                            </StackPanel>
                                        </ToolTip>
                                    </ui:Button.ToolTip>
                                </ui:Button>

                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border
                        CornerRadius="8"
                        Padding="10"
                        Margin="5"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">

                        <StackPanel
                            Orientation="Horizontal">

                            <TextBlock
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Text="{DynamicResource MainWindow.StartNumbericFrom}" />

                            <ui:TextBox
                                Margin="10,0,0,0"
                                Width="100"
                                Text="{Binding StartNumber}"
                                IsEnabled="{Binding RenumberAll}"
                                Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}" />

                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel
                    Margin="10,0,10,0"
                    Grid.Row="2"
                    Orientation="Vertical">

                    <Border
                        CornerRadius="8"
                        Padding="10"
                        Margin="5"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition
                                    Width="4*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Text="{DynamicResource MainWindow.CategoriesElements}" />

                            <ComboBox
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}"
                                Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}"/>
                            
                        </Grid>
                    </Border>

                    <Border
                        CornerRadius="8"
                        Padding="10"
                        Margin="5"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">

                        <StackPanel>
                            <CheckBox
                                Margin="0,0,0,10"
                                Content="{DynamicResource MainWindow.NumberUnmarkedElements}"
                                IsChecked="{Binding IncludeUnselected}"
                                IsEnabled="{Binding IsLineNumberingSelected}" />

                            <CheckBox
                                Margin="0,0,0,10"
                                Content="{DynamicResource MainWindow.RenumberMarkedElements}"
                                IsChecked="{Binding RenumberAll}" />

                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <TextBlock
                Margin="10"
                Grid.Row="3"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />
            
            <ui:Button
                IsDefault="True"
                Margin="10"
                Width="80"
                Click="ButtonOk_Click"
                Appearance="Info"
                Command="{Binding AcceptViewCommand}"
                ToolTip="{DynamicResource MainWindow.Finish}"
                Content="{DynamicResource MainWindow.ButtonOk}" />

            <ui:Button
                IsCancel="True"
                Margin="10"
                Width="80"
                Click="ButtonCancel_Click"
                ToolTip="{DynamicResource MainWindow.Cancel}"
                Content="{DynamicResource MainWindow.ButtonCancel}" />

        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>