<core:WpfUIPlatformUserControl
    x:Class="RevitOpeningPlacement.Views.Settings.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:views="clr-namespace:RevitOpeningPlacement.Views.Settings"
    mc:Ignorable="d"
    d:DesignHeight="720"
    d:DesignWidth="1000"
    d:DataContext="{d:DesignInstance vm:MepCategoryViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformUserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformUserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Style="{StaticResource CustomBorder}">
                <DockPanel
                    ToolTip="{me:LocalizationSource MepSettingsWindow.MinSizesTooltip}"
                    LastChildFill="True">
                    <Label
                        DockPanel.Dock="Top"
                        Content="{me:LocalizationSource MepSettingsWindow.MinSizesLabel}"
                        Style="{StaticResource CustomLabel}" />
                    <ui:ListView
                        ItemsSource="{Binding MinSizes}">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <views:SizeView
                                    DataContext="{Binding}" />
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </DockPanel>
            </Border>

            <Border
                Grid.Row="1"
                Margin="0 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Content="{me:LocalizationSource MepSettingsWindow.RoundingsLabel}"
                        DockPanel.Dock="Top"
                        Style="{StaticResource CustomLabel}" />
                    <DockPanel
                        Margin="3 8 3 12"
                        VerticalAlignment="Center"
                        ToolTip="{me:LocalizationSource MepSettingsWindow.RoundingsTooltip}">
                        <Label
                            Style="{StaticResource CustomLabel}"
                            Content="{me:LocalizationSource MepSettingsWindow.SizeRounding}" />
                        <ComboBox
                            IsEditable="False"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            MinWidth="{StaticResource SmallInputWidth}"
                            Width="{StaticResource SmallInputWidth}"
                            ItemsSource="{Binding Roundings}"
                            SelectedItem="{Binding SelectedRounding}" />
                    </DockPanel>
                    <DockPanel
                        Margin="3 0"
                        VerticalAlignment="Center"
                        ToolTip="{me:LocalizationSource MepSettingsWindow.ElevationRoundingTooltip}">
                        <Label
                            Style="{StaticResource CustomLabel}"
                            Content="{me:LocalizationSource MepSettingsWindow.ElevationRounding}" />
                        <ComboBox
                            IsEditable="False"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            MinWidth="{StaticResource SmallInputWidth}"
                            Width="{StaticResource SmallInputWidth}"
                            ItemsSource="{Binding Roundings}"
                            SelectedItem="{Binding SelectedElevationRounding}" />
                    </DockPanel>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="2"
                Style="{StaticResource CustomBorder}">
                <DockPanel
                    LastChildFill="True"
                    ToolTip="{me:LocalizationSource MepSettingsWindow.SizeRangesTooltip}">
                    <DockPanel
                        DockPanel.Dock="Top">
                        <Label
                            Margin="0 0 0 8"
                            Style="{StaticResource CustomLabel}"
                            Content="{me:LocalizationSource MepSettingsWindow.SizeRangesLabel}" />
                        <ui:Button
                            Margin="10 0"
                            Command="{Binding AddOffsetCommand}"
                            Content="{ui:SymbolIcon Symbol=Add20}" />
                        <ui:Button
                            Appearance="Danger"
                            Command="{Binding RemoveOffsetCommand}"
                            CommandParameter="{Binding ElementName=_offsets, Path=SelectedItem}"
                            Content="{ui:SymbolIcon Symbol=Delete20}" />
                    </DockPanel>
                    <ui:ListView
                        SelectionMode="Single"
                        x:Name="_offsets"
                        ItemsSource="{Binding Offsets}">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="5"
                                    Style="{StaticResource CustomBorder}">
                                    <views:OffsetRangeView
                                        DataContext="{Binding}" />
                                </Border>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </DockPanel>
            </Border>
        </Grid>

        <Border
            Grid.Column="1"
            Margin="10 0 0 0"
            Style="{StaticResource CustomBorder}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Content="{me:LocalizationSource MepSettingsWindow.Filtration}" />

                <Border
                    Grid.Row="1"
                    Style="{StaticResource CustomBorder}">
                    <DockPanel
                        LastChildFill="True">
                        <Label
                            DockPanel.Dock="Top"
                            Style="{StaticResource CustomLabel}"
                            Content="{me:LocalizationSource MepSettingsWindow.MepFiltration}" />
                        <ScrollViewer>
                            <views:SetView
                                DataContext="{Binding SetViewModel}" />
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <Border
                    Grid.Row="2"
                    Margin="0 10"
                    Style="{StaticResource CustomBorder}">
                    <views:StructureCategoryView
                        DataContext="{Binding StructureCategories[0]}" />
                </Border>

                <Border
                    Grid.Row="3"
                    Style="{StaticResource CustomBorder}">
                    <views:StructureCategoryView
                        DataContext="{Binding StructureCategories[1]}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</core:WpfUIPlatformUserControl>
