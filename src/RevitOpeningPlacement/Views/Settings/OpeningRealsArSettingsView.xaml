<core:WpfUIPlatformWindow
    x:Class="RevitOpeningPlacement.Views.Settings.OpeningRealsArSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    MinWidth="350"
    MaxWidth="350"
    MinHeight="200"
    MaxHeight="200"
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance vms:OpeningRealsArConfigViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            ShowMaximize="False"
            ShowMinimize="False"
            Title="{me:LocalizationSource OpeningRealsArSettingsView.Title}" />

        <Border
            Grid.Row="1"
            Margin="8 0"
            Style="{StaticResource CustomBorder}">
            <StackPanel
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <DockPanel
                    HorizontalAlignment="Stretch">
                    <ui:ToggleSwitch
                        Content="{me:LocalizationSource OpeningRealsArSettingsView.RoundSize}"
                        IsChecked="{Binding RoundSize, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox
                        IsEditable="False"
                        HorizontalAlignment="Right"
                        MinWidth="{StaticResource SmallInputWidth}"
                        Width="{StaticResource SmallInputWidth}"
                        ToolTip="{me:LocalizationSource OpeningRealsArSettingsView.RoundValues}"
                        IsEnabled="{Binding RoundSize}"
                        ItemsSource="{Binding EnabledRoundings}"
                        SelectedItem="{Binding SelectedRoundSize, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel
                    Margin="0 5 0 0"
                    HorizontalAlignment="Stretch">
                    <ui:ToggleSwitch
                        Content="{me:LocalizationSource OpeningRealsArSettingsView.RoundElevation}"
                        IsChecked="{Binding RoundElevation, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox
                        IsEditable="False"
                        HorizontalAlignment="Right"
                        MinWidth="{StaticResource SmallInputWidth}"
                        Width="{StaticResource SmallInputWidth}"
                        ToolTip="{me:LocalizationSource OpeningRealsArSettingsView.RoundValues}"
                        IsEnabled="{Binding RoundElevation}"
                        ItemsSource="{Binding EnabledRoundings}"
                        SelectedItem="{Binding SelectedRoundElevation, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </StackPanel>
        </Border>

        <DockPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <ui:Button
                Appearance="Info"
                Width="80"
                Margin="8"
                IsDefault="True"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding SaveConfigCommand}" />
            <ui:Button
                Width="80"
                Margin="8"
                IsCancel="True"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </DockPanel>
    </Grid>
</core:WpfUIPlatformWindow>
