<core:WpfUIPlatformWindow
    x:Class="RevitOpeningPlacement.Views.Settings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:views="clr-namespace:RevitOpeningPlacement.Views.Settings"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Height="700"
    Width="1250"
    MinHeight="700"
    MinWidth="1250"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <i:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding OpenFileDialogService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}" />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Title="{me:LocalizationSource MepSettingsWindow.Title}" />

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0 0 0 10"
            Style="{StaticResource CustomBorder}">
            <DockPanel>
                <ui:Button
                    ToolTip="{me:LocalizationSource MepSettingsWindow.LoadSettings}"
                    Command="{Binding LoadConfigCommand}"
                    Content="{ui:SymbolIcon Symbol=ArrowDownload20}" />
                <ui:Button
                    Margin="10 0"
                    ToolTip="{me:LocalizationSource MepSettingsWindow.SaveSettings}"
                    Command="{Binding SaveConfigCommand}"
                    Content="{ui:SymbolIcon Symbol=Save20}" />
                <ui:Button
                    ToolTip="{me:LocalizationSource MepSettingsWindow.SaveAsSettings}"
                    Command="{Binding SaveAsConfigCommand}"
                    Content="{ui:SymbolIcon Symbol=SaveEdit20}" />
                <ui:Button
                    Margin="10 0"
                    ToolTip="{me:LocalizationSource MepSettingsWindow.OpenSettingsFolder}"
                    Command="{Binding OpenConfigFolderCommand}"
                    Content="{ui:SymbolIcon Symbol=FolderOpen20}" />
                <Label
                    Style="{StaticResource CustomLabel}"
                    Content="{me:LocalizationSource MepSettingsWindow.SettingsName}" />
                <ui:TextBox
                    Margin="5 0 0 0"
                    Width="600"
                    MinWidth="600"
                    HorizontalAlignment="Left"
                    Text="{Binding ConfigName, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <ui:Button
                    Margin="0 10 0 0"
                    DockPanel.Dock="Bottom"
                    HorizontalAlignment="Stretch"
                    Content="{me:LocalizationSource MepSettingsWindow.UnionSettings}"
                    ToolTip="{me:LocalizationSource MepSettingsWindow.UnionSettingsTooltip}"
                    Command="{Binding OpenUnionTaskSettingsCommand}" />
                <views:CategoryView
                    DataContext="{Binding}" />
            </DockPanel>
        </Border>

        <views:SettingView
            Grid.Row="2"
            Grid.Column="1"
            Margin="10 0 0 0"
            DataContext="{Binding SelectedMepCategoryViewModel}" />

        <StackPanel
            Grid.ColumnSpan="2"
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="10"
                Text="{Binding ErrorText}"
                Style="{StaticResource CustomErrorText}" />
            <ui:TextBlock
                Margin="10"
                Text="{Binding MessageText}"
                Style="{StaticResource CustomMessageText}" />
            <ui:ToggleSwitch
                Margin="10"
                Content="{me:LocalizationSource MepSettingsWindow.ShowPlacingErrors}"
                IsChecked="{Binding ShowPlacingErrors, UpdateSourceTrigger=PropertyChanged}" />
            <ui:DropDownButton
                Margin="10"
                Content="{me:LocalizationSource MepSettingsWindow.CheckFilter}">
                <ui:DropDownButton.Flyout>
                    <ContextMenu>
                        <MenuItem
                            Click="ButtonCheckFilter_Click"
                            Header="{me:LocalizationSource MepSettingsWindow.CheckFilterMep}"
                            Command="{Binding CheckMepFilterCommand}" />
                        <MenuItem
                            Click="ButtonCheckFilter_Click"
                            Header="{me:LocalizationSource MepSettingsWindow.CheckFilterWalls}"
                            Command="{Binding CheckWallFilterCommand}" />
                        <MenuItem
                            Click="ButtonCheckFilter_Click"
                            Header="{me:LocalizationSource MepSettingsWindow.CheckFilterFloors}"
                            Command="{Binding CheckFloorFilterCommand}" />
                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
            <ui:Button
                Width="80"
                Margin="10"
                IsDefault="True"
                Click="ButtonOk_Click"
                Appearance="Info"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding SaveConfigCommand}" />
            <ui:Button
                Margin="10"
                Width="80"
                IsCancel="true"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>