<base:ThemedPlatformWindow
    x:Class="RevitOpeningPlacement.Views.StructureCategoryFilterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:m="clr-namespace:RevitClashDetective.Models.Value"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxci="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:local="clr-namespace:RevitOpeningPlacement.Views"
    xmlns:mvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:common="clr-namespace:dosymep.Xpf.Core.SimpleServices;assembly=dosymep.Xpf.Core"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    mc:Ignorable="d"
    Title="Проверка настроек фильтрации элементов конструкций"
    Height="600"
    Width="650"
    MinHeight="500"
    MinWidth="500"
    x:Name="_this"
    d:DataContext="{d:DesignInstance vm:StructureCategoryFilterViewModel, IsDesignTimeCreatable=False}">
    <mvvm:Interaction.Behaviors>
        <mvvm:EventToCommand
            EventName="Loaded"
            Command="{Binding ShowSetCommand}" />
        <mvvm:EventToCommand
            EventName="Closing"
            Command="{Binding CloseCommand}" />
        <common:AttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
    </mvvm:Interaction.Behaviors>
    <base:ThemedPlatformWindow.Resources>
        <Style
            TargetType="dxg:GridControl">
            <Setter
                Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="SelectionMode"
                Value="Row" />
            <Setter
                Property="AutoExpandAllGroups"
                Value="True" />
        </Style>
        <Style
            TargetType="dxg:TableView">
            <Setter
                Property="ShowDataNavigator"
                Value="False" />
            <Setter
                Property="ShowSearchPanelMode"
                Value="Never" />
            <Setter
                Property="NavigationStyle"
                Value="Cell" />
            <Setter
                Property="VirtualizingPanel.IsVirtualizingWhenGrouping"
                Value="True" />
            <Setter
                Property="VirtualizingPanel.VirtualizationMode"
                Value="Recycling" />
            <Setter
                Property="VirtualizingPanel.IsVirtualizing"
                Value="True" />
            <Setter
                Property="AllowEditing"
                Value="False" />
            <Setter
                Property="ShowGroupPanel"
                Value="True" />
            <Setter
                Property="AllowGrouping"
                Value="True" />
            <Setter
                Property="VerticalScrollbarVisibility"
                Value="Auto" />
            <Setter
                Property="HorizontalScrollbarVisibility"
                Value="Auto" />
        </Style>
        <Style
            TargetType="dxdo:LayoutPanel">
            <Setter
                Property="ShowPinButton"
                Value="False" />
            <Setter
                Property="ShowCloseButton"
                Value="False" />
            <Setter
                Property="AllowDrag"
                Value="False" />
            <Setter
                Property="AllowMaximize"
                Value="False" />
            <Setter
                Property="AllowMinimize"
                Value="False" />
            <Setter
                Property="AllowFloat"
                Value="False" />
        </Style>
        <DataTemplate
            DataType="{x:Type m:ParamValue}">
            <dxe:TextEdit
                IsReadOnly="True"
                EditMode="InplaceActive"
                EditValue="{Binding DisplayValue}" />
        </DataTemplate>
    </base:ThemedPlatformWindow.Resources>
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <dxe:CheckEdit
            EditValue="{Binding Inverted}"
            Content="Инвертировать"
            Margin="2 0"
            Grid.Row="0">
            <mvvm:Interaction.Triggers>
                <mvvm:EventToCommand
                    EventName="EditValueChanged"
                    Command="{Binding InversionChangedCommand}" />
            </mvvm:Interaction.Triggers>
        </dxe:CheckEdit>

        <dxdo:LayoutPanel
            Caption="{Binding ElementsSearchSet.Filter.Name}"
            Grid.Row="1">
            <dxdo:LayoutPanel.ControlBoxContent>
                <dx:SimpleButton
                    ToolTip="Показать весь набор линейных элементов на виде целиком"
                    Command="{Binding ElementName=_this, Path=DataContext.ShowSetCommand}"
                    Content="Показать весь набор"
                    Width="150"
                    FontSize="11" />
            </dxdo:LayoutPanel.ControlBoxContent>
            <dxg:GridControl
                x:Name="_dgElements"
                ItemsSource="{Binding ElementsSearchSet.Grid.Rows, UpdateSourceTrigger=PropertyChanged}">
                <dxg:GridControl.GroupSummary>
                    <dxg:GridSummaryItem
                        SummaryType="Count" />
                </dxg:GridControl.GroupSummary>
                <dxg:GridControl.View>
                    <dxg:TableView
                        x:Name="_gridView" />
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        Width="80"
                        AllowResizing="False">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <dx:SimpleButton
                                    Command="{Binding ElementName=_this, Path=DataContext.ElementsSearchSet.Grid.SelectCommand}"
                                    CommandParameter="{Binding Row}"
                                    Glyph="{dx:DXImage 'SvgImages/HybridDemoIcons/Editors/HybridDemo_Search Button.svg'}"
                                    GlyphHeight="16" />
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn
                        Width="2*"
                        Header="Файл"
                        FieldName="File" />
                    <dxg:GridColumn
                        Width="80"
                        Header="Категория"
                        FieldName="Category" />
                    <dxg:GridColumn
                        Width="70"
                        Header="Id"
                        FieldName="Id" />
                    <dxg:GridColumn
                        Width="6*"
                        Header="Имя типоразмера"
                        FieldName="Name" />
                </dxg:GridControl.Columns>
            </dxg:GridControl>
        </dxdo:LayoutPanel>
    </Grid>
</base:ThemedPlatformWindow>
