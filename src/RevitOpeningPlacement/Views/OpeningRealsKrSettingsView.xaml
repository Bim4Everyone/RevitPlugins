<core:WpfUIPlatformWindow
    x:Class="RevitOpeningPlacement.Views.OpeningRealsKrSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitOpeningPlacement.Views"
    xmlns:vms="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    MinHeight="240"
    MinWidth="350"
    MaxHeight="240"
    MaxWidth="350"
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance vms:OpeningRealsKrConfigViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource OpeningRealsKrSettingsView.Title}" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel>
                <RadioButton
                    GroupName="PlacementType"
                    Content="{me:LocalizationSource OpeningRealsKrSettingsView.PlaceByAr}"
                    IsChecked="{Binding PlaceByAr}" />
                <RadioButton
                    Margin="0 5 0 0"
                    GroupName="PlacementType"
                    Content="{me:LocalizationSource OpeningRealsKrSettingsView.PlaceByMep}"
                    IsChecked="{Binding PlaceByMep}" />

                <DockPanel
                    Margin="0 5"
                    HorizontalAlignment="Stretch">
                    <ui:ToggleSwitch
                        Content="{me:LocalizationSource OpeningRealsKrSettingsView.RoundSize}"
                        IsChecked="{Binding RoundSize, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox
                        Width="70"
                        IsEditable="False"
                        HorizontalAlignment="Right"
                        ToolTip="{me:LocalizationSource OpeningRealsKrSettingsView.RoundValues}"
                        IsEnabled="{Binding RoundSize}"
                        ItemsSource="{Binding EnabledRoundings}"
                        SelectedItem="{Binding SelectedRoundSize, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel
                    HorizontalAlignment="Stretch">
                    <ui:ToggleSwitch
                        Content="{me:LocalizationSource OpeningRealsKrSettingsView.RoundElevation}"
                        IsChecked="{Binding RoundElevation, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox
                        Width="70"
                        IsEditable="False"
                        HorizontalAlignment="Right"
                        ToolTip="{me:LocalizationSource OpeningRealsKrSettingsView.RoundValues}"
                        IsEnabled="{Binding RoundElevation}"
                        ItemsSource="{Binding EnabledRoundings}"
                        SelectedItem="{Binding SelectedRoundElevation, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </StackPanel>
        </StackPanel>

        <DockPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <ui:Button
                Appearance="Info"
                Height="25"
                Width="80"
                Margin="10"
                IsDefault="True"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding SaveConfigCommand}" />
            <ui:Button
                Height="25"
                Width="80"
                Margin="10"
                IsCancel="True"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </DockPanel>
    </Grid>
</core:WpfUIPlatformWindow>
