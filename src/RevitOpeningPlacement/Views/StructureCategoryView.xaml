<core:WpfUIPlatformUserControl
    x:Class="RevitOpeningPlacement.Views.StructureCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitOpeningPlacement.Views"
    xmlns:vm="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:views="clr-namespace:RevitOpeningPlacement.Views"
    mc:Ignorable="d"
    d:Width="500"
    d:Height="250"
    d:Background="White"
    d:DataContext="{d:DesignInstance vm:StructureCategoryViewModel, IsDesignTimeCreatable=False}">
    <DockPanel
        LastChildFill="True">
        <DockPanel
            DockPanel.Dock="Top"
            Margin="0 0 0 10">
            <ui:ToggleSwitch
                DockPanel.Dock="Left"
                Margin="0 0 10 0"
                IsChecked="{Binding IsSelected}" />
            <Label
                DockPanel.Dock="Left"
                Content="{Binding Name}" />
        </DockPanel>
        <ScrollViewer
            DockPanel.Dock="Bottom">
            <views:SetView
                DataContext="{Binding SetViewModel}" />
        </ScrollViewer>
    </DockPanel>
</core:WpfUIPlatformUserControl>
