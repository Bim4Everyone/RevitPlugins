<core:WpfUIPlatformWindow
    x:Class="RevitOpeningPlacement.Views.Utils.LinksSelectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitOpeningPlacement.ViewModels.Links"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    Height="300"
    Width="600"
    MinHeight="150"
    MinWidth="150"
    d:DataContext="{d:DesignInstance vms:LinksSelectorViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:TextBlock
                x:Key="NameHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.NameHeader}" />
            <ui:TextBlock
                x:Key="CurrentStatusHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.CurrentStatusHeader}" />
            <ui:TextBlock
                x:Key="NewStatusHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.NewStatusHeader}" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource LinksSelectorWindow.Title}" />

        <ui:DataGrid
            Grid.Row="1"
            RowHeight="35"
            GridLinesVisibility="All"
            CanUserReorderColumns="False"
            CanUserResizeRows="False"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Links}">
            <ui:DataGrid.Resources>
                <Style
                    TargetType="CheckBox"
                    BasedOn="{StaticResource CustomColumnCheckBoxStyle}" />
            </ui:DataGrid.Resources>
            <ui:DataGrid.Columns>
                <DataGridCheckBoxColumn
                    CanUserResize="False"
                    IsReadOnly="False"
                    Width="47"
                    CanUserSort="False"
                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridCheckBoxColumn.Header>
                        <CheckBox
                            IsChecked="{Binding DataContext.AllLinksSelected, RelativeSource={RelativeSource AncestorType=ui:DataGrid}, UpdateSourceTrigger=PropertyChanged}" />
                    </DataGridCheckBoxColumn.Header>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn
                    Width="*"
                    MinWidth="60"
                    IsReadOnly="True"
                    Header="{StaticResource NameHeader}"
                    Binding="{Binding Name}" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="60"
                    IsReadOnly="True"
                    Header="{StaticResource CurrentStatusHeader}"
                    Binding="{Binding CurrentStatus}" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="60"
                    IsReadOnly="True"
                    Header="{StaticResource NewStatusHeader}"
                    Binding="{Binding FutureStatus}" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText}" />

            <ui:Button
                Appearance="Info"
                Margin="10"
                Width="80"
                IsDefault="True"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                IsCancel="True"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
