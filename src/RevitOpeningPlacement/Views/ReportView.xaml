<base:ThemedPlatformWindow
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    x:Class="RevitOpeningPlacement.Views.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitOpeningPlacement.Views"
    xmlns:vm="clr-namespace:RevitOpeningPlacement.ViewModels.ReportViewModel"
    xmlns:mvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    mc:Ignorable="d"
    Title="Ошибки расстановки заданий на отверстия"
    MinHeight="300"
    MinWidth="800"
    Height="450"
    Width="800"
    d:DataContext="{d:DesignInstance vm:ClashesViewModel, IsDesignTimeCreatable=False}">
    <base:ThemedPlatformWindow.Resources>
        <Style
            TargetType="dxg:GridControl">
            <Setter
                Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="SelectionMode"
                Value="Row" />
            <Setter
                Property="AutoExpandAllGroups"
                Value="True" />
        </Style>
        <Style
            TargetType="dxg:TableView">
            <Setter
                Property="ShowDataNavigator"
                Value="False" />
            <Setter
                Property="ShowSearchPanelMode"
                Value="Never" />
            <Setter
                Property="NavigationStyle"
                Value="Cell" />
            <Setter
                Property="VirtualizingPanel.IsVirtualizingWhenGrouping"
                Value="True" />
            <Setter
                Property="VirtualizingPanel.VirtualizationMode"
                Value="Recycling" />
            <Setter
                Property="VirtualizingPanel.IsVirtualizing"
                Value="True" />
            <Setter
                Property="AllowEditing"
                Value="False" />
            <Setter
                Property="ShowGroupPanel"
                Value="True" />
            <Setter
                Property="AllowGrouping"
                Value="True" />
            <Setter
                Property="VerticalScrollbarVisibility"
                Value="Auto" />
            <Setter
                Property="HorizontalScrollbarVisibility"
                Value="Auto" />
            <Setter
                Property="AutoWidth"
                Value="True" />
        </Style>
    </base:ThemedPlatformWindow.Resources>
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <dxg:GridControl
            Name="_dg"
            Grid.Row="0"
            ItemsSource="{Binding ClashesViewSource.View}">
            <dxg:GridControl.GroupSummary>
                <dxg:GridSummaryItem
                    SummaryType="Count" />
            </dxg:GridControl.GroupSummary>
            <dxg:GridControl.View>
                <dxg:TableView
                    Name="_gridView">
                </dxg:TableView>
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn
                    Width="80"
                    MaxWidth="80"
                    AllowResizing="False">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dx:SimpleButton
                                Command="{Binding ElementName=_dg, Path=DataContext.SelectCommand}"
                                CommandParameter="{Binding Row}"
                                Glyph="{dx:DXImage 'SvgImages/HybridDemoIcons/Editors/HybridDemo_Search Button.svg'}"
                                GlyphHeight="16" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn
                    Header="Сообщение"
                    FieldName="Message" />
                <dxg:GridColumn
                    Header="Id 1"
                    FieldName="Clash.MainElement.Id" />
                <dxg:GridColumn
                    Header="Уровень 1"
                    FieldName="Clash.MainElement.Level" />
                <dxg:GridColumn
                    Header="Категория 1"
                    FieldName="Clash.MainElement.Category" />
                <dxg:GridColumn
                    Header="Имя типа 1"
                    FieldName="Clash.MainElement.Name" />
                <dxg:GridColumn
                    Header="Имя файла 1"
                    FieldName="Clash.MainElement.DocumentName" />
                <dxg:GridColumn
                    Header="Id 2"
                    FieldName="Clash.OtherElement.Id" />
                <dxg:GridColumn
                    Header="Уровень 2"
                    FieldName="Clash.OtherElement.Level" />
                <dxg:GridColumn
                    Header="Категория 2"
                    FieldName="Clash.OtherElement.Category" />
                <dxg:GridColumn
                    Header="Имя типа 2"
                    FieldName="Clash.OtherElement.Name" />
                <dxg:GridColumn
                    Header="Имя файла 2"
                    FieldName="Clash.OtherElement.DocumentName" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>

        <StackPanel
            Grid.Row="1"
            Margin="0 10 0 0"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <dx:SimpleButton
                Content="Ok"
                Height="25"
                Width="80"
                Margin="10 0"
                IsDefault="True"
                Click="ButtonOk_Click" />
        </StackPanel>

    </Grid>
</base:ThemedPlatformWindow>
