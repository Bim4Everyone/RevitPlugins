<base:ThemedPlatformWindow
    x:Class="RevitOpeningPlacement.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitOpeningPlacement.Views"
    xmlns:vms="clr-namespace:RevitOpeningPlacement.ViewModels.OpeningConfig"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    x:Name="_this"
    Height="700"
    Width="1250"
    MinHeight="700"
    MinWidth="1250"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <dx:SimpleButton
                Height="32"
                Width="32"
                Margin="0 0 10 0"
                ToolTip="Загрузить настройки"
                Command="{Binding LoadConfigCommand}"
                Glyph="{dx:DXImage 'Office2013/Actions/Download_32x32.png'}" />

            <dx:SimpleButton
                Height="32"
                Width="32"
                Margin="0 0 10 0"
                ToolTip="Cохранить"
                Command="{Binding SaveConfigCommand}"
                Glyph="{dx:DXImage 'DevAV/Actions/Save_32x32.png'}" />

            <dx:SimpleButton
                Height="32"
                Width="32"
                Margin="0 0 10 0"
                ToolTip="Сохранить как"
                Command="{Binding SaveAsConfigCommand}"
                Glyph="{dx:DXImage 'DevAV/Actions/SaveAs_32x32.png'}" />

            <dx:SimpleButton
                Height="32"
                Width="32"
                Margin="0 0 10 0"
                ToolTip="Открыть папку конфига"
                Command="{Binding OpenConfigFolderCommand}"
                Glyph="{dx:DXImage 'DevAV/Actions/OpenDoc_32x32.png'}" />
            <DockPanel
                VerticalAlignment="Center">

                <TextBlock
                    Text="Название настроек: "
                    VerticalAlignment="Center" />
                <dxe:TextEdit
                    Width="600"
                    NullText="default"
                    EditValue="{Binding ConfigName, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </StackPanel>

        <dxdo:DockLayoutManager
            Grid.Row="1">
            <dxdo:LayoutGroup
                LastChildFill="True">
                <dxdo:LayoutControlItem
                    ItemWidth="310">
                    <DockPanel
                        LastChildFill="True">
                        <Button
                            Margin="0 10 0 0"
                            DockPanel.Dock="Bottom"
                            HorizontalAlignment="Stretch"
                            Content="Настройки объединения"
                            ToolTip="Настройки объединения используются&#x0a;при ручном объединении заданий на отверстия,&#x0a;а также при автообъединении заданий на отверстия, в том числе в многослойных конструкциях."
                            Command="{Binding OpenUnionTaskSettingsCommand}" />
                        <local:CategoryView
                            x:Name="_categoryView"
                            DataContext="{Binding ElementName=_this, Path=DataContext}" />
                    </DockPanel>
                </dxdo:LayoutControlItem>
                <dxdo:LayoutControlItem
                    Margin="-13">
                    <local:SettingView
                        DataContext="{Binding SelectedMepCategoryViewModel}" />
                </dxdo:LayoutControlItem>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>

        <StackPanel
            Grid.Row="2"
            Margin="0 10 0 0"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <dxe:TextEdit
                Margin="10 0 0 0"
                IsReadOnly="True"
                EditMode="InplaceActive"
                EditValue="{Binding ErrorText}"
                Foreground="Orange" />
            <dxe:TextEdit
                Margin="10 0"
                IsReadOnly="True"
                EditMode="InplaceActive"
                EditValue="{Binding MessageText}"
                Foreground="Green" />
            <dxe:CheckEdit
                Content="Выводить ошибки расстановки"
                Margin="0 0 10 0"
                IsChecked="{Binding ShowPlacingErrors}" />
            <dx:DropDownButton
                Height="25"
                Width="160"
                Content="Проверить фильтр">
                <StackPanel
                    Orientation="Vertical">
                    <dx:SimpleButton
                        Content="Проверить фильтр ВИС"
                        HorizontalContentAlignment="Left"
                        Height="25"
                        IsDefault="False"
                        Click="ButtonCheckFilter_Click"
                        Command="{Binding CheckMepFilterCommand}" />
                    <dx:SimpleButton
                        Content="Проверить фильтр стен"
                        HorizontalContentAlignment="Left"
                        Height="25"
                        IsDefault="False"
                        Click="ButtonCheckFilter_Click"
                        Command="{Binding CheckWallFilterCommand}" />
                    <dx:SimpleButton
                        Content="Проверить фильтр перекрытий"
                        HorizontalContentAlignment="Left"
                        Height="25"
                        IsDefault="False"
                        Click="ButtonCheckFilter_Click"
                        Command="{Binding CheckFloorFilterCommand}" />
                </StackPanel>
            </dx:DropDownButton>
            <dx:SimpleButton
                Content="ОК"
                Height="25"
                Width="80"
                Margin="10 0"
                IsDefault="True"
                Click="ButtonOk_Click"
                Command="{Binding SaveConfigCommand}" />
            <dx:SimpleButton
                Content="Отмена"
                Height="25"
                Width="80"
                IsCancel="true"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</base:ThemedPlatformWindow>