<core:WpfUIPlatformWindow
    x:Class="RevitGenLookupTables.Views.MainWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:vms="clr-namespace:RevitGenLookupTables.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:views="clr-namespace:RevitGenLookupTables.Views"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Title="{me:LocalizationSource MainWindow.Title}"

    Width="800"
    Height="450"

    MinWidth="800"
    MinHeight="450"

    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="14 0 14 8"
            Padding="14 0"
            Background="{DynamicResource CardBackground}"
            CornerRadius="{DynamicResource ControlCornerRadius}">

            <Menu>
                <ui:MenuItem
                    Icon="{ui:SymbolIcon Add24}"
                    ToolTip="{me:LocalizationSource MainWindow.AddFamilyParamToolTip}"
                    Command="{Binding AddFamilyParamCommand}" />

                <ui:MenuItem
                    Icon="{ui:SymbolIcon TrayItemRemove24}"
                    ToolTip="{me:LocalizationSource MainWindow.RemoveFamilyParamToolTip}"
                    Command="{Binding RemoveFamilyParamCommand}" />

                <ui:MenuItem
                    Icon="{ui:SymbolIcon ArrowAutofitUp24}"
                    ToolTip="{me:LocalizationSource MainWindow.UpFamilyParamToolTip}"
                    Command="{Binding UpFamilyParamCommand}" />

                <ui:MenuItem
                    Icon="{ui:SymbolIcon ArrowAutofitDown24}"
                    ToolTip="{me:LocalizationSource MainWindow.DownFamilyParamToolTip}"
                    Command="{Binding DownFamilyParamCommand}" />
            </Menu>

        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="14 0 0 0"
            Padding="14 8"
            Background="{DynamicResource CardBackground}"
            CornerRadius="{DynamicResource ControlCornerRadius}">
            <views:FamilyParamsView />
        </Border>

        <GridSplitter
            Grid.Row="2"
            Grid.Column="1"
            Width="8"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent" />

        <Border
            Grid.Row="2"
            Grid.Column="2"
            Margin="0 0 14 0"
            Padding="14 8"
            Background="{DynamicResource CardBackground}"
            CornerRadius="{DynamicResource ControlCornerRadius}">
            <views:FamilyParamValuesView DataContext="{Binding ChosenFamilyParam.FamilyParamValues}" />
        </Border>

        <ContentPresenter
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            x:Name="_rootContentDialog" />

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>