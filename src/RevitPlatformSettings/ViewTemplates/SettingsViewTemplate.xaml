        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="{DynamicResource SettingsView.Prompt}" />
    </DataTemplate>
</ResourceDictionary>