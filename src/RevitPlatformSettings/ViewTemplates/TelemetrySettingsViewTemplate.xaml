<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:RevitPlatformSettings.Views"
                    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
                    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <DataTemplate DataType="{x:Type settings:TelemetrySettingsViewModel}">

        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox
                    Grid.Row="0"
                    Margin="10"
                    Header="{me:LocalizationSource TelemetrySettings.LogTrace}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceIsActive}">

                            <CheckBox
                                IsHitTestVisible="False"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Path=LogTraceIsActive, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceLogLevel}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=LogTraceLogLevel, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceServerName}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=LogTraceServerName, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>

                </GroupBox>

                <GroupBox
                    Grid.Row="1"
                    Margin="10"
                    Header="{me:LocalizationSource TelemetrySettings.LogTraceJournal}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceJournalIsActive}">

                            <CheckBox
                                IsHitTestVisible="False"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Path=LogTraceJournalIsActive, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceJournalUseUtc}">

                            <CheckBox
                                IsHitTestVisible="False"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Path=LogTraceJournalUseUtc, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceJournalLogLevel}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=LogTraceJournalLogLevel, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource TelemetrySettings.LogTraceJournalOutputTemplate}">

                            <ui:TextBox
                                MaxWidth="300"
                                IsReadOnly="True"
                                Text="{Binding Path=LogTraceJournalOutputTemplate, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>

                </GroupBox>

            </Grid>

        </ScrollViewer>

    </DataTemplate>
</ResourceDictionary>