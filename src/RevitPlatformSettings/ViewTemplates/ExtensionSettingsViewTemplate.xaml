<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore">
    <DataTemplate DataType="{x:Type settings:ExtensionsSettingsViewModel}">
        <DataGrid
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            CanUserReorderColumns="False">
            <DataGrid.Resources>
                <TextBlock
                    x:Key="NameColumnHeader"
                    TextWrapping="Wrap"
                    Text="{me:LocalizationSource ExtensionSettings.NameGridColumn}" />

                <TextBlock
                    x:Key="DescriptionColumnHeader"
                    TextWrapping="Wrap"
                    Text="{me:LocalizationSource ExtensionSettings.DescriptionGridColumn}" />

                <CollectionViewSource
                    x:Key="Extensions"
                    Source="{Binding Extensions}">
                    <CollectionViewSource.GroupDescriptions>
                        <PropertyGroupDescription PropertyName="Category" />
                    </CollectionViewSource.GroupDescriptions>
                </CollectionViewSource>
            </DataGrid.Resources>

            <DataGrid.ItemsSource>
                <StaticResource ResourceKey="Extensions" />
            </DataGrid.ItemsSource>

            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="43"
                    MinWidth="43"
                    MaxWidth="43">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DataTemplate>
                                <CheckBox
                                    Name="PART_Editor"
                                    IsEnabled="{Binding Items[0].AllowChangeEnabled}"
                                    IsChecked="{Binding Items[0].IsEnabled, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="{StaticResource NameColumnHeader}" />

                <DataGridTextColumn
                    Binding="{Binding Description}"
                    Header="{StaticResource DescriptionColumnHeader}" />
            </DataGrid.Columns>

            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="10"
                                FontWeight="Bold">
                                <Run Text="{DynamicResource ExtensionSettings.CategoryGridColumn}" />
                                <Run Text=": " />
                                <Run Text="{Binding Items[0].Category}" />
                            </TextBlock>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>
    </DataTemplate>
</ResourceDictionary>