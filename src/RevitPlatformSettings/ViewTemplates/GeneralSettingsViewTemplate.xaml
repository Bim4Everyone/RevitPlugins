<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
                    xmlns:views="clr-namespace:RevitPlatformSettings.Views"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:services="clr-namespace:dosymep.SimpleServices;assembly=dosymep.SimpleServices"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore">
    <DataTemplate DataType="{x:Type settings:GeneralSettingsViewModel}">
        
        <ScrollViewer 
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox
                    Grid.Row="0"
                    Margin="10"
                    Header="{me:LocalizationSource GeneralSettings.CorpSettings}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.CorpName}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=CorpName, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.SettingsPath}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=SettingsPath, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.SettingsImagePath}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=SettingsImagePath, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Grid.Row="1"
                    Margin="10"
                    Header="{me:LocalizationSource GeneralSettings.AppearanceSettings}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.HostTheme}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=HostTheme, Mode=OneWay}"
                                ItemsSource="{dxe:EnumItemsSource EnumType=services:UIThemes}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.HostLanguage}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=HostLanguage, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Grid.Row="2"
                    Margin="10"
                    Header="{me:LocalizationSource GeneralSettings.Notification}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.NotificationIsActive}">

                            <CheckBox
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Path=NotificationIsActive}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.NotificationVisibleMaxCount}">

                            <ui:TextBox
                                Text="{Binding Path=NotificationVisibleMaxCount}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.NotificationScreen}">

                            <ComboBox
                                SelectedItem="{Binding Path=NotificationScreen}"
                                ItemsSource="{dxe:EnumItemsSource EnumType=dxmvvm:NotificationScreen}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{me:LocalizationSource GeneralSettings.NotificationPosition}">

                            <ComboBox
                                SelectedItem="{Binding Path=NotificationPosition}"
                                ItemsSource="{dxe:EnumItemsSource EnumType=dxmvvm:NotificationPosition}" />

                        </views:CustomEditControl>
                        
                    </StackPanel>

                </GroupBox>
                
            </Grid>
            
        </ScrollViewer>
        
    </DataTemplate>
</ResourceDictionary>