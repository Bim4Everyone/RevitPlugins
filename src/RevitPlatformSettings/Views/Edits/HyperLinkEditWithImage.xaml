<UserControl
    x:Class="RevitPlatformSettings.Views.Edits.HyperLinkEditWithImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    x:Name="_this"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="300">

    <Hyperlink
        TextDecorations="None"
        Command="{Binding Command, ElementName=_this}"
        ToolTip="{Binding NavigationUrl, ElementName=_this}"
        Click="Hyperlink_OnClick">

        <Image
            Width="20"
            Height="20"
            Cursor="Hand"
            VerticalAlignment="Center"
            Source="{Binding ImageSource, ElementName=_this}" />

        <TextBlock
            FontSize="20"
            VerticalAlignment="Center"
            TextDecorations="Underline"
            Text="{Binding EditValue, ElementName=_this}" />

    </Hyperlink>

</UserControl>