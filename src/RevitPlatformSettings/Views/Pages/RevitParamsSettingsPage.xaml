<core:WpfUIPlatformPage
    x:Class="RevitPlatformSettings.Views.Pages.RevitParamsSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"

    x:ClassModifier="internal"

    mc:Ignorable="d"

    Width="800"
    Height="450"

    x:Name="_this"
    d:DataContext="{d:DesignInstance settings:RevitParamsSettingsViewModel, IsDesignTimeCreatable=False}">

    <Page.Resources>
        <TextBlock
            x:Key="IdColumnHeader"
            TextWrapping="Wrap"
            Text="{me:LocalizationSource RevitParamsSettings.IdGridColumn}" />

        <TextBlock
            x:Key="NameColumnHeader"
            TextWrapping="Wrap"
            Text="{me:LocalizationSource RevitParamsSettings.NameGridColumn}" />

        <TextBlock
            x:Key="StorageTypeColumnHeader"
            TextWrapping="Wrap"
            Text="{me:LocalizationSource RevitParamsSettings.StorageTypeGridColumn}" />
    </Page.Resources>

    <Grid>
        <DataGrid
            IsReadOnly="True"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            CanUserReorderColumns="False"
            ItemsSource="{Binding RevitParams}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Id}"
                    Header="{StaticResource IdColumnHeader}" />

                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="{StaticResource NameColumnHeader}" />

                <DataGridTextColumn
                    Binding="{Binding StorageType}"
                    Header="{StaticResource StorageTypeColumnHeader}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</core:WpfUIPlatformPage>