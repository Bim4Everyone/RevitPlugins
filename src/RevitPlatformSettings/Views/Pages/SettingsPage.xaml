<core:WpfUIPlatformPage
    x:Class="RevitPlatformSettings.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"

    x:ClassModifier="internal"

    mc:Ignorable="d"

    Width="800"
    Height="450"

    x:Name="_this"
    d:DataContext="{d:DesignInstance settings:SettingsViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="{DynamicResource SettingsView.Prompt}" />
    </Grid>
</core:WpfUIPlatformPage>