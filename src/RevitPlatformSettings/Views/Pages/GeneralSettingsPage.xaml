<core:WpfUIPlatformPage
    x:Class="RevitPlatformSettings.Views.Pages.GeneralSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markupExtensions="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:views="clr-namespace:RevitPlatformSettings.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:ss="clr-namespace:dosymep.SimpleServices;assembly=dosymep.SimpleServices"
    xmlns:settings="clr-namespace:RevitPlatformSettings.ViewModels.Settings"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"

    x:ClassModifier="internal"
    
    mc:Ignorable="d"

    Width="800"
    Height="450"

    x:Name="_this"
    d:DataContext="{d:DesignInstance settings:GeneralSettingsViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox
                    Grid.Row="0"
                    Margin="10"
                    Header="{markupExtensions:LocalizationSource GeneralSettings.CorpSettings}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.CorpName}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=CorpName, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.SettingsPath}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=SettingsPath, Mode=OneWay}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.SettingsImagePath}">

                            <ui:TextBox
                                IsReadOnly="True"
                                Text="{Binding Path=SettingsImagePath, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Grid.Row="1"
                    Margin="10"
                    Header="{markupExtensions:LocalizationSource GeneralSettings.AppearanceSettings}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.HostTheme}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=HostTheme, Mode=OneWay}"
                                ItemsSource="{markupExtensions:EnumToItemsSource EnumType=ss:UIThemes}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.HostLanguage}">

                            <ComboBox
                                IsReadOnly="True"
                                SelectedItem="{Binding Path=HostLanguage, Mode=OneWay}" />

                        </views:CustomEditControl>

                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Grid.Row="2"
                    Margin="10"
                    Header="{markupExtensions:LocalizationSource GeneralSettings.Notification}">

                    <StackPanel>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.NotificationIsActive}">

                            <CheckBox
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Path=NotificationIsActive}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.NotificationVisibleMaxCount}">

                            <ui:TextBox
                                Text="{Binding Path=NotificationVisibleMaxCount}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.NotificationScreen}">

                            <ComboBox
                                SelectedItem="{Binding Path=NotificationScreen}"
                                ItemsSource="{markupExtensions:EnumToItemsSource EnumType=dxmvvm:NotificationScreen}" />

                        </views:CustomEditControl>

                        <views:CustomEditControl
                            EditText="{markupExtensions:LocalizationSource GeneralSettings.NotificationPosition}">

                            <ComboBox
                                SelectedItem="{Binding Path=NotificationPosition}"
                                ItemsSource="{markupExtensions:EnumToItemsSource EnumType=dxmvvm:NotificationPosition}" />

                        </views:CustomEditControl>

                    </StackPanel>

                </GroupBox>

            </Grid>

        </ScrollViewer>
    </Grid>
</core:WpfUIPlatformPage>