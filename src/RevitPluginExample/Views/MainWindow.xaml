<local:BaseWindow
    x:Class="RevitPluginExample.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RevitPluginExample.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Главное окно"
    Width="800"
    Height="450">
    <Grid>
        <TextBox
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="200"
            Text="{Binding SaveProperty, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal"
            Margin="0,0,0,20">
            <ui:Button
                Margin="5 5 5 4"
                Width="80"
                Content="ОК"
                FontSize="14"
                Click="ButtonOk_Click" />

            <ui:Button
                Margin="5 5 0 4"
                Width="80"
                Content="Отмена"
                FontSize="14"
                Appearance="Primary"
                Click="ButtonCancel_Click" />
            <ui:Button
                Margin="5 5 5 4"
                Width="150"
                Content="Сменить тему"
                FontSize="14"
                Command="{Binding ChangeThemeCommand}"
                Appearance="Primary" />
        </StackPanel>
    </Grid>
</local:BaseWindow>