<Window
    x:Class="RevitAxonometryViews.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="Сформировать схемы"
    Height="450" Width="500"
    ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="43"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Width="108" Height="20" Margin="25,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ComboBox SelectedIndex="0" Width="170" Height="20" Margin="25,0,0,0"/>
            <TextBox Width="150" Height="20" Margin="25,0,0,0"/>
        </StackPanel>

        <ListView
            x:Name="lvSystems"
            Margin="25,0,25,0"
            Grid.Row="2"
            SelectionMode="Extended"
            >
            <ListView.View>
                <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="Test">
                    <GridView.Columns>
                        <GridViewColumn Header="Имя системы" 
                                        DisplayMemberBinding="{Binding SystemName}"
                                        Width="150"/>
                        <GridViewColumn Header="_ФОП_ВИС_Имя системы" 
                                        DisplayMemberBinding="{Binding SystemName}"
                                        Width="150"/>
                        <GridViewColumn Header="Создать" 
                                        DisplayMemberBinding="{Binding IsChecked}"
                                        Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
