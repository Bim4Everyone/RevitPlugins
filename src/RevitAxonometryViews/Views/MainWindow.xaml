<core:WpfUIPlatformWindow
    x:Class="RevitAxonometryViews.Views.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitAxonometryViews.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="{me:LocalizationSource MainWindow.Title}"
    
    MinHeight="800"
    MinWidth="900"
    Height="800"
    Width="900"
    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="55" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />

        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}">
        </ui:TitleBar>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="250" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox
                Name="FilterCriterion"
                ItemsSource="{Binding FilterCriterion}"
                SelectedItem="{Binding SelectedCriteria}"
                ToolTip="{me:LocalizationSource MainWindow.FilterParameterTooltip}"
                
                Margin="10,5,10,10"
                Grid.Column="0"></ComboBox>
            <ui:TextBox
                Name="filter"
                PlaceholderText="{me:LocalizationSource MainWindow.SearchHint}"
                Text="{Binding Path=FilterValue, UpdateSourceTrigger=PropertyChanged}"
                Margin="10,5,10,10"
                Grid.Column="1" />
        </Grid>

        <Border
            Grid.Row="2"
            Margin="10"
            Style="{StaticResource CustomBorder}">
            <ui:DataGrid
                x:Name="dgSystems"
                SelectionMode="Extended"
                Style="{StaticResource CustomResizableDataGridStyle}"
                ItemsSource="{Binding FilteredView}"
                AutoGenerateColumns="False">
                <ui:DataGrid.Columns>
                    <DataGridTemplateColumn
                        Header=""
                        Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    Checked="CheckBox_Checked"
                                    Unchecked="CheckBox_Unchecked"
                                    IsChecked="{Binding IsSelected}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn
                        Width="*"
                        x:Name="col1">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding DataContext.SystemName, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding DisplaySystemName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn
                        Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding DataContext.SharedSystemName, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding DisplaySharedName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </Border>

        
        <StackPanel
            Grid.Row="3">
            <CheckBox
                IsChecked="{Binding UseOneView}"
                Margin="10,0,0,0"
                Content="{me:LocalizationSource MainWindow.CombineViewsCheckBox}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Width="80"
                Margin="10"
                Appearance="Info"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Click="Button_Click_Ok"
                IsDefault="True"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Width="80"
                Margin="10"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>

