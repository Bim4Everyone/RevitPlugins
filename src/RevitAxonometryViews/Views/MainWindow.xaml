<Window
    x:Class="RevitAxonometryViews.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="Сформировать схемы"
    Height="450" Width="500"
    ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="43"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal">
            <TextBlock Width="108" 
                       Height="20" 
                       Margin="25,0,0,0"/>
        </StackPanel>
        
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <TextBlock
                Width="108" Height="20"
                Margin="25,0,0,0" Text="Фильтровать по:">
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ComboBox SelectedIndex="0" 
                      Width="170" 
                      Height="20" 
                      Margin="25,0,0,0"/>
            <TextBox Width="150" 
                     Height="20" 
                     Margin="25,0,0,0"/>
        </StackPanel>

        <ListView
            x:Name="lvSystems"
            Margin="25,0,25,0"
            Grid.Row="2"
            SelectionMode="Extended"
            >
            <ListView.View>
                <GridView AllowsColumnReorder="False" 
                          ColumnHeaderToolTip="Test">
                    <GridView.Columns>
                        <GridViewColumn Header="Имя системы" 
                                        DisplayMemberBinding="{Binding SystemName}"
                                        Width="150"/>
                        <GridViewColumn Header="_ФОП_ВИС_Имя системы" 
                                        DisplayMemberBinding="{Binding FopName}"
                                        Width="150"/>
                        <GridViewColumn Header="Создать" 
                                        Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        IsChecked="{Binding IsSelected}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel
            Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox
                        x:Name="useOneView"
                        Grid.Column="0"
                        Margin="10 5"
                        FlowDirection="RightToLeft"
                        Content="Все выделенные на один вид">
                </CheckBox>

                <CheckBox
                        x:Name="useFopVisName"
                        Grid.Column="1"
                        Margin="10 5"
                        Content="Схемы по ФОП__ВИС__Имя системы"/>
            </Grid>
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                Margin="5,0,5,10"
                Width="80"
                Content="ОК"
                IsDefault="True"
                Height="30" 
                Click="Button_Click_Ok" />
            <Button
                Margin="5,0,25,10"
                Width="80"
                Content="Отмена"
                IsCancel="True"
                Height="30"
                Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
