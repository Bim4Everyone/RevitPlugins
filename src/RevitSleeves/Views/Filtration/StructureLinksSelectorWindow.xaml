<core:WpfUIPlatformWindow
    x:Class="RevitSleeves.Views.Filtration.StructureLinksSelectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:RevitSleeves.ViewModels.Filtration"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    xmlns:local="clr-namespace:RevitSleeves.Views.Filtration"
    mc:Ignorable="d"
    Height="450"
    Width="800"
    MinWidth="600"
    MinHeight="400"
    d:DataContext="{d:DesignInstance vms:StructureLinksSelectorViewModel, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../assets/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:TextBlock
                x:Key="NameHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.NameHeader}" />
            <ui:TextBlock
                x:Key="CurrentStatusHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.CurrentStatusHeader}" />
            <ui:TextBlock
                x:Key="NewStatusHeader"
                Text="{me:LocalizationSource LinksSelectorWindow.NewStatusHeader}" />
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource LinksSelectorWindow.Title}" />

        <ui:DataGrid
            Grid.Row="1"
            RowHeight="35"
            GridLinesVisibility="All"
            CanUserReorderColumns="False"
            CanUserResizeRows="False"
            Style="{StaticResource CustomDataGrid}"
            ItemsSource="{Binding Links}">
            <ui:DataGrid.Columns>
                <DataGridCheckBoxColumn
                    CanUserResize="False"
                    Width="Auto"
                    IsReadOnly="False"
                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}">

                </DataGridCheckBoxColumn>
                <DataGridTextColumn
                    Width="250"
                    MinWidth="50"
                    IsReadOnly="True"
                    Header="{StaticResource NameHeader}"
                    Binding="{Binding Name}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    IsReadOnly="True"
                    Header="{StaticResource CurrentStatusHeader}"
                    Binding="{Binding CurrentStatus}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    IsReadOnly="True"
                    Header="{StaticResource NewStatusHeader}"
                    Binding="{Binding FutureStatus}">

                </DataGridTextColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                d:Appearance="Danger"
                d:Content="Ok"
                Content="{me:LocalizationSource Ok}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource Cancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
