<UserControl
    x:Class="RevitSleeves.Views.Settings.DiameterRangeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitSleeves.Views.Settings"
    xmlns:vms="clr-namespace:RevitSleeves.ViewModels.Settings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:DiameterRangeViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../assets/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel
        VerticalAlignment="Center">
        <Label
            DockPanel.Dock="Left"
            Style="{StaticResource CustomSmallLabel}"
            Content="{Binding Name}" />
        <DockPanel
            DockPanel.Dock="Right"
            HorizontalAlignment="Right">
            <ui:TextBox
                MinWidth="50"
                MaxWidth="50"
                Style="{StaticResource CustomSmallTextBox}"
                Text="{Binding SleeveDiameter}" />
            <Label
                Margin="5 0 0 0"
                Style="{StaticResource CustomSmallLabel}"
                Content="{Binding UnitName}" />
        </DockPanel>
    </DockPanel>
</UserControl>
