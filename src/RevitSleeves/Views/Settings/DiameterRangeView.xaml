<UserControl
    x:Class="RevitSleeves.Views.Settings.DiameterRangeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitSleeves.Views.Settings"
    xmlns:vms="clr-namespace:RevitSleeves.ViewModels.Settings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:DiameterRangeViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../assets/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center">
        <Label
            Style="{StaticResource CustomLabel}"
            Content="{Binding From}" />
        <ui:TextBox
            Margin="5 0"
            Width="50"
            Text="{Binding StartMepSize, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CustomSmallTextBox}" />
        <Label
            Style="{StaticResource CustomLabel}"
            Content="{Binding To}" />
        <ui:TextBox
            Margin="5 0"
            Width="50"
            Text="{Binding EndMepSize, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CustomSmallTextBox}" />
        <ui:TextBox
            Margin="30 0 5 0"
            Width="60"
            Text="{Binding SleeveDiameter, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CustomSmallTextBox}" />
        <Label
            Style="{StaticResource CustomLabel}"
            Content="{Binding UnitName}" />
    </DockPanel>
</UserControl>
