<UserControl
    x:Class="RevitSleeves.Views.Settings.OffsetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitSleeves.Views.Settings"
    xmlns:vms="clr-namespace:RevitSleeves.ViewModels.Settings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:OffsetViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../assets/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <ui:TextBlock
            Margin="0 0 5 0"
            Width="450"
            DockPanel.Dock="Left"
            TextAlignment="Left"
            Style="{StaticResource CustomTextBlockAsLabel}"
            Text="{Binding Name}" />
        <ui:TextBox
            MinWidth="50"
            MaxWidth="50"
            Height="Auto"
            Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CustomSmallTextBox}" />
        <Label
            Style="{StaticResource CustomLabel}"
            Content="{Binding UnitName}" />
    </DockPanel>
</UserControl>
