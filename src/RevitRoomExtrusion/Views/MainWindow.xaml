<Window
    x:Class="RevitRoomExtrusion.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRoomExtrusion.Views"
    
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Title="Выдавливание помещений"
    Height="200" Width="400"
    MinHeight="200" MinWidth="350">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Height="Auto"
            Orientation="Vertical"
            HorizontalAlignment="Left">

            <Label
               Content="Введите высоту выдавливания"
               Margin="5"
               Padding="5" />
            <TextBlock
                Text="{Binding ExtrusionHeight}"
                Margin="5"
                Padding="5"/>
            <Label
               Content="Введите тип помещений"
               Margin="5"
               Padding="5"/>
            <TextBlock
               Text="{Binding ExtrusionFamilyName}"
               Margin="5"
               Padding="5"/>

        </StackPanel>

        <StackPanel
            Height="45"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Grid.ColumnSpan="2"  
            Grid.RowSpan="2">
            <TextBlock
                Margin="10"                
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <Button
                Margin="10"
                Width="80"
                Content="Выдавить"
                IsDefault="True"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <Button
                Margin="10"
                Width="80"
                Content="Отменить"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
