<core:WpfUIPlatformWindow
    x:Class="RevitRoomExtrusion.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitRoomExtrusion.Views"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"    
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{me:LocalizationSource MainWindow.Title}"
    Height="360"
    Width="550"
    MinHeight="360"
    MinWidth="550">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto" />
            <RowDefinition />            
            <RowDefinition  
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            FontWeight="Bold"
            FontSize="14"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <StackPanel
            Grid.Row="1"
            Height="Auto"
            Orientation="Vertical"
            HorizontalAlignment="Stretch">
            <Border
                Style="{StaticResource CustomBorder}"
                Height="65">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="300" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0">
                        <Label
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.ExtrusionHeightMm}" />
                        <Label
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.ExtrusionHeightMmTooltip}" />
                    </StackPanel>
                    <ui:TextBox
                        Margin="5"
                        Padding="5"
                        Grid.Column="1"
                        Width="200"
                        Text="{Binding ExtrusionHeightMm, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
            <Border
                Style="{StaticResource CustomBorder}"
                Height="65">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="300" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0">
                        <Label
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.FamilyName}" />
                        <Label
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.FamilyNameTooltip}" />
                    </StackPanel>
                    <ui:TextBox
                        Margin="5"
                        Padding="5"
                        Grid.Column="1"
                        Width="200"
                        Text="{Binding ExtrusionFamilyName, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
            <Border
                Style="{StaticResource CustomBorder}"
                Height="65">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="300" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0">
                        <Label
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.JoinExtrusion}" />
                        <Label
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{me:LocalizationSource MainWindow.JoinExtrusionTooltip}" />
                    </StackPanel>
                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        IsChecked="{Binding IsJoinExtrusionChecked, UpdateSourceTrigger=PropertyChanged}"
                        OnContent="{me:LocalizationSource MainWindow.OnContent}"
                        OffContent="{me:LocalizationSource MainWindow.OffContent}" />
                </Grid>
            </Border>
        </StackPanel>
        
        <StackPanel            
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2">
            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Style="{StaticResource CustomErrorText}"
                Text="{Binding ErrorText}" />
            <ui:Button
                Margin="10"
                Width="100"
                IsDefault="True"
                Click="ButtonOk_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonOk}"
                Command="{Binding AcceptViewCommand}" />
            <ui:Button
                Margin="10"
                Width="100"
                IsCancel="True"
                Click="ButtonCancel_Click"
                Style="{StaticResource CustomContentButton}"
                Content="{me:LocalizationSource MainWindow.ButtonCancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
