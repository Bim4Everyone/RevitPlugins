<core:WpfUIPlatformWindow
	x:Class="RevitRsnManager.Views.MainWindow"
	
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
	
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitRsnManager.ViewModels"
	
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
	
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
	
    Title="{me:LocalizationSource MainWindow.Title}"
	
    Width="500"
    Height="450"
    MinWidth="500"
    MinHeight="450"
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

	<b:Interaction.Triggers>
		<b:EventTrigger
            EventName="Loaded">
			<b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
		</b:EventTrigger>
	</b:Interaction.Triggers>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>

		<ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

		<ui:Button
            Grid.Row="1"
            Margin="0,10,10,10"
            HorizontalAlignment="Right"
            Command="{Binding AutoConfigureCommand}"
			Content="{DynamicResource MainWindow.AutoConfigure}"
			ToolTip="{DynamicResource MainWindow.ToolTipAutoConfigure}">
		</ui:Button>

		<StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            Margin="0,10,0,10">

			<ui:TextBox
                Width="200"
                Margin="10,0,10,0"
                Text="{Binding NewServerName, UpdateSourceTrigger=PropertyChanged}"
				PlaceholderText="{me:LocalizationSource MainWindow.PlaceholderServerName}"/>

			<ui:Button
				Command="{Binding AddServerCommand}"
				ToolTip="{DynamicResource MainWindow.ToolTipAddServer}">
				
				<StackPanel
					Orientation="Horizontal">
					
					<TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
						Text="{me:LocalizationSource MainWindow.AddServer}"/>
					
					<ui:SymbolIcon
                        Symbol="Add12"
                        Width="16"
                        Height="16" />
					
				</StackPanel>
			</ui:Button>
		</StackPanel>

		<Grid
			Grid.Row="2"
			Margin="10,0,10,10">
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>

			<ui:Button
				Grid.Column="0"
				Height="40"
				Margin="0,0,5,0"
				HorizontalAlignment="Stretch"
				Command="{Binding MoveUpCommand}"
				CommandParameter="{Binding SelectedServer}"
				ToolTip="{DynamicResource MainWindow.ToolTipMoveUp}">
				
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center">
					
					<ui:SymbolIcon
						Symbol="ArrowUp12"
						Width="16"
						Height="16" />
					
					<TextBlock
						Margin="5,0,0,0"
						Text="{me:LocalizationSource MainWindow.MoveUp}"/>
					
				</StackPanel>
			</ui:Button>

			<ui:Button
				Grid.Column="1"
				Height="40"
				Margin="5,0,0,0"
				HorizontalAlignment="Stretch"
				Command="{Binding MoveDownCommand}"
				CommandParameter="{Binding SelectedServer}"
				ToolTip="{DynamicResource MainWindow.ToolTipMoveDown}">
				
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center">
					
					<ui:SymbolIcon
						Symbol="ArrowDown12"
						Width="16"
						Height="16" />
					
					<TextBlock
						Margin="5,0,0,0"
						Text="{me:LocalizationSource MainWindow.MoveDown}"/>
					
				</StackPanel>
			</ui:Button>
		</Grid>


		<Border
            Grid.Row="3"
            CornerRadius="8"
            Padding="5"
            Margin="10,0,10,0"
            Background="{DynamicResource CardBackground}">
			
			<ListBox
                Grid.Row="2"
                AllowDrop="True"
                Drop="ListBox_Drop"
                PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                ItemsSource="{Binding Servers}"
                SelectedItem="{Binding SelectedServer}">

				<ListBox.ItemContainerStyle>
					<Style
						TargetType="ListBoxItem">
						
						<Setter
							Property="HorizontalContentAlignment"
							Value="Stretch" />
						
						<EventSetter
							Event="PreviewMouseMove"
							Handler="ListBoxItem_PreviewMouseMove" />
						
					</Style>
				</ListBox.ItemContainerStyle>

				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border
							BorderThickness="1"
							Padding="5"
							Margin="10,5,10,5"
							CornerRadius="5"
							BorderBrush="{ui:ThemeResource TextFillColorPrimaryBrush}">

							<DockPanel
								LastChildFill="True">
								
								<StackPanel
									Margin="20,5,15,5"
									Orientation="Horizontal"
									DockPanel.Dock="Right"
									HorizontalAlignment="Right">

									<ui:Button
                                        Appearance="Danger"
                                        CommandParameter="{Binding}"
										ToolTip="{DynamicResource MainWindow.ToolTipRemove}"
										Command="{Binding DataContext.RemoveServerCommand, RelativeSource={RelativeSource AncestorType=Window}}">
										
										<ui:SymbolIcon
                                            Symbol="Delete12"
                                            Width="16"
                                            Height="16" />
										
									</ui:Button>
								</StackPanel>

								<TextBlock
									VerticalAlignment="Center"
									Margin="10,0"
									Text="{Binding}"
									Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
								
							</DockPanel>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>
		
		<StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

			<ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

			<ui:Button
                Width="80"
                Margin="10"
                Appearance="Info"
				Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}"
				Content="{DynamicResource MainWindow.ButtonOk}"
				ToolTip="{DynamicResource MainWindow.ToolTipConfirmConfig}">
			</ui:Button>
			
			<ui:Button
                Width="80"
                Margin="10"
                IsCancel="True"
                Click="ButtonCancel_Click"
				Content="{DynamicResource MainWindow.ButtonCancel}"
				ToolTip="{DynamicResource MainWindow.ToolTipCancelConfig}">
			</ui:Button>
			
		</StackPanel>
	</Grid>
</core:WpfUIPlatformWindow>
