<UserControl
    x:Class="RevitClashDetective.Views.CommentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitClashDetective.Views"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:vms="clr-namespace:RevitClashDetective.ViewModels.Navigator"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance vms:ClashCommentViewModel, IsDesignTimeCreatable=False}">
    <Border
        BorderThickness="1"
        Padding="14 8">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="0 0 0 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="0">
                    <dx:DXImage
                        Source="{dx:DXImage 'Images/People/User_16x16.png'}"
                        Width="14"
                        Height="14"
                        Margin="0 0 4 0" />
                    <TextBlock
                        Text="{Binding Author}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <TextBlock
                    Grid.Column="1"
                    Text="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}"
                    VerticalAlignment="Center" />
            </Grid>

            <dxe:TextEdit
                Grid.Row="1"
                Text="{Binding Body, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MinHeight="60"
                MaxHeight="200"
                VerticalScrollBarVisibility="Auto"
                ShowBorder="True"
                VerticalContentAlignment="Top"
                Padding="4">
                <dxe:TextEdit.StyleSettings>
                    <dxe:TextEditStyleSettings />
                </dxe:TextEdit.StyleSettings>
            </dxe:TextEdit>
        </Grid>
    </Border>
</UserControl>