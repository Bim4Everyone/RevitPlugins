<core:WpfUIPlatformWindow
    x:Class="RevitClashDetective.Views.FilterCreatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RevitClashDetective.ViewModels.FilterCreatorViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    Height="450"
    Width="1000"
    MinHeight="300"
    MinWidth="500"
    d:DataContext="{d:DesignInstance vm:FiltersViewModel, IsDesignTimeCreatable=False}">

    <i:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding OpenFileDialogService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}" />
    </i:Interaction.Behaviors>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid Margin="8 0">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1.5*"
                MinWidth="200" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="2*"
                MinWidth="200" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="4*"
                MinWidth="200" />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Title="{me:LocalizationSource FilterCreation.Title}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="0 0 0 8"
            Style="{StaticResource CustomBorder}">
            <DockPanel>
                <ui:Button
                    ToolTip="{me:LocalizationSource FilterCreation.Load}"
                    Command="{Binding LoadCommand}"
                    Content="{ui:SymbolIcon Symbol=ArrowDownload20}" />
                <ui:Button
                    Margin="8 0"
                    ToolTip="{me:LocalizationSource FilterCreation.Save}"
                    Command="{Binding SaveCommand}"
                    Content="{ui:SymbolIcon Symbol=Save20}" />
                <ui:Button
                    ToolTip="{me:LocalizationSource FilterCreation.SaveAs}"
                    Command="{Binding SaveAsCommand}"
                    Content="{ui:SymbolIcon Symbol=SaveEdit20}" />
            </DockPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <DockPanel
                    DockPanel.Dock="Top">
                    <Label
                        DockPanel.Dock="Top"
                        Margin="0 0 0 4"
                        VerticalAlignment="Center"
                        Content="{me:LocalizationSource FilterCreation.SearchSets}" />
                    <ui:Button
                        ToolTip="{me:LocalizationSource FilterCreation.AddSearchSet}"
                        Command="{Binding CreateCommand}"
                        CommandParameter="{Binding ElementName=ViewFilterCreator}"
                        Content="{ui:SymbolIcon Symbol=Add20}" />
                    <ui:Button
                        Margin="4 0"
                        ToolTip="{me:LocalizationSource FilterCreation.RenameSearchSet}"
                        Command="{Binding RenameCommand}"
                        CommandParameter="{Binding ElementName=ViewFilterCreator}"
                        Content="{ui:SymbolIcon Symbol=Rename20}" />
                    <ui:Button
                        Appearance="Danger"
                        ToolTip="{me:LocalizationSource FilterCreation.DeleteSearchSet}"
                        Command="{Binding DeleteCommand}"
                        Content="{ui:SymbolIcon Symbol=Delete20}" />
                </DockPanel>
                <ui:ListView
                    Margin="0 4 0 0"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Filters}"
                    SelectedItem="{Binding SelectedFilter, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger
                            EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding SelectedFilterChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ui:ListView>
            </DockPanel>
        </Border>

        <GridSplitter
            Grid.Row="2"
            Grid.Column="1"
            Style="{StaticResource CustomGridSplitter}" />

        <Border
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <Label
                    DockPanel.Dock="Top"
                    Content="{me:LocalizationSource FilterCreation.Categories}" />
                <ContentControl
                    DataContext="{Binding SelectedFilter}"
                    DataContextChanged="CategoryControl_DataContextChanged" />
            </DockPanel>
        </Border>

        <GridSplitter
            Grid.Row="2"
            Grid.Column="3"
            Style="{StaticResource CustomGridSplitter}" />

        <Border
            Grid.Row="2"
            Grid.Column="4"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <Label
                    DockPanel.Dock="Top"
                    Content="{me:LocalizationSource FilterCreation.Criteria}" />
                <ScrollViewer>
                    <ContentControl
                        DataContext="{Binding SelectedFilter.Set}"
                        DataContextChanged="CriterionControl_DataContextChanged" />
                </ScrollViewer>
            </DockPanel>
        </Border>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="8"
                Text="{Binding ErrorText}"
                Style="{StaticResource CustomErrorText}" />
            <ui:TextBlock
                Margin="8"
                Text="{Binding MessageText}"
                Style="{StaticResource CustomMessageText}" />
            <ui:Button
                Margin="8"
                Click="ButtonOk_Click"
                ToolTip="{me:LocalizationSource FilterCreation.CheckSetButtonTooltip}"
                Content="{me:LocalizationSource FilterCreation.CheckSetButton}"
                Command="{Binding CheckSearchSetCommand}" />
            <ui:Button
                Margin="8"
                Width="80"
                Appearance="Info"
                IsDefault="True"
                Click="ButtonOk_Click"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding SaveCommand}" />
            <ui:Button
                Margin="8 8 0 8"
                Width="80"
                IsCancel="true"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
