<UserControl
    x:Class="RevitClashDetective.Views.Settings.ElementVisibilitySettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitClashDetective.Views.Settings"
    xmlns:vms="clr-namespace:RevitClashDetective.ViewModels.Settings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    x:Name="_this"
    mc:Ignorable="d"
    d:Background="White"
    d:DesignHeight="50"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vms:ElementVisibilitySettingsViewModel, IsDesignTimeCreatable=False}">

    <DockPanel>
        <Label
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="{Binding ColorLabel}" />
        <Rectangle
            Width="30"
            Height="30"
            Margin="10 0 20 0"
            StrokeThickness="1"
            RadiusX="4"
            RadiusY="4"
            VerticalAlignment="Center"
            Stroke="{DynamicResource CardBorderBrush}">
            <Rectangle.Fill>
                <SolidColorBrush
                    Color="{Binding Color}" />
            </Rectangle.Fill>
            <i:Interaction.Triggers>
                <i:EventTrigger
                    EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction
                        Command="{Binding ResetColorCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Rectangle>
        <Label
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="{Binding TransparencyLabel}" />
        <Slider
            Margin="10 0"
            Width="100"
            Minimum="0"
            Maximum="100"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Value="{Binding Transparency, UpdateSourceTrigger=PropertyChanged}" />
        <ui:TextBox
            Width="50"
            MinWidth="50"
            ClearButtonEnabled="False"
            HorizontalAlignment="Left"
            Text="{Binding Transparency, UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
</UserControl>
