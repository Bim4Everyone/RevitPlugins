<core:WpfUIPlatformWindow
    x:Class="RevitClashDetective.Views.Settings.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:RevitClashDetective.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitClashDetective.ViewModels.Settings"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{me:LocalizationSource SettingsWindow.Title}"
    Width="450"
    Height="400"
    MinWidth="450"
    MinHeight="400"
    MaxWidth="450"
    MaxHeight="400"
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance vms:SettingsViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <Style
            TargetType="Border"
            x:Key="CustomBorder">
            <Setter
                Property="Padding"
                Value="20" />
            <Setter
                Property="VerticalAlignment"
                Value="Stretch" />
            <Setter
                Property="HorizontalAlignment"
                Value="Stretch" />
            <Setter
                Property="SnapsToDevicePixels"
                Value="True" />
            <Setter
                Property="OverridesDefaultStyle"
                Value="True" />
            <Setter
                Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Disabled" />
            <Setter
                Property="Background"
                Value="{DynamicResource CardBackground}" />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource CardBorderBrush}" />
            <Setter
                Property="BorderThickness"
                Value="{DynamicResource CardControlBorderThemeThickness}" />
            <Setter
                Property="FocusVisualStyle"
                Value="{DynamicResource DefaultControlFocusVisualStyle}" />
            <Setter
                Property="CornerRadius"
                Value="{DynamicResource ControlCornerRadius}" />
        </Style>
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource SettingsWindow.Title}" />

        <StackPanel
            Grid.Row="1">
            <Border
                Margin="10 10 10 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Margin="0 0 0 10"
                        Content="{me:LocalizationSource SettingsWindow.MainElementVisibilitySettings}" />
                    <ContentControl
                        Content="{Binding MainElementVisibilitySettings}">
                        <ContentControl.ContentTemplate>
                            <DataTemplate
                                DataType="{x:Type vms:ElementVisibilitySettingsViewModel}">
                                <local:ElementVisibilitySettingsView
                                    DataContext="{Binding}" />
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </StackPanel>
            </Border>
            <Border
                Margin="10 0 10 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Margin="0 0 0 10"
                        Content="{me:LocalizationSource SettingsWindow.SecondElementVisibilitySettings}" />
                    <ContentControl
                        Content="{Binding SecondElementVisibilitySettings}">
                        <ContentControl.ContentTemplate>
                            <DataTemplate
                                DataType="{x:Type vms:ElementVisibilitySettingsViewModel}">
                                <local:ElementVisibilitySettingsView
                                    DataContext="{Binding}" />
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource Ok}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource Cancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
