<core:WpfUIPlatformWindow
    x:Class="RevitClashDetective.Views.Settings.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:RevitClashDetective.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitClashDetective.ViewModels.Settings"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Title="{me:LocalizationSource SettingsWindow.Title}"
    Width="550"
    Height="550"
    MinWidth="830"
    MinHeight="500"
    d:DataContext="{d:DesignInstance vms:SettingsViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <Style
            TargetType="Border"
            x:Key="CustomBorder">
            <Setter
                Property="Padding"
                Value="14 8" />
            <Setter
                Property="VerticalAlignment"
                Value="Stretch" />
            <Setter
                Property="HorizontalAlignment"
                Value="Stretch" />
            <Setter
                Property="SnapsToDevicePixels"
                Value="True" />
            <Setter
                Property="OverridesDefaultStyle"
                Value="True" />
            <Setter
                Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
            <Setter
                Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Disabled" />
            <Setter
                Property="Background"
                Value="{DynamicResource CardBackground}" />
            <Setter
                Property="BorderBrush"
                Value="{DynamicResource CardBorderBrush}" />
            <Setter
                Property="BorderThickness"
                Value="{DynamicResource CardControlBorderThemeThickness}" />
            <Setter
                Property="FocusVisualStyle"
                Value="{DynamicResource DefaultControlFocusVisualStyle}" />
            <Setter
                Property="CornerRadius"
                Value="{DynamicResource ControlCornerRadius}" />
        </Style>
        <ui:TextBlock
            x:Key="RemoveParamTooltip"
            Text="{me:LocalizationSource SettingsWindow.RemoveParamTooltip}" />
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger
            EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Title="{me:LocalizationSource SettingsWindow.Title}" />

        <StackPanel
            Grid.Row="1">
            <Border
                Margin="10 10 10 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Margin="0 0 0 10"
                        Content="{me:LocalizationSource SettingsWindow.MainElementVisibilitySettings}" />
                    <local:ElementVisibilitySettingsView
                        DataContext="{Binding MainElementVisibilitySettings}" />
                </StackPanel>
            </Border>
            <Border
                Margin="10 0 10 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Margin="0 0 0 10"
                        Content="{me:LocalizationSource SettingsWindow.SecondElementVisibilitySettings}" />
                    <local:ElementVisibilitySettingsView
                        DataContext="{Binding SecondElementVisibilitySettings}" />
                </StackPanel>
            </Border>
            <Border
                Margin="10 0 10 10"
                Style="{StaticResource CustomBorder}">
                <StackPanel>
                    <Label
                        Margin="0 0 0 10"
                        Content="{me:LocalizationSource SettingsWindow.SectionBoxSettings}" />
                    <StackPanel>
                        <DockPanel
                            Margin="0 0 0 5"
                            VerticalAlignment="Center">
                            <Label
                                Width="150"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="{me:LocalizationSource SettingsWindow.SectionBoxModeSettings}" />
                            <ComboBox
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding SelectedSectionBoxMode}"
                                ItemsSource="{Binding SectionBoxModes}" />
                        </DockPanel>
                        <DockPanel
                            VerticalAlignment="Center">
                            <Label
                                Width="150"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="{me:LocalizationSource SettingsWindow.SectionBoxAdditionalSize}" />
                            <ui:TextBox
                                Text="{Binding SectionBoxOffset, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0 10 10 10"
            ToolTip="{me:LocalizationSource SettingsWindow.ParamsTooltip}"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <Label
                    DockPanel.Dock="Top"
                    Content="{me:LocalizationSource SettingsWindow.ParamsLabel}" />
                <DockPanel
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Left">
                    <ui:Button
                        Width="Auto"
                        Margin="5 0"
                        ToolTip="{me:LocalizationSource SettingsWindow.AddParamTooltip}"
                        Content="{ui:SymbolIcon Symbol=Add20}"
                        Command="{Binding AddParamCommand}" />
                    <ui:Button
                        Width="Auto"
                        Margin="0"
                        ToolTip="{me:LocalizationSource SettingsWindow.RemoveParamTooltip}"
                        Content="{ui:SymbolIcon Symbol=Delete20}"
                        Command="{Binding RemoveParamCommand}"
                        CommandParameter="{Binding SelectedParam}" />
                    <ui:Button
                        Margin="5 0"
                        Width="Auto"
                        ToolTip="{me:LocalizationSource SettingsWindow.MoveParamUpTooltip}"
                        Content="{ui:SymbolIcon Symbol=ArrowUp20}"
                        Command="{Binding MoveParamUpCommand}"
                        CommandParameter="{Binding SelectedParam}" />
                    <ui:Button
                        Width="Auto"
                        ToolTip="{me:LocalizationSource SettingsWindow.MoveParamDownTooltip}"
                        Content="{ui:SymbolIcon Symbol=ArrowDown20}"
                        Command="{Binding MoveParamDownCommand}"
                        CommandParameter="{Binding SelectedParam}" />
                </DockPanel>
                <ui:ListView
                    SelectionMode="Single"
                    ItemsSource="{Binding Params}"
                    SelectedItem="{Binding SelectedParam}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Style="{StaticResource CustomBorder}">
                                <DockPanel
                                    LastChildFill="True">
                                    <ui:Button
                                        Margin="5 0 0 0"
                                        Width="Auto"
                                        Height="36"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                        ToolTip="{StaticResource RemoveParamTooltip}"
                                        Content="{ui:SymbolIcon Symbol=Delete20}"
                                        Command="{Binding DataContext.RemoveParamCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" />
                                    <ui:TextBox
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                        ToolTip="{Binding Name}" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ui:ListView>
            </DockPanel>
        </Border>

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:TextBlock
                Margin="10"
                Foreground="Orange"
                VerticalAlignment="Center"
                Text="{Binding ErrorText}" />

            <ui:Button
                Margin="10"
                Width="80"
                Appearance="Info"
                Content="{me:LocalizationSource Ok}"
                Click="ButtonOk_Click"
                Command="{Binding AcceptViewCommand}" />

            <ui:Button
                Margin="10"
                Width="80"
                Content="{me:LocalizationSource Cancel}"
                IsCancel="True"
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
