<core:WpfUIPlatformWindow
    x:Class="RevitClashDetective.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitClashDetective.Views"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    xmlns:clashDetective="clr-namespace:RevitClashDetective.ViewModels.ClashDetective"
    xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:converters="clr-namespace:dosymep.WpfCore.Converters;assembly=dosymep.WpfCore"
    mc:Ignorable="d"
    Height="450"
    Width="800"
    MinHeight="400"
    MinWidth="700"
    d:DataContext="{d:DesignInstance clashDetective:MainViewModel, IsDesignTimeCreatable=False}">
    <i:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding OpenFileDialogService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}" />
    </i:Interaction.Behaviors>
    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Closing">
            <i:InvokeCommandAction
                Command="{Binding AskForSaveCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Resources/CustomStyles.xaml" />
                <ResourceDictionary
                    Source="../Resources/CustomDataGrid.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/DataGrid/DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:TextBlock
                x:Key="NameLabel"
                Text="{me:LocalizationSource MainWindow.NameLabel}" />
            <ui:TextBlock
                x:Key="FirstSelectionLabel"
                Text="{me:LocalizationSource MainWindow.FirstSelectionLabel}" />
            <ui:TextBlock
                x:Key="SecondSelectionLabel"
                Text="{me:LocalizationSource MainWindow.SecondSelectionLabel}" />
            <ui:TextBlock
                x:Key="ShowClashesTooltip"
                Text="{me:LocalizationSource MainWindow.ShowClashes}" />
            <converters:StringToVisibilityConverter
                x:Key="StringToVisibilityConverter" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="8 0"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <DockPanel
                    Margin="0 0 0 8"
                    DockPanel.Dock="Top">
                    <ui:Button
                        ToolTip="{me:LocalizationSource MainWindow.Load}"
                        Command="{Binding LoadClashCommand}"
                        Content="{ui:SymbolIcon Symbol=ArrowDownload20}" />

                    <ui:Button
                        Margin="8 0"
                        ToolTip="{me:LocalizationSource MainWindow.Save}"
                        Command="{Binding SaveClashesCommand}"
                        Content="{ui:SymbolIcon Symbol=Save20}" />

                    <ui:Button
                        ToolTip="{me:LocalizationSource MainWindow.SaveAs}"
                        Command="{Binding SaveAsClashesCommand}"
                        Content="{ui:SymbolIcon Symbol=SaveEdit20}" />

                    <ui:Button
                        Margin="8 0"
                        ToolTip="{me:LocalizationSource MainWindow.AddCheck}"
                        Command="{Binding AddCheckCommand}"
                        Content="{ui:SymbolIcon Symbol=Add20}" />

                    <ui:Button
                        Appearance="Danger"
                        ToolTip="{me:LocalizationSource MainWindow.DeleteCheck}"
                        CommandParameter="{Binding SelectedItems, ElementName=ChecksGrid}"
                        Command="{Binding RemoveCheckCommand}"
                        Content="{ui:SymbolIcon Symbol=Delete20}" />

                    <ui:TextBox
                        DockPanel.Dock="Right"
                        MinWidth="300"
                        MaxWidth="300"
                        HorizontalAlignment="Right"
                        Text="{Binding ChecksFilter, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="{me:LocalizationSource MainWindow.CheckSearch}" />
                </DockPanel>
                <ui:DataGrid
                    x:Name="ChecksGrid"
                    SelectionMode="Extended"
                    AutoGenerateColumns="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    GridLinesVisibility="Horizontal"
                    Style="{StaticResource CustomResizableDataGridStyle}"
                    SelectedItem="{Binding SelectedCheck}"
                    ItemsSource="{Binding Checks.View, UpdateSourceTrigger=PropertyChanged}">
                    <ui:DataGrid.CellStyle>
                        <Style
                            TargetType="DataGridCell"
                            BasedOn="{StaticResource DefaultDataGridCellStyle}">
                            <Setter
                                Property="VerticalAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="VerticalContentAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="HorizontalAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="HorizontalContentAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="Padding"
                                Value="2 0" />
                        </Style>
                    </ui:DataGrid.CellStyle>

                    <ui:DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="Auto"
                            CanUserResize="False"
                            CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel
                                        HorizontalAlignment="Center">
                                        <ui:SymbolIcon
                                            Symbol="Warning20"
                                            Visibility="{Binding ErrorText, Converter={StaticResource StringToVisibilityConverter}}"
                                            ToolTip="{Binding ErrorText}">
                                        </ui:SymbolIcon>
                                        <CheckBox
                                            Padding="0"
                                            Margin="4 0 0 0"
                                            IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="150"
                            CanUserSort="True"
                            SortMemberPath="Name"
                            Header="{StaticResource NameLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBox
                                        VerticalContentAlignment="Center"
                                        ToolTip="{Binding Name}"
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="*"
                            CanUserSort="False"
                            Header="{StaticResource FirstSelectionLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <local:SelectionView
                                        DataContext="{Binding FirstSelection, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="*"
                            CanUserSort="False"
                            Header="{StaticResource SecondSelectionLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <local:SelectionView
                                        DataContext="{Binding SecondSelection, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="Auto"
                            CanUserResize="False"
                            CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Click="ButtonOk_Click"
                                        Command="{Binding ShowClashesCommand}"
                                        ToolTip="{StaticResource ShowClashesTooltip}"
                                        Content="{ui:SymbolIcon Symbol=Notebook20}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </DockPanel>
        </Border>

        <ContentPresenter
            Grid.Row="0"
            Grid.RowSpan="3"
            x:Name="_rootContentDialog" />

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="8"
                Text="{Binding ErrorText}"
                Style="{StaticResource CustomErrorText}" />
            <ui:TextBlock
                Margin="8"
                Text="{Binding MessageText}"
                Style="{StaticResource CustomMessageText}" />
            <ui:Button
                Width="80"
                Margin="8"
                IsDefault="True"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding FindClashesCommand}" />
            <ui:Button
                Margin="8"
                Width="80"
                IsCancel="true"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>