<core:WpfUIPlatformWindow
    x:Class="RevitClashDetective.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitClashDetective.Views"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:wpfbehaviors="clr-namespace:dosymep.WpfCore.Behaviors;assembly=dosymep.WpfCore"
    xmlns:clashDetective="clr-namespace:RevitClashDetective.ViewModels.ClashDetective"
    xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    mc:Ignorable="d"
    Height="450"
    Width="800"
    MinHeight="400"
    MinWidth="700"
    d:DataContext="{d:DesignInstance clashDetective:MainViewModel, IsDesignTimeCreatable=False}">
    <i:Interaction.Behaviors>
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding MessageBoxService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding OpenFileDialogService}" />
        <wpfbehaviors:WpfAttachServiceBehavior
            AttachableService="{Binding SaveFileDialogService}" />
    </i:Interaction.Behaviors>

    <core:WpfUIPlatformWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Resources/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource
                x:Key="SortedChecks"
                Source="{Binding Checks}">
                <CollectionViewSource.SortDescriptions>
                    <cm:SortDescription
                        PropertyName="Name"
                        Direction="Ascending" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>
            <ui:TextBlock
                x:Key="NameLabel"
                Text="{me:LocalizationSource MainWindow.NameLabel}" />
            <ui:TextBlock
                x:Key="FirstSelectionLabel"
                Text="{me:LocalizationSource MainWindow.FirstSelectionLabel}" />
            <ui:TextBlock
                x:Key="SecondSelectionLabel"
                Text="{me:LocalizationSource MainWindow.SecondSelectionLabel}" />
            <ui:TextBlock
                x:Key="ShowCleshesTooltip"
                Text="{me:LocalizationSource MainWindow.ShowClashes}" />
        </ResourceDictionary>
    </core:WpfUIPlatformWindow.Resources>

    <Grid
        Margin="8 0">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource MainWindow.Title}" />

        <Border
            Grid.Row="1"
            Margin="0 0 0 8"
            Style="{StaticResource CustomBorder}">
            <DockPanel>
                <ui:Button
                    ToolTip="{me:LocalizationSource MainWindow.Load}"
                    Command="{Binding LoadClashCommand}"
                    Content="{ui:SymbolIcon Symbol=ArrowDownload20}" />

                <ui:Button
                    Margin="8 0"
                    ToolTip="{me:LocalizationSource MainWindow.Save}"
                    Command="{Binding SaveClashesCommand}"
                    Content="{ui:SymbolIcon Symbol=Save20}" />

                <ui:Button
                    ToolTip="{me:LocalizationSource MainWindow.SaveAs}"
                    Command="{Binding SaveAsClashesCommand}"
                    Content="{ui:SymbolIcon Symbol=SaveEdit20}" />

                <ui:Button
                    Margin="8 0"
                    ToolTip="{me:LocalizationSource MainWindow.AddCheck}"
                    Command="{Binding AddCheckCommand}"
                    Content="{ui:SymbolIcon Symbol=Add20}" />

                <ui:Button
                    Appearance="Danger"
                    ToolTip="{me:LocalizationSource MainWindow.DeleteCheck}"
                    CommandParameter="{Binding SelectedCheck}"
                    Command="{Binding RemoveCheckCommand}"
                    Content="{ui:SymbolIcon Symbol=Delete20}" />
            </DockPanel>
        </Border>

        <Border
            Grid.Row="2"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <ui:TextBox
                    DockPanel.Dock="Top"
                    MinWidth="300"
                    MaxWidth="300"
                    HorizontalAlignment="Right"
                    PlaceholderText="{me:LocalizationSource MainWindow.CheckSearch}" />
                <ui:DataGrid
                    SelectionMode="Single"
                    AutoGenerateColumns="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    SelectedItem="{Binding SelectedCheck}"
                    ItemsSource="{Binding Source={StaticResource SortedChecks}}">

                    <ui:DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Width="Auto"
                            CanUserSort="False"
                            Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />

                        <DataGridTemplateColumn
                            Width="Auto"
                            CanUserSort="True"
                            SortMemberPath="Name"
                            Header="{StaticResource NameLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:TextBox
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="*"
                            CanUserSort="False"
                            Header="{StaticResource FirstSelectionLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <local:ProviderComboBox
                                        DataContext="{Binding Row.FirstSelection, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="*"
                            CanUserSort="False"
                            Header="{StaticResource SecondSelectionLabel}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <local:ProviderComboBox
                                        DataContext="{Binding SecondSelection, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="Auto"
                            CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Click="ButtonOk_Click"
                                        Height="36"
                                        Command="{Binding ShowClashesCommand}"
                                        ToolTip="{StaticResource ShowCleshesTooltip}"
                                        Content="{ui:SymbolIcon Symbol=Notebook20}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </DockPanel>
        </Border>

        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:TextBlock
                Margin="8"
                Text="{Binding ErrorText}"
                Style="{StaticResource CustomErrorText}" />
            <ui:TextBlock
                Margin="8"
                Text="{Binding MessageText}"
                Style="{StaticResource CustomMessageText}" />
            <ui:Button
                Width="80"
                Margin="8"
                IsDefault="True"
                Content="{me:LocalizationSource Ok}"
                Command="{Binding FindClashesCommand}" />
            <ui:Button
                Margin="8 8 0 8"
                Width="80"
                IsCancel="true"
                Click="ButtonCancel_Click"
                Content="{me:LocalizationSource Cancel}" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>