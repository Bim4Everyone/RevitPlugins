<core:WpfUIPlatformUserControl
    x:Class="RevitClashDetective.Views.SelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:RevitClashDetective.ViewModels.ClashDetective"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:res="clr-namespace:RevitClashDetective.Resources"
    mc:Ignorable="d"
    MinWidth="100"
    d:DataContext="{d:DesignInstance vm:SelectionViewModel, IsDesignTimeCreatable=False}">
    <core:WpfUIPlatformUserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Resources/CustomStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Wpf.Ui;component/Controls/TextBlock/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <res:CollectionToStringConverter
                x:Key="CollectionToStringConverter"
                Separator="; " />
            <Style
                x:Key="TextBlockAsLabel"
                TargetType="{x:Type ui:TextBlock}">
                <Setter
                    Property="Focusable"
                    Value="False" />
                <Setter
                    Property="TextWrapping"
                    Value="Wrap" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
                <Setter
                    Property="Foreground"
                    Value="{DynamicResource LabelForeground}" />
                <Setter
                    Property="SnapsToDevicePixels"
                    Value="True" />
            </Style>
        </ResourceDictionary>
    </core:WpfUIPlatformUserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Style="{StaticResource CustomBorder}">
            <DockPanel
                LastChildFill="True">
                <ui:Button
                    DockPanel.Dock="Right"
                    Command="{Binding SelectFilesCommand}"
                    Content="{ui:SymbolIcon Symbol=Edit20}" />
                <ui:TextBlock
                    Text="{me:LocalizationSource MainWindow.SelectFilesLabel}">
                    <ui:TextBlock.Style>
                        <Style
                            BasedOn="{StaticResource TextBlockAsLabel}"
                            TargetType="ui:TextBlock">
                            <Setter
                                Property="Visibility"
                                Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding DataContext.SelectedFiles.Count, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="0">
                                    <Setter
                                        Property="Visibility"
                                        Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:TextBlock.Style>
                </ui:TextBlock>
                <ui:TextBlock
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedFiles, Converter={StaticResource CollectionToStringConverter}}" />
            </DockPanel>
        </Border>
        <Border
            Style="{StaticResource CustomBorder}"
            Grid.Column="1">
            <DockPanel
                LastChildFill="True">
                <ui:Button
                    DockPanel.Dock="Right"
                    Command="{Binding SelectProvidersCommand}"
                    Content="{ui:SymbolIcon Symbol=Edit20}" />
                <ui:TextBlock
                    Text="{me:LocalizationSource MainWindow.SelectSearchSetsLabel}">
                    <ui:TextBlock.Style>
                        <Style
                            BasedOn="{StaticResource TextBlockAsLabel}"
                            TargetType="ui:TextBlock">
                            <Setter
                                Property="Visibility"
                                Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding DataContext.SelectedProviders.Count, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="0">
                                    <Setter
                                        Property="Visibility"
                                        Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:TextBlock.Style>
                </ui:TextBlock>
                <ui:TextBlock
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedProviders, Converter={StaticResource CollectionToStringConverter}}" />
            </DockPanel>
        </Border>
    </Grid>
</core:WpfUIPlatformUserControl>