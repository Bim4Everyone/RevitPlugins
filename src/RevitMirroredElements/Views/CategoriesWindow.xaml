<Window
    x:Class="RevitMirroredElements.Views.CategoriesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitMirroredElements.Views"
    xmlns:conv="clr-namespace:dosymep.WPF.Converters"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    Title="Проверка на зеркальность"
    Height="450"
    Width="300">

    <Window.Resources>
        <conv:BoolToVisibilityConverter
            x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger
            EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <StackPanel
            Margin="10">
            <Grid>
                <TextBox
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,5,0,5"
                    VerticalAlignment="Center" />
                <TextBlock
                    Text="Введите для поиска..."
                    IsHitTestVisible="False"
                    Margin="5,5,0,5"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                Height="300">
                <DataGrid
                    ItemsSource="{Binding FilteredCategories, UpdateSourceTrigger=PropertyChanged}"
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    Margin="0,0,0,15"
                    CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="Категория"
                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

            <CheckBox
                Content="Выбрать все / Отменить все"
                Margin="5,10,0,5"
                IsChecked="{Binding AllCategoriesSelected, Mode=TwoWay}"
                HorizontalAlignment="Left" />
            <Button
                Margin="10"
                Width="100"
                Content="Выполнить"
                Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window> 