<core:WpfUIPlatformWindow 
    x:Class="RevitReinforcementCoefficient.Views.ReportWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    
    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitReinforcementCoefficient.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
        
    Title="Отчет об ошибках" 
    Height="450" Width="750"
    MinHeight="450" MinWidth="750"
        
    d:DataContext="{d:DesignInstance vms:ReportViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <Style
            TargetType="Border">
            <Setter
                Property="Background"
                Value="{ui:ThemeResource LayerOnAcrylicFillColorDefaultBrush}" />
            <Setter
                Property="BorderBrush"
                Value="{ui:ThemeResource TextFillColorDisabledBrush}" />
            <Setter
                Property="BorderThickness"
                Value="1" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="{me:LocalizationSource ReportWindow.Title}"
            FontSize="16" />

        <Border
            Grid.Row="1"
            Margin="10 5"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Margin="10 10 10 0"
                    VerticalAlignment="Center"
                    Content="Ниже представлены элементы, работа с которыми привела к ошибкам (они подсчитаны не были):" />

                <ui:DataGrid
                    Grid.Row="1"
                    Margin="5"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow"
                    AutoGenerateColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    CanUserReorderColumns="False"
                    RowStyle="{x:Null}"
                    GridLinesVisibility="All"
                    ItemsSource="{Binding 
                         Path=ReportItems, 
                         UpdateSourceTrigger=PropertyChanged, 
                         Mode=TwoWay}">

                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Binding="{Binding Path=IsCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Header="Выбор" />

                        <DataGridTextColumn
                            Binding="{Binding Path=ErrorName}"
                            Header="Наименование"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Binding="{Binding Path=ElementIdsAsString}"
                            Header="ID элементов"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </ui:DataGrid>
            </Grid>
        </Border>

        
        
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <ui:Button
                Margin="10"
                Width="170"
                Content="Выделить выбранное"
                Command="{Binding Path=ShowSelectedErrorElementsCommand}" />

            <ui:Button
                Margin="10"
                Width="100"
                Appearance="Info"
                Content="Закрыть"
                IsDefault="True"
                Click="ButtonTestForHide_Click"/>
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
