<core:WpfUIPlatformWindow
    x:Class="RevitCorrectNamingCheck.Views.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:vms="clr-namespace:RevitCorrectNamingCheck.ViewModels"
    xmlns:core="clr-namespace:dosymep.WpfUI.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:me="clr-namespace:dosymep.WpfCore.MarkupExtensions;assembly=dosymep.WpfCore"
    xmlns:local="clr-namespace:RevitCorrectNamingCheck.Views.Selectors"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"

    Title="{me:LocalizationSource MainWindow.Title}"

    Width="600"
    Height="400"

    MinWidth="600"
    MinHeight="400"
    
    d:DataContext="{d:DesignInstance vms:MainViewModel, IsDesignTimeCreatable=False}">

    <b:Interaction.Triggers>
        <b:EventTrigger
        EventName="Loaded">
            <b:InvokeCommandAction
            Command="{Binding LoadViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/WorksetTemplates.xaml" />
                <ResourceDictionary Source="Templates/LinkedFileTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
        Grid.Row="0"
        Title="{me:LocalizationSource MainWindow.Title}"/>

        <DataGrid 
          Grid.Row="1"
          ItemsSource="{Binding LinkedFiles}"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          GridLinesVisibility="All"          
          Margin="10,30,10,10"
          IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{me:LocalizationSource MainWindow.LinkedFile}">
                    <DataGridTemplateColumn.CellTemplate>
                        <StaticResource ResourceKey="LinkedFileTemplate"/>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="{me:LocalizationSource MainWindow.WorksetType}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl 
                                Content="{Binding TypeWorkset}"
                                ContentTemplateSelector="{StaticResource WorksetSelector}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="{me:LocalizationSource MainWindow.Instance}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl 
                                Content="{Binding InstanceWorkset}"
                                ContentTemplateSelector="{StaticResource WorksetSelector}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
        Grid.Row="2"
        Orientation="Horizontal"
        HorizontalAlignment="Right">
            
            <ui:Button
            Margin="10"
            Width="90"
            Appearance="Info"
            Content="{me:LocalizationSource MainWindow.ButtonRefresh}"
            Command="{Binding LoadViewCommand}"  />

            <ui:Button
            Margin="10"
            Width="80"
            Content="{me:LocalizationSource MainWindow.ButtonCancel}"
            IsCancel="True"
            Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</core:WpfUIPlatformWindow>
