<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:RevitCorrectNamingCheck.Models">

    <DataTemplate
        x:Key="LinkedFileTemplate"
        DataType="{x:Type models:LinkedFile}">
        <Border
            x:Name="StatusBorder"
            Padding="6,2"
            CornerRadius="6"
            Background="Transparent">

            <TextBlock
                Foreground="Black"
                Text="{Binding Name}" />
        </Border>

        <DataTemplate.Triggers>
            <DataTrigger
                Value="None"
                Binding="{Binding FileNameStatus}">

                <Setter
                    TargetName="StatusBorder"
                    Property="Background"
                    Value="LightYellow" />

                <Setter
                    TargetName="StatusBorder"
                    Property="ToolTip"
                    Value="{DynamicResource FileNameStatus.NotFoundTags}" />
            </DataTrigger>

            <DataTrigger
                Value="Incorrect"
                Binding="{Binding FileNameStatus}">

                <Setter
                    TargetName="StatusBorder"
                    Property="Background"
                    Value="MistyRose" />

                <Setter
                    TargetName="StatusBorder"
                    Property="ToolTip"
                    Value="{DynamicResource FileNameStatus.MultipleTags}" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>