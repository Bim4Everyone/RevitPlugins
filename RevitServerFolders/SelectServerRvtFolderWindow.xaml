<Window x:Class="RevitServerFolders.SelectServerRvtFolderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitServerFolders"
             mc:Ignorable="d" 
        Title="Выберите папку"
        Height="120" Width="640"
        MaxHeight="120" MaxWidth="640" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:RevitServerViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox x:Name="_ceFilePath" Grid.Column="0" Margin="10" 
                  Text="{Binding Path=CurrentFolder}" />
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,10">
            <Button Name="_btOk" Content="OK" Margin="0,0,90,10" Width="75" IsDefault="True" Click="_btOk_Click" />
            <Button Name="_btCancel" Content="Отмена" Margin="80,0,0,10" Width="75" IsCancel="True" />
        </Grid>
    </StackPanel>
</Window>
