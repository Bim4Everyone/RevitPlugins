<Window x:Class="RevitCreateViewSheet.Views.CreateViewSheetWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitCreateViewSheet.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Title="Создание листов" WindowStartupLocation="CenterOwner"
             x:Name="_this">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Button Content="+" Command="{Binding CreateViewSheetCommand}" />
            <TextBox Text="{Binding CountCreateView}"/>
            <ComboBox ItemsSource="{Binding AlbumsBlueprints}" SelectedItem="{Binding AlbumBlueprints}"/>
        </StackPanel>

        <DataGrid Grid.Column="1" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single"
                  x:Name="_viewSheets"
                  ItemsSource="{Binding ViewSheets}"
                  SelectedItem="{Binding ViewSheet}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="1" Content="Удалить лист" 
                                    Command="{Binding ElementName=_this, Path=DataContext.RemoveViewSheetCommand}"
                                    CommandParameter="{Binding ElementName=_this, Path=DataContext.ViewSheet}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" />
                <DataGridTemplateColumn Header="Основная надпись">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding ElementName=_this, Path=DataContext.FamilyInstances}"
                                SelectedItem="{Binding FamilyInstance}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">
            <TextBlock Margin="10" Text="{Binding ErrorText}" Foreground="Orange" />
            <Button Content="ОК" Margin="10" Click="ButtonOk_Click" Width="80" Command="{Binding CreateViewSheetsCommand}" />
            <Button Content="Отмена" Margin="10" Click="ButtonCancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
