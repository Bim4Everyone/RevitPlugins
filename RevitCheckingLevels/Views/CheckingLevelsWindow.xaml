<base:ThemedPlatformWindow 
    x:Class="RevitCheckingLevels.Views.CheckingLevelsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    xmlns:base="clr-namespace:dosymep.WPF.Views"
    xmlns:local="clr-namespace:RevitCheckingLevels.Views"
    xmlns:vms="clr-namespace:RevitCheckingLevels.ViewModels"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"

    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:converters="clr-namespace:RevitCheckingLevels.Converters"
    xmlns:commands="clr-namespace:RevitCheckingLevels.Commands"

    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    
    Title="MainWindow"
    Height="450" Width="800"

    x:Name="_this"
    d:DataContext="{d:DesignInstance vms:CheckingLevelsViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <ResourceDictionary>
            <commands:DisableCollapseGroupRowCommand x:Key="DisableCollapseGroupRowCommand" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ViewTemplates/GroupRowTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand
            EventName="Loaded" 
            Command="{Binding ViewLoadCommand}"/>

        <dxmvvm:EventToCommand
            SourceName="_gridControl"
            PassEventArgsToCommand="True"
            EventName="GroupRowCollapsing"
            Command="{Binding  
                Source={StaticResource DisableCollapseGroupRowCommand}}"/>
    </dxmvvm:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <dxg:GridControl 
            Grid.Row="0"
            x:Name="_gridControl"
            AutoExpandAllGroups="True"
            ItemsSource="{Binding Levels}"
            SelectedItem="{Binding Level}">

            <dxg:GridControl.View>
                <dxg:TableView 
                    ShowGroupPanel="False"
                    ShowTotalSummary="False"
                    AllowEditing="False"
                    AllowGrouping="False"
                    GroupRowTemplate="{StaticResource GroupRowTemplate}" />
            </dxg:GridControl.View>

            <dxg:GridColumn FieldName="Name" Header="Имя"/>
            <dxg:GridColumn FieldName="MeterElevation" Header="Отметка (м)" />
            <dxg:GridColumn FieldName="MillimeterElevation" Header="Отметка (мм)" />


            <dxg:GridColumn FieldName="ErrorType" Header="Тип ошибки" GroupIndex="0" />
        </dxg:GridControl>


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Height="45">
            <TextBlock
                Margin="10"
                Foreground="Orange"
                Text="{Binding ErrorText}" />

            <dx:SimpleButton 
                Content="ОК" Margin="10" Width="80"
                Command="{Binding ViewCommand}"
                Click="ButtonOk_Click"/>

            <dx:SimpleButton 
                Content="Отмена" Margin="10" Width="80" 
                Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</base:ThemedPlatformWindow>
